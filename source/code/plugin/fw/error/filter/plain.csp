<?php

require_once('fw/error_handler.csp');

class plugin_fw_error_filter_plain extends CB_ErrorMessageFilter
{
    /**
     * @param string $msg
     *
     * @return string
     */
    function filter($msg)
    {
        $msg = preg_replace("#<br[[:space:]]*/{0,1}>#i", "<br />\n", $msg);

        return html_entity_decode(strip_tags($msg));
    }
}


