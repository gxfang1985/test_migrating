<?php

require_once('cbpapi/logic.csp');

/**
 * @param array $error_info
 */
function plugin_fw_error_hook_cbpapi($error_info)
{
    if (grn_cbpapi_get_debug_file_name()) {
        ob_start();
        print_r($error_info);
        $log_message = ob_get_contents();
        ob_end_clean();

        $log_message = "ERROR\n" . html_entity_decode($log_message, ENT_QUOTES);
        grn_cbpapi_debug($log_message);
    }

    // clean up upload temp files
    global $G_state_set;
    if ($G_state_set->get('cbpapi.upload_tmp_files')) {
        require_once('cbpapi/util.csp');
        cbpapi_cleanup_upload_temp_file();
    }
}


