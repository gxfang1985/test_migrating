<?php
//Set Accept Language of browser to Session
function plugin_fw_uum_login_grn_set_accept_language($user)
{
    // Save Accept Language to Session
    if (isset($_SERVER['HTTP_ACCEPT_LANGUAGE'])) {
        $http_accept_language = $_SERVER['HTTP_ACCEPT_LANGUAGE'];
        require_once('fw/session_manager.csp');
        $session_manager = CB_SessionManager::getInstance();
        $session
            = $session_manager->getSession('headers.accept_language');
        $session->set('accept_language', $http_accept_language);
    }
}

