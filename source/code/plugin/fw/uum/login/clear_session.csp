<?php

/**
 * セッションキャッシュをクリアする
 * （戻るボタン等できちんとログアウト時に処分されていなかった場合のため）
 */
function plugin_fw_uum_login_clear_session($user)
{
    $modules = [
        'grn.common.ui',
        'grn.common.calendar',
        'grn.common.org_tree_util'
    ];

    require_once('fw/session_manager.csp');
    $sm = CB_SessionManager::getInstance();
    foreach ($modules as $module) {
        $sm->destroy($module);
    }
}

