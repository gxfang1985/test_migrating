<?php

class plugin_grn_common_personal_03ui extends GRN_PersonalLogicBase
{
    function __construct()
    {
        parent::__construct('ui');
    }

    function getConfigArray()
    {
        $ret = [
            'general' => [
                [
                    'page' => 'personal/ui/config',
                    'icon' => 'general32'
                ],
                [
                    'page' => 'personal/ui/design',
                    'icon' => 'design32'
                ],

                /*
                array( 'page' => 'personal/ui/not_body',
                       'icon' => 'notbody32' ),
                array( 'page' => 'personal/ui/application_menu_list',
                       'icon' => 'appmenu32' ),
                array( 'page' => 'personal/ui/start_menu_list',
                       'icon' => 'startmenu32' )*/
            ]
        ];

        require_once('grn/ui.csp');
        $manager = GRN_UIConfigManager::getInstance();
        $system_config = $manager->getSystemConfig();

        // Setting for a dropdown
        if ($system_config->getCanUserChangeHistory()) {
            $ret['general'][] = [
                'page'       => 'personal/ui/dropdown',
                'url_params' => ['reset' => 1],
                'icon'       => 'pulldownmenu32'
            ];
        }

        // Setting for the header of screen.
        if ($system_config->getCanUserChangeHeaders() === true) {
            $ret['general'][] = [
                'page' => 'personal/ui/not_body',
                'icon' => 'notbody32'
            ];
        }

        return $ret;
    }
}


