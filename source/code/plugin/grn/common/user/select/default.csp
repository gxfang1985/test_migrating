<?php

class plugin_grn_common_user_select_default
{
    /**
     * 指定されたユーザー配列に対しアクセス権制御を行う。
     *
     * @param  array $users  CB_User配列
     * @param  array $params アクセス制御用パラメータ
     *
     * @return array CB_User配列 or NULL
     */
    function evalUsers(& $users, $params)
    {
        if (count($users) <= 0) {
            return null;
        }

        return $users;
    }

    /**
     * 指定されたグループ配列に対しアクセス権制御を行う。
     *
     * @param  array   $groups        CB_Group配列
     * @param  array   $params        アクセス制御用パラメータ
     * @param  boolean $user_pulldown ユーザー選択のプルダウンに表示するグループかどうか
     *
     * @return array CB_Group配列 or NULL
     */
    function evalGroups(& $groups, $params, $user_pulldown = false)
    {
        if (count($groups) <= 0) {
            return null;
        }

        return $groups;
    }
}

