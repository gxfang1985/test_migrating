<?php
function plugin_grn_common_user_delete_address($user_info)
{
    /*
     *  DELETE するテーブル名とカラム名を定義する。
     *  いずれも重複する可能性があるため、
     *  両者を含む連想配列を要素とする配列の構造をとる。
     */
    $cascade_tables = [
        ['table' => 'mygroup', 'column' => 'owner'],
        ['table' => 'mygroupdata', 'column' => 'user_address'],
        ['table' => 'privatebook', 'column' => 'user'],
        ['table' => 'sharedbook_user', 'column' => 'target'],
    ];

    /*
     *  SET NULL するテーブル名とカラム名を定義する。
     *  いずれも重複する可能性があるため、
     *  両者を含む連想配列を要素とする配列の構造をとる。
     */
    $setnull_tables = [
        ['table' => 'file', 'column' => 'creator'],
        ['table' => 'file', 'column' => 'modifier'],
        ['table' => 'filelock', 'column' => 'lock_owner'],
        ['table' => 'filelog', 'column' => 'recorder'],
        ['table' => 'privatebook', 'column' => 'creator'],
        ['table' => 'privatebook', 'column' => 'modifier'],
        ['table' => 'privatedata', 'column' => 'creator'],
        ['table' => 'privatedata', 'column' => 'modifier'],
        ['table' => 'sharedbook', 'column' => 'creator'],
        ['table' => 'sharedbook', 'column' => 'modifier'],
        ['table' => 'shareddata', 'column' => 'creator'],
        ['table' => 'shareddata', 'column' => 'modifier'],
    ];

    $locator = GRN_ApplicationLocator::instance();
    $manager = $locator->getTableManager('address');
    $table_prefix = 'grn_address_';

    $uid = $user_info['uid'];

    require_once('address/table.csp');
    require_once('address/access.csp');
    foreach ($cascade_tables as $t) {
        $table = $manager->getTableInfo($table_prefix . $t['table']);
        $table->deleteMatchedRows($t['column'], $uid);
    }

    // prefix が異なるので例外的に処理
    $table
        = $manager->getTableInfo('grn_access_abstractdata_addr_available_user');
    $table->deleteMatchedRows('target', $uid);

    foreach ($setnull_tables as $t) {
        $table = $manager->getTableInfo($table_prefix . $t['table']);
        $table->setNullMatchedColumns($t['column'], $uid);
    }

    $db = $manager->getDBConnection();
    $db->commit();

    require_once('grn/delete_user_logger.csp');
    $logger = GRN_DeleteUserLogger::getInstance();
    $logger->log('Deleted address data of user "' . $user_info['login_name']
                 . '"');
}

