<?php
function plugin_grn_common_user_delete_portal($user_info)
{
    /*
     *  DELETE するテーブル名とカラム名を定義する。
     *  いずれも重複する可能性があるため、
     *  両者を含む連想配列を要素とする配列の構造をとる。
     */
    $cascade_tables = [
        ['table' => 'portal', 'column' => 'user'],
        ['table' => 'portal_manage_user', 'column' => 'target'],
        ['table' => 'portal_user', 'column' => 'target'],
        ['table' => 'portlet', 'column' => 'user'],
        ['table' => 'portletgroup', 'column' => 'user'],
        ['table' => 'portletgroup_manage_user', 'column' => 'target'],
        ['table' => 'portletlayout_user', 'column' => 'target'],
    ];

    /*
     *  SET NULL するテーブル名とカラム名を定義する。
     *  いずれも重複する可能性があるため、
     *  両者を含む連想配列を要素とする配列の構造をとる。
     */
    $setnull_tables = [
        ['table' => 'loginportal', 'column' => 'creator'],
        ['table' => 'loginportal', 'column' => 'modifier'],
        ['table' => 'portal', 'column' => 'creator'],
        ['table' => 'portal', 'column' => 'modifier'],
        ['table' => 'portlet', 'column' => 'creator'],
        ['table' => 'portlet', 'column' => 'modifier'],
        ['table' => 'portletgroup', 'column' => 'creator'],
        ['table' => 'portletgroup', 'column' => 'modifier'],
        ['table' => 'portletlayout', 'column' => 'creator'],
        ['table' => 'portletlayout', 'column' => 'modifier'],
    ];

    $locator = GRN_ApplicationLocator::instance();
    $manager = $locator->getTableManager('portal');
    $table_prefix = 'grn_portal_';

    $uid = $user_info['uid'];

    require_once('portal/table.csp');
    foreach ($cascade_tables as $t) {
        $table = $manager->getTableInfo($table_prefix . $t['table']);
        $table->deleteMatchedRows($t['column'], $uid);
    }

    foreach ($setnull_tables as $t) {
        $table = $manager->getTableInfo($table_prefix . $t['table']);
        $table->setNullMatchedColumns($t['column'], $uid);
    }

    $db = $manager->getDBConnection();
    $db->commit();

    require_once('grn/delete_user_logger.csp');
    $logger = GRN_DeleteUserLogger::getInstance();
    $logger->log('Deleted portal data of user "' . $user_info['login_name']
                 . '"');
}

