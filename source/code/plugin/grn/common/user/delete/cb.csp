<?php
function plugin_grn_common_user_delete_cb($user_info)
{
    /*
     *  DELETE するテーブル名とカラム名を定義する。
     *  いずれも重複する可能性があるため、
     *  両者を含む連想配列を要素とする配列の構造をとる。
     */
    $cascade_tables = [
        ['table' => 'usergrouprelation', 'column' => 'user'],
        ['table' => 'userrolerelation', 'column' => 'user'],
    ];

    /*
     *  SET NULL するテーブル名とカラム名を定義する。
     *  いずれも重複する可能性があるため、
     *  両者を含む連想配列を要素とする配列の構造をとる。
     */
    $setnull_tables = [
        ['table' => 'refile', 'column' => 'user'],
    ];

    global $G_container_base;
    $table_prefix = 'cb_';
    /** @var GRN_TableManager $manager */
    $manager = $G_container_base->getInstance('table_manager');

    $uid = $user_info['uid'];

    require_once('re/re_file.csp');
    foreach ($cascade_tables as $t) {
        $table = $manager->getTableInfo($table_prefix . $t['table']);
        $table->deleteMatchedRows($t['column'], $uid);
    }

    foreach ($setnull_tables as $t) {
        $table = $manager->getTableInfo($table_prefix . $t['table']);
        $table->setNullMatchedColumns($t['column'], $uid);
    }

    require_once('fw/profile.csp');
    cb_drop_profile_table('user:' . $uid, true);

    $db = $manager->getDBConnection();
    $db->commit();

    require_once('grn/delete_user_logger.csp');
    $logger = GRN_DeleteUserLogger::getInstance();
    $logger->log('Deleted cb data of user "' . $user_info['login_name'] . '"');
}

