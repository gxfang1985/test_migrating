<?php
function plugin_grn_common_user_delete_authentication($user_info)
{
    /*
     *  SET NULL するテーブル名とカラム名を定義する。
     *  いずれも重複する可能性があるため、
     *  両者を含む連想配列を要素とする配列の構造をとる。
     */
    $setnull_tables = [
        ['table' => 'login_authenticate', 'column' => 'creator'],
        ['table' => 'login_authenticate', 'column' => 'modifier'],
        ['table' => 'repository', 'column' => 'creator'],
        ['table' => 'repository', 'column' => 'modifier'],
    ];

    global $G_container_base;
    $table_prefix = 'grn_authentication_';
    /** @var GRN_TableManager $manager */
    $manager = $G_container_base->getInstance('table_manager');

    $uid = $user_info['uid'];

    foreach ($setnull_tables as $t) {
        $table = $manager->getTableInfo($table_prefix . $t['table']);
        $table->setNullMatchedColumns($t['column'], $uid);
    }

    $db = $manager->getDBConnection();
    $db->commit();

    require_once('grn/delete_user_logger.csp');
    $logger = GRN_DeleteUserLogger::getInstance();
    $logger->log('Deleted authentication data of user "'
                 . $user_info['login_name'] . '"');
}

