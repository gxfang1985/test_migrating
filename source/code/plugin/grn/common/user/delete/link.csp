<?php
function plugin_grn_common_user_delete_link($user_info)
{
    /*
     *  DELETE するテーブル名とカラム名を定義する。
     *  いずれも重複する可能性があるため、
     *  両者を含む連想配列を要素とする配列の構造をとる。
     */
    $cascade_tables = [
        ['table' => 'category_manage_user', 'column' => 'target'],
        ['table' => 'category_user', 'column' => 'target'],
        ['table' => 'personal_category', 'column' => 'user'],
        ['table' => 'personal_link', 'column' => 'user'],
    ];

    /*
     *  SET NULL するテーブル名とカラム名を定義する。
     *  いずれも重複する可能性があるため、
     *  両者を含む連想配列を要素とする配列の構造をとる。
     */
    $setnull_tables = [
        ['table' => 'personal_category', 'column' => 'creator'],
        ['table' => 'personal_category', 'column' => 'modifier'],
        ['table' => 'personal_link', 'column' => 'creator'],
        ['table' => 'personal_link', 'column' => 'modifier'],
        ['table' => 'system_category', 'column' => 'creator'],
        ['table' => 'system_category', 'column' => 'modifier'],
        ['table' => 'system_link', 'column' => 'creator'],
        ['table' => 'system_link', 'column' => 'modifier'],
    ];

    $locator = GRN_ApplicationLocator::instance();
    $manager = $locator->getTableManager('link');
    $table_prefix = 'grn_link_';

    $uid = $user_info['uid'];

    require_once('link/manage_manager.csp');
    require_once('link/access_manager.csp');
    require_once('link/table.csp');
    foreach ($cascade_tables as $t) {
        $table = $manager->getTableInfo($table_prefix . $t['table']);
        $table->deleteMatchedRows($t['column'], $uid);
    }

    foreach ($setnull_tables as $t) {
        $table = $manager->getTableInfo($table_prefix . $t['table']);
        $table->setNullMatchedColumns($t['column'], $uid);
    }

    $db = $manager->getDBConnection();
    $db->commit();

    require_once('grn/delete_user_logger.csp');
    $logger = GRN_DeleteUserLogger::getInstance();
    $logger->log('Deleted link data of user "' . $user_info['login_name']
                 . '"');
}

