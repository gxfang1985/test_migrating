<?php

class plugin_grn_common_system_05authentication extends GRN_SystemLogicBase
{
    function __construct()
    {
        parent::__construct('authentication');
    }

    function getConfigArray()
    {
        require_once('grn/license.csp');
        global $G_license_mode;
        if ($G_license_mode !== GRN_LICENSE_SUCCESS) {
            return false;
        }

        return [
            'general' => [
                [
                    'page' => 'system/authentication/login_method_list',
                    'icon' => 'auth_publish32'
                ],
                [
                    'page' => 'system/authentication/authenticate_method_list',
                    'icon' => 'auth_accept32'
                ],
                [
                    'page' => 'system/authentication/repository_method_list',
                    'icon' => 'auth_proxy32'
                ],
            ],
        ];
    }
}


