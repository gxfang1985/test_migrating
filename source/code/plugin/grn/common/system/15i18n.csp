<?php

class plugin_grn_common_system_15i18n extends GRN_SystemLogicBase
{
    function __construct()
    {
        parent::__construct('i18n');
    }

    function getConfigArray()
    {
        require_once('grn/license.csp');
        global $G_license_mode;
        if ($G_license_mode !== GRN_LICENSE_SUCCESS) {
            return false;
        }

        $config = [
            'general' => [
                [
                    'page' => 'system/i18n/common_set',
                    'icon' => 'general32'
                ]
            ]
        ];

        if ( ! defined('ON_FOREST')) {
            $config['general'][] = [
                'page' => 'system/i18n/locale/locale',
                'icon' => 'locale32'
            ];
        }

        return $config;
    }
}


