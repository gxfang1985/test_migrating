<?php

// 自動打刻を実行するか判断する
function plugin_grn_mail_auto_punchout()
{
    $ignore_pages = [
        'mail/portlet/check_mails' => 1,
    ];

    $current_page = strtolower(cb_get_pagename());

    if (array_key_exists($current_page, $ignore_pages)) {
        unset($ignore_pages, $current_page);

        return false;
    }
    unset($ignore_pages, $current_page);

    return true;
}


