            $message_args['cid']            = $properties['_id'];   //Category ID
            $message_args['category_name']  = $category_name;       //Category Name
            if (!$message_args['category_name'])
            {
                $message_args['category_name'] = cb_msg('grn.link', '(root)');
            }

            //Record Inspection
            $inspection->record($message_type, $message_args);
        }
    */
    //Redirect Next Page
    cb_redirect('workflow/operation/form_list',
        ['cid' => $parent_category['_id'], 'sf' => 1]);
}


