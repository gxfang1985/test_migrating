<?php

if (0 == strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST')) {
    global $G_INPUT;

    // Create Parameter Translation Map
    $translation_map = [
        'fid'                    => '_id',
        'cid'                    => '_cid',
        'serial_type'            => 'serial_type',
        'serial_format'          => 'serial_format',
        'serial_number'          => 'serial_number',
        'approved_serial_type'   => 'approved_serial_type',
        'approved_serial_format' => 'approved_serial_format',
        'approved_serial_number' => 'approved_serial_number',
    ];

    //Do Parameter Translation
    $properties = [];
    foreach ($translation_map as $view_name => $model_name) {
        $properties[$model_name] = @ $G_INPUT[$view_name];
    }

    //Check Category Exists
    require_once('workflow/resources.csp');
    if (GRN_WORKFLOW_CATEGORY_NONPARTY_ID != $properties['_cid']) {
        require_once('workflow/category_logic_base.csp');
        $category_logic_base = GRN_Workflow_Category_Logic_Base::getInstance();
        $category =& $category_logic_base->get($properties['_cid']);
    }

    // ログインユーザーが運用管理権限を持つか確認
    require_once('workflow/controller_util.csp');
    $category_util = GRN_Workflow_Category_Controller_Utility::getInstance();
    if ( ! $category_util->evaluateManage()) {
        require_once('workflow/error_code.csp');
        cb_throw_error(E_GRN_WRKF_MANAGE_DENY);
    }

    // 未分類カテゴリか確認
    if (GRN_WORKFLOW_CATEGORY_NONPARTY_ID == $properties['_cid']) {
        require_once('workflow/error_code.csp');
        cb_throw_error(E_GRN_WRKF_MANAGE_DENY_NONPARTY_CATEGORY);
    }

    // 未分類カテゴリ以外は運用管理権限とアクセス権を確認
    $category_util->checkManage($properties['_cid'], true, CB_DATABASE_NO_LOCK);
    $category_util->checkAccess($properties['_cid'], true, CB_DATABASE_NO_LOCK);

    //Set Form Serial Number
    require_once('workflow/form_logic.csp');
    $form_logic = GRN_Workflow_Form_Logic::getInstance();
    $form_logic->setSerialSetting($properties['_id'],
        $properties['serial_type'], $properties['serial_format'],
        $properties['approved_serial_type'],
        $properties['approved_serial_format'], $properties['_cid']);

    //監査する
    require_once('workflow/inspection.csp');
    $inspection = GRN_Workflow_Form_Inspection::getInstance();
    if ($inspection->isEnabled()) {
        if ($properties['serial_type'] == 0) {
            $inspection_serial_type = GRN_WORKFLOW_FORM_SERIAL_TYPE_ALL;
            $inspection_serial_format = $properties['serial_format'];
        } elseif ($properties['serial_type'] == 1) {
            $inspection_serial_type = GRN_WORKFLOW_FORM_SERIAL_TYPE_EVERY;
            $inspection_serial_format = $properties['serial_format'];
        } elseif ($properties['serial_type'] == 2) {
            $inspection_serial_type = GRN_WORKFLOW_FORM_SERIAL_TYPE_NOT_USE;
            $inspection_serial_format = null;
        }

        if ($properties['approved_serial_type'] == 1) {
            $inspection_approved_serial_type
                = GRN_WORKFLOW_FORM_APPROVED_SERIAL_TYPE_EVERY;
            $inspection_approved_serial_format
                = $properties['approved_serial_format'];
        } else {
            $inspection_approved_serial_type
                = GRN_WORKFLOW_FORM_APPROVED_SERIAL_TYPE_NOT_USE;
            $inspection_approved_serial_format = null;
        }

        $message_type = 'form_serial_modify';

        $message_args['fid'] = $properties['_id'];
        $message_args['serial_type'] = $inspection_serial_type;
        $message_args['serial_format'] = $inspection_serial_format;
        $message_args['approved_serial_type']
            = $inspection_approved_serial_type;
        $message_args['approved_serial_format']
            = $inspection_approved_serial_format;

        //Record Inspection
        $inspection->record($message_type, $message_args);
    }

    //Redirect Next Page
    cb_redirect('workflow/operation/form_view',
        ['cid' => $properties['_cid'], 'fid' => $properties['_id']]);
}


