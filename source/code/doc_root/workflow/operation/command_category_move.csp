    if ( ! $category_util->evaluateManage()) {
        require_once('workflow/error_code.csp');
        cb_throw_error(E_GRN_WRKF_MANAGE_DENY);
    }

    // 未分類カテゴリか確認
    if (GRN_WORKFLOW_CATEGORY_NONPARTY_ID == $properties['_id']) {
        require_once('workflow/error_code.csp');
        cb_throw_error(E_GRN_WRKF_MANAGE_DENY_NONPARTY_CATEGORY);
    }

    // 未分類カテゴリ以外は運用管理権限とアクセス権を確認
    $category_util->checkManage($properties['_id'], true, CB_DATABASE_NO_LOCK);
    $category_util->checkAccess($properties['_id'], true, CB_DATABASE_NO_LOCK);

    //Check Parent Category ID
    $properties['s_cid'] = $properties['s_cid'] ? $properties['s_cid'] : 0;

