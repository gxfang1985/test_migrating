<?php

//Get Parameters
$category_id = cb_at($G_INPUT, 'cid');

//Assign Display Infomation
//Assign Catehgory ID
$t->assign('category_id', $category_id);

//-- set page title and site position

require_once('workflow/controller_util.csp');
$translation_map_category = [
    'id'   => '_id',      //Form ID
    'name' => 'name'
];
$category_util
    = GRN_Workflow_Category_Controller_Utility::getInstance();
$category_for_view = $category_util->getView($category_id,
    $translation_map_category, GRN_WORKFLOW_ACCESS_TYPE_SYSTEM);
$t->assign('category', $category_for_view);

global $G_config_common;
$app_name = $G_config_common->get('Files', 'dir');
if ('/' == substr($app_name, -1)) {
    $app_name = substr($app_name, 0, -1);
}
$t->assign('dir', $app_name);

//page title
$page_title = grn_get_current_page_display_name();
$t->assign('page_title', $page_title);

//site position
$t->assign('site_position', [
        [
            'page' => 'workflow/system/form_list',
            'name' => grn_get_page_display_name('workflow/system/form_list'),
            'cid'  => $category_id,
            'sf'   => 1
        ],
        ['page' => '', 'name' => $page_title]
    ]
);
