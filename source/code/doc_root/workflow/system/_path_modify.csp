<?php

require_once('workflow/path.csp');
$logic = GRN_Workflow_Paths::getInstance();
$columns = [
    '_id',
    'col_name',
    'col_foreign_key',
    'col_type',
    'col_description',
    'col_richeditor',
    'col_icon'
];
$path = $logic->get($path_id, $columns);
if ( ! is_array($path) || 0 == count($path)) {
    // 経路がない
    cb_throw_error(E_GRN_WRKF_NOT_FOUND_PATH);
}
$t->assign($path);

$key = 'text';
if ($path['col_richeditor']) {
    $key = 'html';
}
$t->assign($key, $path['col_description']);

switch ($path['col_type']) {
    case GRN_WORKFLOW_PRIVATE_PATH:
        $pages_info = [
            'path_list'           => ['private' => false],
            'path_view'           => ['pid' => $path_id],
            'private_path_modify' => null
        ];
        break;
    case GRN_WORKFLOW_PUBLIC_PATH:
        $pages_info = [
            'path_list'          => ['private' => true],
            'path_view'          => ['pid' => $path_id],
            'public_path_modify' => null
        ];
        break;
    default:
        break;
}
require_once('workflow/controller_util.csp');
$controller_util = new GRN_Workflow_ControllerUtil($page_name);
$site_position = $controller_util->makeSitePosition('workflow/system/',
    $pages_info);
$t->assign('site_position', $site_position);


