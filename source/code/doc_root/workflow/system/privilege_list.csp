<?php

global $G_INPUT;

require_once("grn/smarty.csp");
$t = new GRN_Smarty;

//Set Application Name
global $G_workflow_app_name;
$t->assign('app_name', $G_workflow_app_name);

//--node information
require_once('_access_util.csp');

//--privilege information

//Create Parameter Translation for Access
$translation_map_manage = [
    '_id'  => '_id',                  //OID
    'tid'  => 'target',               //Target ID
    'type' => 'type',                 //Target Type
    'data' => 'authority_manage',      //Authority List
    //        'security_model'    =>  'security_model',   //Security Model
];

//Get Manage List
require_once('workflow/controller_util.csp');
$manage_list_for_view = [];
$target_type_list = [
    GRN_WORKFLOW_ACCESS_TARGET_TYPE_DYNAMIC_ROLE,
    GRN_WORKFLOW_ACCESS_TARGET_TYPE_STATIC_ROLE,
    GRN_WORKFLOW_ACCESS_TARGET_TYPE_GROUP,
    GRN_WORKFLOW_ACCESS_TARGET_TYPE_USER,
];
$category_manage_util
    = GRN_Workflow_Category_Manage_Controller_Utility::getInstance();
foreach ($target_type_list as $target_type) {
    $temporary = $category_manage_util->getListView($node_id,
        $target_type, $translation_map_manage, true);
    $manage_list_for_view = array_merge($manage_list_for_view, $temporary);
}

//start GRB-15046
$users_id = [];
foreach ($manage_list_for_view as $tg) {
    if ($tg['type'] == GRN_WORKFLOW_ACCESS_TARGET_TYPE_USER) {
        $users_id[] = $tg['tid'];
    }
}
//Login User
global $G_container_base;
$uum = $G_container_base->getInstance('uum');
$user = $uum->getLoginUser();
require_once("grn/controller.csp");
$users_info = GRN_ControllerUtil::getUserInfoToShowUserName($users_id, $user);
$t->assign('users_info', $users_info);
//end GRB-15046

//Create Access Information
$manage_information_for_view['list'] = $manage_list_for_view;
$manage_information_for_view['count'] = count($manage_list_for_view);
$manage =& $manage_information_for_view;

//--N-navigation params
$ours_params = $G_INPUT;
unset($ours_params['reset']);
unset($ours_params['poid']);
$t->assign('ours_params', $ours_params);

$t->assign('access', $manage);

//--session information (temporary authorities)
require_once('fw/session_manager.csp');
$session_manager = CB_SessionManager::getInstance();
$session
    = $session_manager->getSession('workflow.system.privilege_list');
$authorities = $session->get('authorities');
if (@ $G_INPUT['reset'] || ! is_array($authorities)) {
    $authorities = ['manage' => 1];
    $session->set('authorities', $authorities);
}
$t->assign('authorities', $authorities);

//-- set page title and site position

//page title
$page_title = grn_get_current_page_display_name();
$t->assign('page_title', $page_title);

//site position 
$t->assign('site_position', [
        [
            'page' => 'workflow/system/privilege_index',
            'name' => grn_get_page_display_name('workflow/system/privilege_index'),
            'nid'  => $node_id
        ],
        ['page' => '', 'name' => $page_title],
    ]
);

//Display Smarty Template
$doc_name = cb_get_pagename();
$t->display("{$doc_name}.tpl");

