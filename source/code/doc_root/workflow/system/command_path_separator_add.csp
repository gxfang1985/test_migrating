<?php

if (0 == strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST')) {
    global $G_INPUT;

    $page_name = 'workflow/system/path_separator_add';

    require_once('workflow/path.csp');
    $logic = GRN_Workflow_Paths::getInstance();
    $columns_info = $logic->getColumnsInfo();
    $properties = [
        'col_name'        => GRN_WORKFLOW_SEPARATOR_NAME,
        'col_foreign_key' => "separator",
        'col_type'        => GRN_WORKFLOW_SEPARATOR
    ];
    require_once('workflow/controller_util.csp');
    $controller_util = new GRN_Workflow_ControllerUtil($page_name);
    $properties
        = $controller_util->validateProperties($properties,
        $columns_info);
    $path_id = $logic->add($properties);
    $properties['col_foreign_key'] .= $path_id;
    $logic->modify($path_id, $properties);

    //監査する
    require_once('workflow/inspection.csp');
    $inspection = GRN_Workflow_Path_Inspection::getInstance();
    if ($inspection->isEnabled()) {
        $message_type = 'path_separator_add';

        $message_args['pid'] = $path_id;

        //Record Inspection
        $inspection->record($message_type, $message_args);
    }

    cb_redirect('workflow/system/path_list');
}


