<?php

global $G_INPUT;

require_once('grn/smarty.csp');
$t = new GRN_Smarty;

$page_title = grn_get_current_page_display_name();
$t->assign('page_title', $page_title);
$page_name = cb_get_pagename();

$category_id = null;
if (array_key_exists('cid', $G_INPUT)) {
    $category_id = $G_INPUT['cid'];
}
$t->assign('cid', $category_id);
$form_id = null;
if (array_key_exists('fid', $G_INPUT)) {
    $form_id = $G_INPUT['fid'];
}
$t->assign('fid', $form_id);
$group_id = null;
if (array_key_exists('oid', $G_INPUT)) {
    $group_id = $G_INPUT['oid'];
}
$t->assign('oid', $group_id);

require_once('workflow/form_logic.csp');
$logic = GRN_Workflow_Form_Logic::getInstance();
$columns = [
    '_id',
    'col_path'
];
$form = $logic->get($form_id, $category_id, $columns);
if ( ! is_array($form) || 0 == count($form)) {
    // フォームがない
    cb_throw_error(E_GRN_WRKF_FORM_NOT_FOUND);
}

if (0 == strlen(@ $form['col_path'])) {
    // フォームIDが不正
    cb_throw_error(E_GRN_WRKF_FORM_INVALID_ID);
}

require_once('workflow/path.csp');
$logic = GRN_Workflow_PathSteps::getInstance();
$path_step_count = $logic->getCount($form['col_path']);
if (0 >= $path_step_count) {
    // 経路ステップが空
    cb_throw_error(E_GRN_WRKF_EMPTY_PATH_STEP);
}

require_once('grn/org_tree.csp');

$page_name = cb_get_pagename();

$util = GRN_OrgTreeUtil::getInstance();
$tree =& $util->getTree($page_name);

if (is_null($group_id)) {
    $group_id = $tree->getSelectedNode();
}

if (array_key_exists('top', $G_INPUT) || is_null($tree->getRoot())) {
    $tree->initialize();
    $group_id = null;
}
$tree->setSelectedNode($group_id);
$util->setTree($page_name, $tree);
$org = $tree->getRoot();


require_once('grn/org_util.csp');
$group_info = [];

//GTM-529
if ($group_id == -1 || $group_id > 0) {
    $navi_params = [
        'cid' => $category_id,
        'fid' => $form_id,
        'oid' => $group_id
    ];
    $group_info['user_list'] = grn_get_group_by_application($group_id,
        'workflow', $navi_params, null, $navi_info);
    $group_info['navi_info'] = $navi_info;
}
//GTM-529

$t->assign('oid', $group_id);
$t->assign('group_info', $group_info);
$t->assign('page_name', $page_name);
$t->assign('org', $org);

require_once('workflow/controller_util.csp');
$controller_util = new GRN_Workflow_ControllerUtil($page_name);
$page_infos = [
    'form_list'                => ['cid' => $category_id, 'sf' => true],
    'form_view'                => ['cid' => $category_id, 'fid' => $form_id],
    'form_path_preview_select' => null
];
$site_position = $controller_util->makeSitePosition('workflow/system/',
    $page_infos);
$t->assign('site_position', $site_position);

$t->display("{$page_name}.tpl");


