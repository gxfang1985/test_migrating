<?php

use grn\report\screen\mobile\ReportCommentAdd;
use grn\grn\mobile\MobileScreenCommon;

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    global $G_INPUT;

    $screen = new MobileScreenCommon(new ReportCommentAdd($G_INPUT));
    $screen->post($G_INPUT);

    cb_redirect('report/mobile/view', ['rid' => $G_INPUT['rid']],
        'comment_top');
}
