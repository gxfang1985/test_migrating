<?php

global $G_INPUT;

require_once("grn/smarty.csp");
$t = new GRN_Smarty;


if ( ! isset($G_INPUT['fid'])) {
    require_once('report/error_code.csp');
    cb_throw_error(E_GRN_RPRT_FILE_NOT_FOUND);
}

$category_id = @ $G_INPUT['cid'];
$follow_id = @ $G_INPUT['follow_id'];
$file_id = $G_INPUT['fid'];

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') != 0) {
    cb_redirect('report/file_view', [
        'cid' => $category_id,
        'rid' => $report_id,
        'fid' => $file_id
    ]);
}

require_once('report/file.csp');
$file_manager = GRN_Report_FileManager::getInstance();
$report_id = $file_manager->getReport($file_id);

require_once('report/controller_util.csp');
//Get Report for view
$report_util = GRN_Report_Report_Controller_Utility::getInstance();
$report = $report_util->getSimpleView($report_id);
$page_view = 'report/view';
if (1 == $report['draft']) {
    $page_view = 'report/view_draft';
}

//Set Site Position
$pathinfo = [
    "report/index"     => ['sf' => 1],
    $page_view         => ['rid' => $report_id],
    "report/file_view" => [
        'cid' => $category_id,
        'rid' => $report_id,
        'fid' => $file_id
    ],
];
$utility = new GRN_Report_ControllerUtil();
$utility->setSitePosition($t, $pathinfo);

//Get GRN_File Object
$file = null;
$file_manager = new GRN_Report_FileManager_Core();
$file_table =& $file_manager->getFileTable();
$file =& $file_table->getRow($file_id);
if ( ! $file || ! $file->isCreator($G_report_login_user)) {
    require_once('report/error_code.csp');
    cb_throw_error(E_GRN_RPRT_FILE_NOT_FOUND);
}

//Include Common Controller
require_once('_file_lock.csp');

$t->display(cb_get_pagename() . ".tpl");

