<?php

if ( ! isset($G_INPUT['fid'])) {
    require_once('report/error_code.csp');
    cb_throw_error(E_GRN_REPORT_FILE_NOT_FOUND);
}

$file_id = $G_INPUT['fid'];
$category_id = @ $G_INPUT['cid'];
$follow_id = @ $G_INPUT['follow_id'];
$item_data_id = @ $G_INPUT['iid'];

if ( ! isset($check_creator)) {
    $check_creator = false;
}

require_once('report/file.csp');
$file_manager = GRN_Report_FileManager::getInstance();
$report_id = $file_manager->getReport($file_id);

//Check File Modifiable
$t->assign('fid', $file_id);
$t->assign('cid', $category_id);
$t->assign('follow_id', $follow_id);
$t->assign('iid', $item_data_id);
$t->assign('rid', $report_id);

//Assign Page Title
$page_title = grn_get_current_page_display_name();
$t->assign('page_title', $page_title);

//Create Parameter Translation Map
$translation_map_report = [
    'rid'                 => '_id',
    //Report ID
    'name'                => 'name',
    //Report Name
    'form'                => 'form',
    //Report Form ID
    'form_name'           => 'form_name',
    //Report Form Name
    'creator'             => 'creator',
    //Report Creator
    'creator_name'        => 'creator_name',
    //Report Creator Name
    'creator_foreign_key' => 'creator_foreign_key',
    //Report Creator Foreign Key
    'ctime'               => 'ctime',
    //Report Create Time
    'draft'               => 'draft',
    //Report Draft flag
];

require_once('report/controller_util.csp');
$utility = GRN_Report_Report_Controller_Utility::getInstance();

if ( ! ($report = $utility->getView($report_id, $translation_map_report))) {
    cb_throw_error(E_GRN_REPORT_REPORT_NOT_FOUND);
}

//Get File Object
require_once('report/file.csp');
$file_manager = GRN_Report_FileManager::getInstance();
$file =& $file_manager->getFile($file_id);

if ( ! $file || ($check_creator && ! $file->isCreator($G_report_login_user))) {
    require_once('report/error_code.csp');
    cb_throw_error(E_GRN_RPRT_FILE_NOT_FOUND);
}

require_once('grn/controller.csp');
$utility = new GRN_ControllerUtil();

$file_for_view = $utility->getFileView($file);
$t->assign('file', $file_for_view);

