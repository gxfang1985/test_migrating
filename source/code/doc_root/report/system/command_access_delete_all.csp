<?php

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    include('_access_util.csp');

    //Get Parameters
    $node_id = @ $G_INPUT['nid'];

    //Get Category Access Logic
    require_once('report/access_logic.csp');
    $category_access_logic = GRN_Report_Category_Access_Logic::getInstance();

    //Get Category Access List
    $category_access_logic->removeAccessAll($node_id);

    //監査する
    require_once('report/inspection.csp');
    $inspection = GRN_Report_Category_Accesses_Inspection::getInstance();
    if ($inspection->isEnabled()) {
        $message_type = 'access_delete_all';
        $message_args['cid'] = $node_id;
        //Record Inspection
        $inspection->record($message_type, $message_args);
    }

    //Redirect Next Page
    cb_redirect('report/system/access_list', $G_INPUT);
}

