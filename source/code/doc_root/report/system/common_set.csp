<?php

global $G_INPUT;

require_once("grn/smarty.csp");
$t = new GRN_Smarty;

require_once('report/controller_util.csp');
$utility = new GRN_Report_ControllerUtil();

//Set Site Position
$page_title = grn_get_current_page_display_name();
$t->assign('page_title', $page_title);
$t->assign('site_position', [
        ['page' => '', 'name' => $page_title]
    ]
);

//Set Input Config Values
$config = $utility->getInputConfigValues($G_report_login_user);
$t->assign('enable_follow', $config['enable_follow']);
$t->assign('enable_htmleditor', $config['enable_htmleditor']);
$t->assign('enable_follow_autolink', $config['enable_follow_autolink']);

if (array_key_exists('report_allusers_attendeesusers', $config)
    && $config['report_allusers_attendeesusers'] == 0
) {
    $t->assign('report_allusers', "checked");
} else {
    $t->assign('report_attendeesusers', "checked");
}

$t->display(cb_get_pagename() . ".tpl");
