<?php

if (0 == strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST')) {
    global $G_INPUT;

    //Create Parameter Translation Map
    $translation_map = [
        'fid'    => '_id',
        'cid'    => '_cid',
        'active' => 'active',
    ];

    //Do Parameter Translation
    $properties = [];
    foreach ($translation_map as $view_name => $model_name) {
        $properties[$model_name] = @ $G_INPUT[$view_name];
    }

    //Check Category Exists
    require_once('report/resources.csp');
    if (GRN_REPORT_CATEGORY_NONPARTY_ID != $properties['_cid']) {
        require_once('report/category_logic_base.csp');
        $category_logic_base = GRN_Report_Category_Logic_Base::getInstance();
        $category =& $category_logic_base->get($properties['_cid']);
    }

    //Get Filter Controller Utility
    require_once('report/controller_util.csp');
    $filter_util = GRN_Report_Filter_Controller_Utility::getInstance();

    //Create Parameter Translation Map
    $translation_map_filter = [
        'fid' => '_id',      //Filter ID
    ];

    //Get Filter for View
    $filter_for_view = $filter_util->getView($properties['_id'],
        $translation_map_filter);

    //Activate or Deactivate Filter
    require_once('report/filter_logic.csp');
    $filter_logic = GRN_Report_Filter_Logic::getInstance();

    $message_type = null;
    if ($properties['active'] == 0) {
        $filter_logic->activate($properties['_id']);
        $active = GRN_REPORT_FORM_ACTIVE;
    } else {
        $filter_logic->deactivate($properties['_id']);
        $active = GRN_REPORT_FORM_DEACTIVE;
    }

    //監査する
    require_once('report/inspection.csp');
    $inspection = GRN_Report_Filter_Inspection::getInstance();
    if ($inspection->isEnabled()) {
        $message_type = 'filter_activate';
        $message_args['fid'] = $properties['_id'];
        $message_args['active'] = $active;

        //Record Inspection
        $inspection->record($message_type, $message_args);
    }

    //Redirect Next Page
    cb_redirect('report/system/filter_view',
        ['cid' => $properties['_cid'], 'fid' => $properties['_id']]);
}


