<?php

use grn\bulletin\screen\Subscribe;

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    global $G_INPUT;
    $session_key = cb_at($G_INPUT, Subscribe::SESSION_KEY_SUBSCRIBE_CHECKBOX);

    $subscribe = new Subscribe($G_INPUT);
    $subscribe->post($session_key);

    cb_redirect("bulletin/index",
        ['cid' => $subscribe->getCategoryId(), 'sf' => 1]);
}
