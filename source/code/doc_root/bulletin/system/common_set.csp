<?php

global $G_INPUT;

require_once("grn/smarty.csp");
$t = new GRN_Smarty;

require_once('bulletin/controller.csp');
$utility = new GRN_Bulletin_ControllerUtil();

$utility->setSitePosition($t, null);

$config = $utility->getInputConfigValues($G_bulletin_login);

$t->assign('enable_follow', $config['enable_follow']);
$t->assign('enable_htmleditor', $config['enable_htmleditor']);
$t->assign('enable_follow_autolink', $config['enable_follow_autolink']);
$t->assign('enable_acknowledgement', $config['enable_acknowledgement']);
$t->assign('enable_manually_enter_sender',
    $config['enable_manually_enter_sender']);
$t->assign('default_value_from', $config['default_value_from']);
$t->assign('enable_confirm_authority_read_and_notification_users',
    $config['enable_confirm_authority_read_and_notification_users']);
$t->display(cb_get_pagename() . ".tpl");
