<?php

global $G_INPUT;

require_once("grn/smarty.csp");
$t = new GRN_Smarty;

$category_id = null;

if (array_key_exists('nid', $G_INPUT) && strlen($G_INPUT['nid']) > 0
    && $G_INPUT['nid'] > 0
) {
    $category_id = $G_INPUT['nid'];
}

// --- category tree
$tree_info = [
    'link_url' => 'bulletin/system/notify_index',
    'oid_key'  => 'nid'
];
$tree_selected_oid = $category_id;
include('../_category_tree.csp');
$category_id = $tree_selected_oid ? $tree_selected_oid
    : GRN_BULLETIN_ROOT_CATEGORY_ID;
// --- end: category tree

if ( ! ($category =& $G_bulletin->getCategory($G_bulletin_login,
    $category_id))
) {
    cb_throw_error(E_GRN_BULLETIN_CATEGORY_NOT_FOUND);
}

$t->assign('node_id', $category->getOID());
$t->assign('node_name', $category->get('name'));


require_once('bulletin/controller.csp');
$utility = new GRN_Bulletin_ControllerUtil();

$utility->setSitePosition($t, null);


require_once('bulletin/hierarchy.csp');
$hierarchy = GRN_Bulletin_Hierarchy::getInstance();
$node_for_view = $hierarchy->build($G_bulletin_login, $category);

$notify_for_view = [];
$notify_for_view['force'] = $category->get('force_notify');
$notify_for_view['nid'] = $category->getOID();


require_once('grn/access_resources.csp');

$notify_list = [];

$targets = $category->getNotificationTargets('user');
foreach (array_keys($targets) as $id) {
    $notify_list[] = ['type' => GRN_ACCESS_TARGET_TYPE_USER, 'tid' => $id];
}

$targets = $category->getNotificationTargets('group');
foreach (array_keys($targets) as $id) {
    $notify_list[] = ['type' => GRN_ACCESS_TARGET_TYPE_GROUP, 'tid' => $id];
}

$targets = $category->getNotificationTargets('role');
foreach (array_keys($targets) as $id) {
    $notify_list[] = [
        'type' => GRN_ACCESS_TARGET_TYPE_STATIC_ROLE,
        'tid'  => $id
    ];
}

$targets = $category->getNotificationTargets('dynamic_role');
foreach (array_keys($targets) as $id) {
    $notify_list[] = [
        'type' => GRN_ACCESS_TARGET_TYPE_DYNAMIC_ROLE,
        'tid'  => $id
    ];
}

$notify_for_view['list'] = $notify_list;
$notify_for_view['count'] = count($notify_list);

$t->assign('node', $node_for_view);
$t->assign('notify', $notify_for_view);
$t->assign('enable_force', 1);

$t->display(cb_get_pagename() . ".tpl");

