<?php

use grn\bulletin\screen\mobile\BulletinCommentAdd;
use grn\grn\mobile\MobileScreenCommon;

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    global $G_INPUT;

    $screen = new MobileScreenCommon(new BulletinCommentAdd($G_INPUT));
    $screen->post($G_INPUT);

    cb_redirect('bulletin/mobile/view',
        ['cid' => @$G_INPUT['cid'], 'aid' => @$G_INPUT['aid']], 'comment_top');
}
