<?php

use grn\fts\Application as FtsApplication;
use grn\fts\bulletin\IndexService;

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    global $G_INPUT;

    if ( ! isset($category_id)) {
        $category_id = @ $G_INPUT['cid'];
    }
    if ( ! isset($article_id)) {
        if ( ! isset($G_INPUT['aid'])) {
            require_once('bulletin/error_code.csp');
            cb_throw_error(E_GRN_BULLETIN_ARTICLE_NOT_FOUND);
        }
        $article_id = $G_INPUT['aid'];
    }
    if ( ! isset($follow_id)) {
        if (isset ($G_INPUT['follow_id'])
            && strlen($G_INPUT['follow_id']) > 0
        ) {
            $follow_id = $G_INPUT['follow_id'];
        } else {
            $follow_id = null;
        }
    }
    if ( ! isset($file_id)) {
        if ( ! isset($G_INPUT['fid'])) {
            require_once('bulletin/error_code.csp');
            cb_throw_error(E_GRN_BULLETIN_FILE_NOT_FOUND);
        }
        $file_id = $G_INPUT['fid'];
    }

    if ( ! ($object = $G_bulletin->getArticle($G_bulletin_login,
        $article_id))
    ) {
        require_once('bulletin/error_code.csp');
        cb_throw_error(E_GRN_BULLETIN_ARTICLE_NOT_FOUND);
    }
    $article_id = $object->getOID();
    $category_id = $object->get('category')->getOID();

    if ($follow_id) {
        if ( ! ($follow = $object->getFollow($follow_id))) {
            require_once('bulletin/error_code.csp');
            cb_throw_error(E_GRN_BULLETIN_FOLLOW_NOT_FOUND);
        }
        $object = $follow;
        $follow_id = $follow->getOID();
    }

    if ( ! ($file = $object->getFile($file_id))) {
        require_once('bulletin/error_code.csp');
        cb_throw_error(E_GRN_BULLETIN_FILE_NOT_FOUND);
    }

    require_once('bulletin/file.csp');
    $fm = GRN_Bulletin_FileManager::getInstance();

    $fm->isModifiable($G_bulletin_login, $object, $file, true);


    $file->restore($G_bulletin_login, $G_INPUT['ver'], $G_INPUT['comment']);
    $lock = $file->getLockObject();
    $lock->releaseLock();

    if (FtsApplication::isAvailable()) {
        $searceService = new IndexService();
        $searceService->updateFileIndex($file, $article_id, $category_id,
            $follow_id);
    }

    $args = [];

    if ($category_id) {
        $args['cid'] = $category_id;
    }

    $args['aid'] = $article_id;

    if ($follow_id) {
        $args['follow_id'] = $follow_id;
    }

    $args['fid'] = $file_id;

    cb_redirect($file_view_page, $args);
}
