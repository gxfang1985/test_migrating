    $target_name = 'bulletin/operation/category_modify';

    require_once('../_command_category_modify.csp');

    if (@ $success) {
        cb_redirect('bulletin/operation/category_view',
            ['cid' => $G_INPUT['cid']]);
    } else {
        require_once('bulletin/controller.csp');
        $utility = new GRN_Bulletin_ControllerUtil();

        $page_path = [
            'bulletin/index'                   => ['cid' => $G_INPUT['cid']],
            'bulletin/operation/category_view' => ['cid' => $G_INPUT['cid']],
        ];

        $utility->setSitePosition($t, $page_path);

