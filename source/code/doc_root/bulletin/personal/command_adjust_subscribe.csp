<?php

use grn\bulletin\logic\BulletinUserProfileLogic;

global $G_INPUT;

if (strcasecmp(@ $_SERVER["REQUEST_METHOD"], "POST") === 0) {
    $category_subscribe = cb_at($G_INPUT,
        BulletinUserProfileLogic::BULLETIN_PERSONAL_ADJUST_SUBSCRIBE);

    $login = cb_get_login_user();
    BulletinUserProfileLogic::getInstance()
                            ->setAdjustSubscribe($login, $category_subscribe);

    cb_redirect('personal/application_list', ['app_id' => 'bulletin']);
}
