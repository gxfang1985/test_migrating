<?php

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    global $G_INPUT;

    $eid = @ $G_INPUT['eid'];

    if ($eid) {
        foreach ($eid as $aid) {
            if (($article =& $G_bulletin->getArticle($G_bulletin_login,
                $aid))
            ) {
                if ( ! $article->isPublished()) {
                    $article->delete($G_bulletin_login);
                }
            }
        }
    }

    cb_redirect('bulletin/wait_list', ['sf' => 1]);
}
