<?php

if (0 == strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST')) {
    global $G_INPUT;

    //Instantiate Smarty Object
    require_once("grn/smarty.csp");
    $t = new GRN_Smarty;

    //Create Parameter Translation Map
    $translation_map = [
        'lid'   => '_id',
        's_cid' => 's_cid',
    ];

    //Do Parameter Translation
    $properties = [];
    foreach ($translation_map as $view_name => $model_name) {
        $properties[$model_name] = @ $G_INPUT[$view_name];
    }

    //Check Parent Category ID
    $properties['s_cid'] = $properties['s_cid'] ? $properties['s_cid'] : 0;

    //Check Inspection Message Enabled
    require_once('link/inspection.csp');
    $inspection = GRN_Link_Inspection::getInstance();
    if ($inspection->isEnabled()) {
        //Get Link Object
        require_once('link/link_logic.csp');
        $link_logic = GRN_Link_Personal_Link_Logic::getInstance();
        $link =& $link_logic->get($properties['_id']);

        //Get Previous Category Name
        $prev_category =& $link->get(GRN_LINK_PROPERTY_CATEGORY);
        $prev_category_name = $prev_category->get(GRN_LINK_PROPERTY_NAME);
    }

    //Move Link
    require_once('link/link_logic.csp');
    $link_logic = GRN_Link_Personal_Link_Logic::getInstance();
    $link =& $link_logic->move($properties['_id'], $properties['s_cid']);

    //Check Inspection Message Enabled
    if ($inspection->isEnabled()) {
        //Get Category Object
        require_once('link/category_logic.csp');
        $category_logic = GRN_Link_Personal_Category_Logic::getInstance();
        $category =& $category_logic->get($properties['s_cid']);

        //Write Inspection Message
        $message_args['lid']
            = $link->getOID();                          //Link ID
        $message_args['cid']
            = $category->getOID();                      //Category ID
        $message_args['link_name']
            = $link->get(GRN_LINK_PROPERTY_NAME);       //Link Name
        $message_args['prev_category_name']
            = $prev_category_name;                      //Previous Category Name
        $message_args['next_category_name']
            = $category->get(GRN_LINK_PROPERTY_NAME);   //Next Category Name

        //Record Inspection
        $inspection->writeInspectionLog('move', 'personal_link', $message_args);
    }

    //Redirect Next Page
    cb_redirect('link/view', [
        'cid'  => $properties['s_cid'],
        'lid'  => $properties['_id'],
        'type' => 'personal'
    ]);
}


