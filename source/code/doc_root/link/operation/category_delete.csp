<?php

global $G_INPUT;

//Instantiate an Smarty object
require_once("grn/smarty.csp");
$t = new GRN_Smarty;

//Get Parameter
$category_id = @ $G_INPUT['cid'];   //Category ID
$category_id = $category_id ? $category_id : GRN_LINK_CATEGORY_ROOT_ID;

//Get Category Controller Utility
require_once('link/controller_util.csp');
$category_util = GRN_Link_Category_Controller_Utility::getInstance();
$category_util->setType('manage');

//Check Management Right
$category_util->checkManage($category_id, null, true, CB_DATABASE_NO_LOCK);

//Create Parameter Translation Map
$translation_map_category = [
    'cid'   => '_id',
    'title' => 'name',
];

//Get Category for View
$category_for_view = $category_util->getView($category_id,
    $translation_map_category, null, true, CB_DATABASE_NO_LOCK);
if ($category_for_view['cid'] == GRN_LINK_CATEGORY_ROOT_ID) {
    require_once('link/error_code.csp');
    cb_throw_error(E_GRN_LINK_CATEGORY_DENY_DELETE_ROOT, null,
        ['name' => cb_msg('grn.link', GRN_LINK_ROOT_CATEGORY_NAME_DEFAULT)]);
}

//Assign Category
$t->assign('category', $category_for_view);

//page title
$page_title = grn_get_current_page_display_name();
$t->assign('page_title', $page_title);

//site position
$t->assign('site_position', [
        [
            'page' => 'link/index',
            'name' => grn_get_page_display_name('link/index'),
            'cid'  => $category_id,
            'type' => 'share'
        ],
        [
            'page' => 'link/category_view',
            'name' => grn_get_page_display_name('link/category_view'),
            'cid'  => $category_id,
            'type' => 'share'
        ],
        ['page' => '', 'name' => $page_title]
    ]
);

//Display Smarty Template
$doc_name = cb_get_pagename();
$t->display("{$doc_name}.tpl");


