<?php

if (0 == strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST')) {
    require_once("_access_util.csp");

    // 入力フォームデータを取得する
    $access_keys = @ $G_INPUT['eid'];   // アクセス権キーの一覧
    // アクセス権の一覧を削除する
    $accesses = $logic->getAccesses($object_id, $access_keys);
    $logic->deleteAccesses($object_id, $accesses);

    // アクセス権ページにリダイレクトする
    cb_redirect('portal/system/access_list',
        [
            'pid'  => $portal_id,
            'plid' => $layout_id
        ]);

}
