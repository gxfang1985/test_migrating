<?php


require_once('schedule/view_util.csp');
$view_util = GRN_Schedule_View_Util::getInstance();

// 項目タイプオプション一覧を取得する
$item_type_options = $view_util->listItemTypeOptions(@ $G_INPUT['type']);
$t->assign('item_type_options', $item_type_options);

//--------------------------------------------------------------

// page title
$page_title = grn_get_current_page_display_name();
$t->assign('page_title', $page_title);

// site position
$t->assign(
    'site_position', [
        [
            'page' => 'schedule/system/item_list',
            'name' => grn_get_page_display_name('schedule/system/item_list')
        ],
        ['page' => '', 'name' => $page_title]
    ]
);


// Assign input values
foreach (
    [
        'display_name',
        'id',
        'type',
        'item_menu_textarea',
        'item_menu_text',
        'use',
        'display',
        'display_item_name'
    ] as $param_name
) {
    if (isset($G_INPUT[$param_name])) {
        $t->assign($param_name, $G_INPUT[$param_name]);
    }
}
