<?php

// Smarty をインスタンス化
require_once("grn/smarty.csp");
$t = new GRN_Smarty;

// SmartyValidate should be initialized when an input form is there.
require('SmartyValidate.class.php');
SmartyValidate::connect($t);

//------------------

$menupage_id = @ $G_INPUT['menupageid']; // メニューのID

require_once('schedule/system_logic.csp');
$logic = GRN_Schedule_SystemLogic::getInstance();

if (($menupage = $logic->getMenuPage($menupage_id)) == false) {
    cb_throw_error(E_GRN_SCHD_NOT_FOUND_MENU);
}


$params = [
    'id'    => $menupage_id,                     //メニューID
    'title' => $menupage['menu'],               //タイトル
    'data'  => $menupage['page']
];
if (@ $menupage['creator']) {
    $params['creator_uid'] = $menupage['creator']->getOID();
} elseif (@ $menupage['creator_name']) {
    ;
}
{
    $params['creator_name'] = $menupage['creator_name'];
}
$params['ctime'] = $menupage['ctime'];

if (@ $menupage['modifier']) {
    $params['modify_uid'] = $menupage['modifier']->getOID();
} elseif (@ $menupage['modifier_name']) {
    ;
}
{
    $params['modify_name'] = $menupage['modifier_name'];
}

if (@ $menupage['mtime']) {
    $params['mtime'] = $menupage['mtime'];
}


$t->assign('menupage', $params);

// page title
$page_title = grn_get_current_page_display_name();
$t->assign('page_title', $page_title);
// site position 
$t->assign(
    'site_position', [
        [
            'page' => "schedule/system/menupage_list",
            'name' => grn_get_page_display_name('schedule/system/menupage_list'),
            'sf'   => '1'
        ],
        ['page' => "", 'name' => $page_title]
    ]
);

// Smarty実行
$t->display(cb_get_pagename() . ".tpl");

