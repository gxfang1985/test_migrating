<?php

use grn\schedule\screen\mobile\ScheduleCommentAdd;
use grn\grn\mobile\MobileScreenCommon;

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    global $G_INPUT;
    $screen = new MobileScreenCommon(new ScheduleCommentAdd($G_INPUT));
    $event_id = $screen->post($G_INPUT);

    $params = [
        'event'       => $event_id,
        'bdate'       => cb_at($G_INPUT, 'bdate'),
        'uid'         => cb_at($G_INPUT, 'uid'),
        'gid'         => cb_at($G_INPUT, 'gid'),
        'referer_key' => cb_at($G_INPUT, 'referer_key')
    ];
    cb_redirect('schedule/mobile/view', $params, 'comment_top');
}
