<?php
require_once('grn/smarty.csp');
$t = new GRN_Smarty();

//Set page title
$page_title = grn_get_current_page_display_name();
$t->assign('page_title', $page_title);
//Set siteposition
$parent_page = 'dezielink/system/dz_link_view';
$parent_title = grn_get_page_display_name($parent_page);
$site_position = [
    ['page' => $parent_page, 'name' => $parent_title],
    ['page' => '', 'name' => $page_title]
];
$t->assign('site_position', $site_position);
//Set page display
$form_name = cb_get_pagename();
$t->assign('form_name', $form_name);
$t->display($form_name . '.tpl');
