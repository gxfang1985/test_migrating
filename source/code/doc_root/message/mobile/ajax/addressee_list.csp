<?php

use grn\message\screen\mobile\MessageAddresseeList;
use grn\grn\JSONResponse;

global $G_INPUT;
$addressee_list = new MessageAddresseeList($G_INPUT);

global $G_state_set;
$G_state_set->set('error_page_type', 'json');

$addressee_list->setIsFromAjax(true);
