<?php

use grn\message\screen\mobile\MessageFolderList;
use grn\grn\JSONResponse;

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    global $G_INPUT;
    $message_list_object = new MessageFolderList($G_INPUT);
    $sub_folder_list = $message_list_object->getSubFolderList($G_INPUT);

    global $G_state_set;
    $G_state_set->set('error_page_type', 'json');

    $json = JSONResponse::create();
    $json->response(['subFolderList' => $sub_folder_list]);
}
