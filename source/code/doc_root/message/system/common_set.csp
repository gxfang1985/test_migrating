<?php

//-- instantiate smarty object
require_once('grn/smarty.csp');
$t = new GRN_Smarty();

// site position
$page_title = grn_get_current_page_display_name();
$t->assign('page_title', $page_title);
$t->assign('site_position', [
    [
        'page' => "",
        'name' => $page_title
    ]
]);

require_once('message/system_logic.csp');
$system_logic = GRN_Message_SystemLogic::getInstance();

$t->assign('confirm', $system_logic->getConfirmConfigAttribute());
$t->assign('use_re', $system_logic->getUseREConfigAttribute());
$t->assign('confirm_mode', $system_logic->getConfirmModeConfigAttribute());
$t->assign('enable_follow_autolink', $system_logic->getEnableFollowAutoLink());
// Smarty実行
$t->display(cb_get_pagename() . '.tpl');


