<?php

//-- instantiate Smarty object
require_once("grn/smarty.csp");
$t = new GRN_Smarty;

//-- get parameters from URL paramters
$user_id = @ $G_INPUT['uid'];
$org_id = @ $G_INPUT['oid'];

$logic = _grn_get_privilege_logic();

if (GRN_UUM_ADMINISTRATION_USER == $user_id) {
    cb_throw_error(E_GRN_DONT_DELETE_ADMINISTRATOR);
}

//-- get specified user from uum
/** @var GRN_Uum $uum */
$uum = $G_container_base->getInstance('uum');
$user = $uum->getUser($user_id);
if ( ! $user) {
    cb_throw_error(E_GRN_USER_NOT_FOUND);
}
$logged_in_user = $uum->getLoginUser();
if ( ! $logic->isPrivilegedUser($logged_in_user, $user)) {
    cb_throw_error(E_GRN_NO_SYSTEM_PRIVILEGE);
}

//-- assign smarty parameters
$t->assign('user_id', $user_id);
$t->assign('org_id', $org_id);

//-- page title
$page_title = grn_get_current_page_display_name();
$t->assign('page_title', $page_title);

//-- site position
require_once('grn/controller.csp');
$page_infos = [
    'org_list'        => ['oid' => $org_id],
    'org_user_view'   => ['oid' => $org_id, 'uid' => $user_id],
    'org_user_delete' => null,
];
$util = new GRN_ControllerUtil();
$site_position = $util->makeSitePosition('system/user/', $page_infos);
$t->assign('site_position', $site_position);

//-- show page
$t->display(cb_get_pagename() . ".tpl");

