<?php

// instantiate an Smarty object
require_once("grn/smarty.csp");
$t = new GRN_Smarty;

//Get Login Method ID
$login_method_id = @ $G_INPUT['lmid'];

//Get Login Method Object
require_once('grn/authentication.csp');
$authentication_service = GRN_Authentication_Service::getInstance();
$login_method
    =& $authentication_service->getLoginMethod($login_method_id);

//Check Driver
\grn\system\authentication\AvailableDriverChecker::getInstanceOfLoginMethod()
                                                 ->canDelete(
                                                     $login_method->getDriverType()
                                                 );

//Create Parameter Translation Map
$translation_Map = [
    'lmid'         => '_id',              //Login Method ID
    'display_name' => 'display_name',     //Display Name
];

//Do Parameter Translation
$login_method_for_view = [];
foreach ($translation_Map as $view_name => $model_name) {
    switch ($view_name) {
        case 'lmid':
            $login_method_for_view[$view_name] = $login_method->getOID();
            break;
        case 'display_name':
            $display_name = $login_method->get(GRN_AUTH_PROPERTY_DISPLAY_NAME);
            if ( ! $display_name) {
                $driver_type
                    = $login_method->get(GRN_AUTH_PROPERTY_DRIVER_TYPE);
                $driver_type_elements = explode('.', $driver_type);
                $display_name = cb_msg($driver_type,
                    $driver_type_elements[4]);
            }
            $login_method_for_view[$view_name] = $display_name;
            break;
        default:
            break;
    }
}

//Assign Display Infomation
$t->assign('login_method', $login_method_for_view);


//-- set page title and site position

//page title
$page_title = grn_get_current_page_display_name();
$t->assign('page_title', $page_title);

//site position
$t->assign(
    'site_position', [
        [
            'page' => "system/authentication/login_method_list",
            'name' => grn_get_page_display_name('system/authentication/login_method_list')
        ],
        [
            'page' => "system/authentication/login_method_view",
            'name' => grn_get_page_display_name('system/authentication/login_method_view'),
            'lmid' => $login_method_id
        ],
        ['page' => "", 'name' => $page_title]
    ]
);

//Display Smarty Template
$doc_name = cb_get_pagename();
$t->display("{$doc_name}.tpl");


