<?php

require_once('grn/smarty.csp');
$t = new GRN_Smarty;

require_once('grn/mime.csp');
$mm = GRN_MIMEConfigManager::getInstance();


$info = [];
if (@$G_INPUT['all']) {
    $table =& $mm->getMIMETable();
    $rowset = new CB_RowSet($table);
    $count = $rowset->count();

    $info = [
        'all'                => true,
        'number_of_deletion' => $count
    ];
} else {
    $info = [
        'list'               => @$G_INPUT['eid'],
        'number_of_deletion' => count($G_INPUT['eid'])
    ];
}

$t->assign('deletion_info', $info);

include('_mime_1.csp');

$t->display(cb_get_pagename() . '.tpl');


