<?php

require_once('grn/mime.csp');
$mm = GRN_MIMEConfigManager::getInstance();
$id = @$G_INPUT['id'];
$info = $mm->getMIMETypeById($id);
if (false === $info) {
    cb_throw_error(E_GRN_MIME_MIMETYPE_NOT_FOUND);
}

$t->assign('id', $id);
$t->assign('info', $info);

$page_list = 'system/filemanager/mime_list';
$page_view = 'system/filemanager/mime_view';
$page_title = grn_get_current_page_display_name();
$t->assign('page_title', $page_title);
$t->assign(
    'site_position',
    [
        [
            'page' => $page_list,
            'name' => grn_get_page_display_name($page_list),
            'sf'   => 1
        ],
        [
            'page' => $page_view,
            'name' => grn_get_page_display_name($page_view),
            'id'   => @ $G_INPUT['id']
        ],
        ['page' => "", 'name' => $page_title],
    ]
);


