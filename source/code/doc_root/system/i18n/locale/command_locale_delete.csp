<?php

if (0 == strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST')) {
    global $G_INPUT;
    $lid = @$G_INPUT["lid"];

    require_once("fw/i18n/locale.csp");
    $locale = CB_Locale::select($lid);
    if (is_null($locale)) {
        cb_throw_error(E_COMMON_LOCALE_WAS_NOT_FOUND);
    }

    $locale->delete();
}

cb_redirect("system/i18n/locale/locale");
