<?php

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    global $G_INPUT;

    require_once('system/logging/file.csp');
    $fm = new GRN_Logging_FileManager_Core();

    if (($eid = @ $G_INPUT['eid'])) {

        foreach ($eid as $fid) {
            $fm->deleteFile($fid);
        }
    }

    cb_redirect('system/logging/confirm_log');
}
