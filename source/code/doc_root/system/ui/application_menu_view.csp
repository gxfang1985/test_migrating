<?php

//-- instantiate Smarty object
require_once("grn/smarty.csp");
$t = new GRN_Smarty;

//-- menu id
$id = $G_INPUT['id'];
$t->assign('id', $id);

require_once('grn/ui.csp');
$manager = GRN_UIConfigManager::getInstance();
$menu = $manager->getDefaultApplicationMenu();
$item = $menu->getMenu($id);

if ( ! $item) {
    cb_throw_error(E_GRN_MENU_NOT_FOUND);
}

if ( ! is_null($item['app_id'])) {
    require_once('schedule/resources.csp');
    if ($item['app_id'] == GRN_SCHEDULE_APPLICATION_ID
        && strpos($item['location'], "schedule/facility_index") !== false
    ) {
        $item['icon'] = "facility32";
    }

    require_once('grn/application.csp');
    $app_locator = GRN_ApplicationLocator::instance();
    $app_name = $app_locator->getName($item['app_id']);
    $menu_item = [
        'name'           => $item['name'],
        'url'            => '',
        'app_id'         => $item['app_id'],
        'location'       => $item['location'],
        'caption'        => grn_get_page_display_name($item['location'],
            [
                'app_name'         => $app_name,
                'application_name' => $app_name
            ]),
        'icon_class'     => $item['icon'],
        'icon_url'       => '',
        'icon_file_info' => null
    ];
} else {
    $icon_file = null;
    if (isset($item['icon_file'])) {
        $file =& $item['icon_file'];
        $body =& $file->getCurrentBody();
        $icon_file = ['name' => $file->get('name')];
    }
    $menu_item = [
        'name'           => $item['name'],
        'url'            => $item['location'],
        'app_id'         => '',
        'location'       => '',
        'caption'        => '',
        'icon_class'     => '',
        'icon_url'       => $item['icon'],
        'icon_file_info' => $item['icon_file_info']
    ];
}
$t->assign('item', $menu_item);

$page_title = grn_get_current_page_display_name();
$t->assign('page_title', $page_title);
$t->assign(
    'site_position',
    [
        [
            'page' => 'system/ui/application_menu_list',
            'name' => grn_get_page_display_name('system/ui/application_menu_list')
        ],
        ['page' => "", 'name' => $page_title],
    ]
);

$t->display(cb_get_pagename() . '.tpl');


