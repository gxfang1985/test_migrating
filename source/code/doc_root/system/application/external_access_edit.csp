<?php

use grn\grn\access\logic\InternalIpAddressLogic;
use grn\grn\access\logic\AvailabilitySettingLogic;

global $G_INPUT;

require_once('grn/smarty.csp');
$t = new GRN_Smarty;

$page_title = grn_get_current_page_display_name();
$t->assign('page_title', $page_title);
$page_name = cb_get_pagename();

//Page Information
$page_infos = [
    'availability_user_list' => [],
    'external_access_detail' => [],
    'external_access_edit'   => null
];
require_once('grn/controller.csp');
$controller_util = new GRN_ControllerUtil($page_name);
$site_position = $controller_util->makeSitePosition('system/application/',
    $page_infos);
$t->assign('site_position', $site_position);

$internal_ip_address_logic = new InternalIpAddressLogic();
$internal_ip_address_list = $internal_ip_address_logic->getAll();

$externalConnectSetting = AvailabilitySettingLogic::getExternalAccessSetting();

if ($externalConnectSetting
    == AvailabilitySettingLogic::ACCESS_TYPE_UNRESTRICTED
) {
    $checked_setting['not_use'] = 1;
} elseif ($externalConnectSetting
          == AvailabilitySettingLogic::ACCESS_TYPE_REMOTE_SERVICE
) {
    $checked_setting['use_rsm'] = 1;
} else {
    $checked_setting['use_internal_address'] = 1;
}
$t->assign('checked_setting', $checked_setting);
$t->assign('internal_ip_address_list', $internal_ip_address_list);

$t->display("{$page_name}.tpl");





