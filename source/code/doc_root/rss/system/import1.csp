<?php
//-- instantiate Smarty object
require_once("grn/smarty.csp");
$t = new GRN_Smarty;

$page_name = cb_get_pagename();

$form_name = 'rss/system/import1' . str_replace(' ', '', microtime());
$t->assign('form_name', $form_name);

require_once('SmartyValidate.class.php');
SmartyValidate::connect($t);
SmartyValidate::register_form($form_name, true);

// page title
$page_title = grn_get_page_display_name($page_name);
$t->assign('page_title', $page_title);

// site position
$site_position = [
    ['page' => null, 'name' => $page_title],
];
$t->assign('site_position', $site_position);

$t->assign('form', ['hiddens' => ['fn' => $form_name]]);

//-- show page
$t->display($page_name . '.tpl');

