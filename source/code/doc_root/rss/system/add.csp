<?php

$page_name = cb_get_pagename();

// instantiate an Smarty object
require_once('grn/smarty.csp');
$t = new GRN_Smarty;

$form_name = 'rss/system/add' . str_replace(' ', '', microtime());
$t->assign('form_name', $form_name);

// Validation check
require_once('SmartyValidate.class.php');
SmartyValidate::connect($t);
SmartyValidate::register_form($form_name, true);

// page title
$page_title = grn_get_current_page_display_name();
$t->assign('page_title', $page_title);

$page_list = 'rss/system/list';
$t->assign('site_position', [
    [
        'page' => $page_list,
        'name' => grn_get_page_display_name($page_list)
    ],
    [
        'page' => '',
        'name' => $page_title
    ]
]);

$channel_info = [];
include('_items.csp');

require_once('fw/i18n.csp');
$form_for_view = [
    'items'   => $items_for_view,
    'buttons' => [
        'submit' => [
            'display_name' => cb_msg('grn.rss', 'add'),
            'type'         => 'submit',
        ],
        'cancel' => [
            'type' => 'cancel',
            'page' => 'rss/system/list',
        ],
    ],
    'hiddens' => [
        'fn' => $form_name
    ],
];

$t->assign('form', $form_for_view);

//-- show page
$t->display($page_name . '.tpl');


