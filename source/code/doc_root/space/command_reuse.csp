<?php

use grn\space\screen\SpaceReuse;
use grn\space\screen\common\StandardScreenCommon;

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    global $G_INPUT;
    $screen = new StandardScreenCommon(new SpaceReuse($G_INPUT));
    $newSpace = $screen->post($G_INPUT);
    /** @var \grn\space\data\bean\Space $newSpace */
    cb_redirect("space/top", ["spid" => $newSpace->getId()]);
}
