<?php

use grn\space\screen\application\discussion\ThreadCommentAdd;
use grn\space\screen\common\ApplicationScreenCommon;

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    global $G_INPUT;

    $screen = new ApplicationScreenCommon(new ThreadCommentAdd($G_INPUT));
    $screen->post($G_INPUT);

    cb_redirect('space/application/discussion/index',
        ['spid' => @$G_INPUT['spid'], 'sf' => 1]);
}
