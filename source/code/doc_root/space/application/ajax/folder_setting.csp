<?php

use grn\space\screen\FolderSetting;

if (strcasecmp(cb_at($_SERVER, 'REQUEST_METHOD'), 'POST') == 0) {
    global $G_INPUT;
    global $G_state_set;

    $G_state_set->set('html_should_be_closed', false);
    $G_state_set->set('copyright_should_be_written', false);
    $screen = new FolderSetting($G_INPUT);
    $folderList = $screen->fetchForAjax();

    $json = \grn\grn\JSONResponse::create();
    $json->response(['folder_list' => $folderList]);
}
