<?php

use grn\space\screen\mobile\application\todo\TodoCommentAdd;
use grn\space\screen\common\MobileApplicationScreenCommon;

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    global $G_INPUT;

    $screen = new MobileApplicationScreenCommon(new TodoCommentAdd($G_INPUT));
    $screen->post($G_INPUT);

    cb_redirect('space/mobile/application/todo/detail',
        ['spid' => @$G_INPUT['spid'], 'tdid' => @$G_INPUT['tdid']],
        'comment_top');
}
