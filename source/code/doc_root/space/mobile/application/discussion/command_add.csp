<?php

use grn\space\screen\mobile\application\discussion\DiscussionAdd;
use grn\space\screen\common\MobileApplicationScreenCommon;

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    global $G_INPUT;

    $screen = new MobileApplicationScreenCommon(new DiscussionAdd($G_INPUT));
    $screen->post($G_INPUT);

    cb_redirect('space/mobile/application/discussion/index',
        ['spid' => @$G_INPUT['spid']]);
}
