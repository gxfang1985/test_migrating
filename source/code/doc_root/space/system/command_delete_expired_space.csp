<?php

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    global $G_INPUT;

    $category_id = $G_INPUT['cid'] ?? null;
    $filter_id = $G_INPUT['filter_id'] ?? 0;

    $term = new CB_Date();
    $term->year = $G_INPUT['term_year'];
    $term->month = $G_INPUT['term_month'];
    $term->day = $G_INPUT['term_day'];

    cb_redirect('space/system/delete_expired_space_confirmation',
        [
            'cid'       => $category_id,
            'term_date' => $term->format(),
            'filter_id' => $filter_id
        ]);
}
