<?php

global $G_INPUT;

require_once("grn/smarty.csp");
$t = new GRN_Smarty;

require_once('memo/controller.csp');
$utility = new GRN_Memo_ControllerUtil();

$utility->setSitePosition($t, null);

require_once('memo/config.csp');
$config = GRN_Memo_SystemConfig::getInstance();

$t->assign('filesize_limit', $config->getFileSizeLimit());
$t->assign('enable_htmleditor', $config->getEnableHtmlEditor());

$mega_byte = pow(1024, 2);
$filesize_menu = [
    -1,
    0,
    $mega_byte,
    $mega_byte * 3,
    $mega_byte * 5,
    $mega_byte * 10,
    $mega_byte * 50,
    $mega_byte * 100,
];

$t->assign('mega_byte', $mega_byte);
$t->assign('filesize_menu', $filesize_menu);


$t->display(cb_get_pagename() . ".tpl");

