<?php

global $G_INPUT;

require_once("grn/smarty.csp");
$t = new GRN_Smarty;

$mygroup_id = null;
if (array_key_exists('mgid', $G_INPUT)) {
    $mygroup_id = $G_INPUT['mgid'];
}

global $G_container_base;
$uum =& $G_container_base->getInstance('uum');
$user =& $uum->getLoginUser();

require_once('address/mygroup_logic.csp');
$mygroup = GRN_Address_MyGroup_Logic::getInstance();
$group_for_view = $mygroup->getMyGroupInfo($user, $mygroup_id);

if ($group_for_view == false) {
    cb_throw_error(E_GRN_ADDRESS_MYGROUP_NOT_FOUND);
}

$t->assign('group', $group_for_view);

// page title
$page_title = grn_get_current_page_display_name();
$t->assign('page_title', $page_title);

// site position
$page_info = [
    'mygroup_list' => ['mgid' => $mygroup_id],
    'mygroup_view' => null
];
require_once('grn/controller.csp');
$controller_util = new GRN_ControllerUtil();
$site_position = $controller_util->makeSitePosition('address/', $page_info);
$t->assign('site_position', $site_position);
$delete_info = [
    'title'      => grn_get_page_display_name('address/mygroup_delete'),
    'page'       => 'address/mygroup_delete.tpl',
    'no_confirm' => false,
    'data'       => [
        'mygroup' => $group_for_view
    ],
    'handler'    => 'lnk_delete'
];
$t->assign('delete_info', $delete_info);
$t->display(cb_get_pagename() . ".tpl");

