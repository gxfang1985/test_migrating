<?php

require_once('grn/smarty.csp');
$t = new GRN_Smarty;

////////////////////////////////////////////////////////////////

// GET/POSTされたパラメータを取得する
$fid = null;
if (array_key_exists('fid', $G_INPUT)) {
    $fid = $G_INPUT['fid'];
}
if (0 == strlen($fid)) {
    cb_throw_error(E_GRN_CSV_FILE_NOT_FOUND);
}
$bid = null;
if (array_key_exists('bid', $G_INPUT)) {
    $bid = $G_INPUT['bid'];
}
if (0 == strlen($bid)) {
    cb_throw_error(E_GRN_ADDRESS_INVALID_BOOK_ID);
}
$charset = null;
if (array_key_exists('charset', $G_INPUT)) {
    $charset = $G_INPUT['charset'];
}
if (0 == strlen($charset)) {
    global $G_config_common;
    $charset = $G_config_common->get('I18N', 'default_external_encoding');
}
$skip = null;
if (array_key_exists('skip', $G_INPUT)) {
    $skip = $G_INPUT['skip'];
}

// アドレス帳を取得する
require_once('address/application.csp');
$app_locator = GRN_ApplicationLocator::instance();
/** @var GRN_Address_Application $app */
$app =& $app_locator->getInstance(GRN_ADDRESS_APPLICATION_ID);
if ( ! is_object($app) || ! is_a($app, 'GRN_Address_Application')) {
    cb_throw_error(E_GRN_APPLICATION_NOT_AVAILABLE);
}

// セッションからファイルを取得する
require_once('fw/session_manager.csp');
$session_manager = CB_SessionManager::getInstance();
$session
    =& $session_manager->getSession('address/system/access_import1');
$files = $session->getFiles('import_files');
if ( ! array_key_exists($fid, $files)) {
    require_once('grn/error_code.csp');
    cb_throw_error(E_GRN_CSV_FILE_NOT_FOUND);
}

// ファイルパスを取得する
$file_path = $files[$fid]->getPath();
require_once('fw/csv.csp');
$reader = new CB_CSVReader($charset, $file_path);

// 表示するサンプルの行数
$read_lines = 5;

// 表示するサンプル行を読み込む
if ($skip) {
    $reader->readLine();
}

$lines = [];
for ($i = 0; $i < $read_lines; $i++) {
    if ( ! ($line = $reader->readLine())) {
        break;
    }
    $lines[] = $line;
}

if (0 == count($lines)) {
    cb_throw_error(E_GRN_ADDRESS_CSV_LINES_NOT_FOUND);
}

$t->assign('config_id', 'system');
$t->assign('app_id', 'address');
$t->assign('file_id', $fid);
$t->assign('charset', $charset);
$t->assign('skip', $skip);
$t->assign('form', ['hiddens' => ['bid' => $bid]]);
$t->assign('csv_datas', $lines);
$t->assign('csv_type', 'access');

////////////////////////////////////////////////////////////////

// Smartyにページタイトルを割り当てる
$page_title = grn_get_page_display_name('address/system/access_import2');
$t->assign('page_title', $page_title);

// Smartyにサイトポジションを割り当てる
$page_info = [
    'import_index'   => [],
    'access_import2' => null
];
require_once('grn/controller.csp');
$controller_util = new GRN_ControllerUtil();
$site_position = $controller_util->makeSitePosition('address/system/',
    $page_info);
$t->assign('site_position', $site_position);

// Smartyを実行する
$t->display(cb_get_pagename() . '.tpl');


