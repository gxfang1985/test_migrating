<?php
if (strcasecmp(cb_at($_SERVER, 'REQUEST_METHOD'), 'POST') == 0) {
    if (cb_is_forest()) {
        // Go to logout page
        cb_redirect_to_url('/logout');
    } else {
        // Logout
        $uum = cb_lwc_uum();
        $uum->logout();

        // Session Destroy
        require_once('fw/session_manager.csp');
        $session_manager = CB_SessionManager::getInstance();
        $session_manager->destroy();

        cb_redirect('index');
    }
}
