<?php
/** @var GRN_Util_Api_Service $sysapi_service */
/** @var GRN_Uum $uum */
if (isset($sysapi_service) && ! defined('ON_FOREST')) {
    // Get parameters from the xml
    $request_params = $sysapi_service->getRequestParameters();

    $remove_userIds = $sysapi_service->selectNodesValue($request_params,
        'userId', true);

    global $G_container_base;
    $uum = $G_container_base->getInstance('uum');
    $affected_userIds = [];
    foreach ($remove_userIds as $remove_userId) {
        $user_info = $uum->getUserInfo($remove_userId);
        if ($user_info === false) {
            continue; // This userId does not exist
        }
        $result = $uum->removeUser($remove_userId);
        if ($result) {
            $affected_userIds[] = $remove_userId;
            $uum->execInspection('user', 'delete', [
                'uid'     => $remove_userId,
                'name'    => $user_info['col_display_name'],
                'account' => $user_info['col_foreign_key'],
                'memo'    => 'Edited by SysAPI'
            ]);
        }
    }

    require_once('grn/smarty.csp');
    $t = new GRN_Smarty;

    $t->assign('affected_userIds', $affected_userIds);

    $t->assign('xml_namespaces',
        "xmlns:admin=\"http://wsdl.cybozu.co.jp/admin/2008\"");
    grn_util_api_response($t, __FILE__);
}
