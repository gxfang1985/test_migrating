<?php

global $G_INPUT;

if ( ! isset($G_INPUT['p']) || strlen($G_INPUT['p']) < 1) {
    cb_throw_error(E_GRN_CELLULAR_PAGE_NOT_FOUND);
}

// ページ指定引数を分解
$pages = explode('-', $G_INPUT['p']);

if (count($pages) < 2) {
    cb_throw_error(E_GRN_CELLULAR_PAGE_NOT_FOUND);
}

// アプリのページを呼び出す
grn_cellular_switch_page(implode('/', $pages));


