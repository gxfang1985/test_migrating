<?php

use grn\grn\access\service\AppAccess;

require_once('grn/smarty.csp');
$t = new GRN_Smarty;

// current mygroup id
$mygroup_id = @ $G_INPUT['mgid'];

// ログインユーザーを取得する
/** @var GRN_Uum $uum */
$uum = $G_container_base->getInstance('uum');
$login = $uum->getLoginUser();

// Myグループ一覧を取得する
$mygroup_rows = $uum->listMyGroups($login);
$mygroup_list = [];
foreach (array_keys($mygroup_rows) as $id) {
    $mygroup_row = $mygroup_rows[$id];
    $mygroup_list[$id] = [
        'mgid' => $id,
        'name' => $mygroup_row->get('name'),
    ];
}

if ($mygroup_id && isset($mygroup_list[$mygroup_id])) {
    $user_rows = $uum->getMyGroupUsers($mygroup_id);
    $facility_ids = [];
    if (AppAccess::isAppAvailable('schedule')) {
        $facility_ids = $uum->getMyGroupFacilitiesId($mygroup_id);
    }

    $mygroup_row = $mygroup_rows[$mygroup_id];
    $mygroup = [
        'mgid'         => $mygroup_id,
        'name'         => $mygroup_list[$mygroup_id]['name'],
        'description'  => $mygroup_row->get('description'),
        'user_ids'     => array_keys($user_rows),
        'user_count'   => count($user_rows),
        'facility_ids' => $facility_ids
    ];

    require_once('grn/controller.csp');
    $users_info
        = GRN_ControllerUtil::getUserInfoToShowUserName($mygroup['user_ids'],
        $login);

    $t->assign('users_info', $users_info);
}

$num_of_mygroup = count($mygroup_list);
$order_disabled = false;
$minimum_mygroup = 2;
if ($num_of_mygroup < $minimum_mygroup) {
    $order_disabled = true;
}

// SmartyにすべてのMyグループ情報を割り当てる
$t->assign('mygroup_id', $mygroup_id);
$t->assign('mygroup', @ $mygroup);
$t->assign('mygroup_list', $mygroup_list);
$t->assign('order_disabled', $order_disabled);

//--------------------------------------------------------------

// Smartyにページタイトルを割り当てる
$page_title = grn_get_current_page_display_name();
$t->assign('page_title', $page_title);

// Smartyにサイトポジションを割り当てる
require_once('grn/controller.csp');
$page_infos = ['mygroup_list' => null];
$util = new GRN_ControllerUtil();
$site_position = $util->makeSitePosition('personal/user/', $page_infos);
$t->assign('site_position', $site_position);
if (isset ($mygroup['name'])) {
    $delete_info_multi = [
        'title'        => grn_get_page_display_name('personal/user/mygroup_user_delete_multi'),
        'page'         => 'personal/user/mygroup_user_delete_multi.tpl',
        'no_confirm'   => false,
        'data'         => [
            'selected' => [
                'name' => $mygroup['name'],
                'id'   => $mygroup_id
            ]
        ],
        'handler'      => 'btn_delete_multi',
        'multi_target' => 'eid[]',
        'form_target'  => 'personal/user/mygroup_list',
    ];
    $t->assign('delete_info_multi', $delete_info_multi);

    $delete_info = [
        'title'      => grn_get_page_display_name('personal/user/mygroup_delete'),
        'page'       => 'personal/user/mygroup_delete.tpl',
        'no_confirm' => false,
        'data'       => [
            'mygroup' => [
                'id'   => $mygroup_id,
                'name' => $mygroup['name']
            ]
        ],
        'handler'    => 'lnk_delete'
    ];
    $t->assign('delete_info', $delete_info);
}

// Smartyを実行する
$t->display(cb_get_pagename() . '.tpl');


