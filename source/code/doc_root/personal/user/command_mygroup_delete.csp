<?php

// POSTされたフォームデータを取得する
$mygroup_id = @ $G_INPUT['mgid'];

if (0 == strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST')) {
    if (is_null($mygroup_id) || 0 == strlen($mygroup_id)) {
        cb_throw_error(E_GRN_PERSONAL_INVALID_MYGROUP_ID);
    }

    // Myグループを削除する
    /** @var \GRN_Uum $uum */
    $uum = $G_container_base->getInstance('uum');
    $uum->removeMyGroup($mygroup_id);

    $mygroup_id = null;
}

cb_redirect('personal/user/mygroup_list');


