<?php

require_once('fw/i18n.csp');

global $G_container_base;
$uum = $G_container_base->getInstance('uum');
$login = $uum->getLoginUser();

require_once('grn/calendar.csp');
$cm = GRN_CalendarManager::getInstance();
$c = $cm->getPreferenceUserCalendar($login);
if ( ! $c) {
    cb_throw_error(E_GRN_CALENDAR_CALENDAR_NOT_FOUND);
}

$bdate = (int)@$G_INPUT['bdate'];
$eid = @$G_INPUT['event'];

$e = $c->getDayInfoById($eid);
if ( ! $e) {
    cb_throw_error(E_GRN_CALENDAR_DAY_NOT_FOUND);
}
$date = $e->get('date');
$type = $e->get('type');

$cs = GRN_CalendarService::getInstance();
$memorialday = $cs->getEventName(GRN_CALENDAR_TYPE_MEMORIALDAY);
$memo = $cs->getEventName(GRN_CALENDAR_TYPE_SYSTEM_MEMO);

$types[GRN_CALENDAR_TYPE_MEMORIALDAY]
    = [
    'value' => GRN_CALENDAR_TYPE_MEMORIALDAY,
    'label' => $memorialday
];
$types[GRN_CALENDAR_TYPE_USER_MEMO]
    = [
    'value' => GRN_CALENDAR_TYPE_USER_MEMO,
    'label' => $memo
];

$types[$type]['selected'] = true;
$event = [
    'date'   => $date,
    'types'  => $types,
    'id'     => $eid,
    'detail' => $e->get('info')
];

$calendar = ['event' => $event];

$t->assign('date', $date);
$t->assign('calendar', $calendar);

// page title
$page_title = grn_get_page_display_name('personal/calendar/event_modify');
$t->assign('page_title', $page_title);

$page_view = 'personal/calendar/calendar_view';
$page_event = 'personal/calendar/event_view';

// site position 
$t->assign(
    'site_position', [
        [
            'page'  => $page_view,
            'name'  => grn_get_page_display_name($page_view),
            'bdate' => $date->year
        ],
        [
            'page'  => $page_event,
            'name'  => grn_get_page_display_name($page_event),
            'event' => $eid
        ],
        ['page' => "", 'name' => $page_title]
    ]
);


