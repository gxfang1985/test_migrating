<?php
declare(strict_types=1);

global $G_INPUT;
$page_header_notification
    = new \grn\notification\screen\PageHeaderNotification($G_INPUT);
$template_name = $page_header_notification->isJson() ? '_page_header_body'
    : 'page_header';
$data = $page_header_notification->getNotification($template_name);

if ($page_header_notification->isJson()) {
    $json = \grn\grn\JSONResponse::create();
    $json->response($data);
} else {
    echo $data['content'];
}
