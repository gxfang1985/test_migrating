<?php

$tm = array_key_exists('tm', $G_INPUT) ? $G_INPUT['tm'] : null;
if (is_null($tm)) {
    require_once('cbapi/error_code.csp');
    grn_cbapi_throw_error(E_GRN_CBAPI_NO_PARAMETER);
}
if (is_numeric($tm) === false || $tm < 0) {
    require_once('cbapi/error_code.csp');
    grn_cbapi_throw_error(E_GRN_CBAPI_INVALID_TIME);
}

$t->assign('offset', time() - intval($G_INPUT['tm']));


