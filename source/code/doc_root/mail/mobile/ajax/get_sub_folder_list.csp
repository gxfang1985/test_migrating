<?php

use grn\mail\screen\mobile\MailFolderList;
use grn\grn\JSONResponse;

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    global $G_INPUT;
    $mail_list_object = new MailFolderList($G_INPUT);
    $sub_folder_list = $mail_list_object->getSubFolderList($G_INPUT);

    global $G_state_set;
    $G_state_set->set('error_page_type', 'json');

    $json = JSONResponse::create();
    $json->response(['subFolderList' => $sub_folder_list]);
}
