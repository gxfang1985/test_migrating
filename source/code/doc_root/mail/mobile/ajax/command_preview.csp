<?php

use grn\mail\screen\mobile\MailSendConfirm;
use grn\grn\mobile\MobileScreenCommon;

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    global $G_INPUT, $G_state_set;

    $G_state_set->set('error_page_type', 'json');

    $screen = new MobileScreenCommon(new MailSendConfirm($G_INPUT));
    $screen->post($G_INPUT);
}
