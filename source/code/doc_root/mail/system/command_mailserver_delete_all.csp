<?php

if (0 == strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST')) {
    //Get All Mail Server List
    require_once('mail/system_config.csp');
    $system_config = GRN_Mail_SystemConfig::getInstance();
    $mailserver_list = $system_config->getServerDataList();
    $mailserver_ids = array_keys($mailserver_list);

    // Delete All Mail Server
    require_once('mail/system_config.csp');
    $system_config = GRN_Mail_SystemConfig::getInstance();
    $system_config->deleteServerDatas($mailserver_ids);
}

cb_redirect('mail/system/mailserver');


