<?php

if (0 == strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST')) {
    //Get Parameters
    global $G_INPUT;
    $org_id = @ $G_INPUT['oid'];
    $mail_delete = (isset($G_INPUT['mail_delete']) && $G_INPUT['mail_delete']);

    //Get All Account List
    require_once('mail/system_config.csp');
    $system_config = GRN_Mail_SystemConfig::getInstance();
    $account_list = $system_config->getAllAccountDataList();
    $account_ids = array_keys($account_list);

    //Delete All Mail Account
    $system_config->deleteAccountDatas($account_ids, $mail_delete);
}

cb_redirect('mail/system/user_account', ['oid' => $org_id, 'sf' => 1]);


