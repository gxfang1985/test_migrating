<?php

global $G_INPUT;
$account_id = @ $G_INPUT['aid'];
$category_id = @ $G_INPUT['cid'];
$command = @ $G_INPUT['cmd'];

if (0 == strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST')) {
    // チェックした項目
    $uids = @ $G_INPUT['uids'];
    if (is_array($uids) && (count($uids) > 0)) {
        if ($command == 'delete') {
            require_once('fw/session_manager.csp');
            $sm = CB_SessionManager::getInstance();
            $session = $sm->getSession('mail/cannot_receive');

            // セッションに処理するメールデータIDリストを保存
            $session->set('uids', $uids);

            // 削除確認画面へ
            cb_redirect('mail/cannot_receive_delete_multi',
                ['aid' => $account_id, 'cid' => $category_id]);
        }
    }
}

cb_redirect('mail/cannot_receive',
    ['aid' => $account_id, 'cid' => $category_id]);


