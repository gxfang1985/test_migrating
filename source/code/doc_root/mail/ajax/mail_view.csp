<?php

use grn\mail\screen\MailView;
use grn\grn\JSONResponse;

global $G_INPUT;
global $G_state_set;

$G_state_set->set('html_should_be_closed', false);
$G_state_set->set('copyright_should_be_written', false);
$G_state_set->set('error_page_type', 'json');

$mail_object = new MailView($G_INPUT);
$mail_view = $mail_object->fetch();

$json = JSONResponse::create();
$json->response([
    'mail_view'        => $mail_view,
    'numOfUnreadMails' => $mail_object->getNumOfUnreadMails()
]);
