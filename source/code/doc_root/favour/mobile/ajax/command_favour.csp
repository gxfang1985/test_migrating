<?php

use grn\favour\screen\mobile\FavourScreen;
use grn\grn\JSONResponse;

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    global $G_INPUT;
    global $G_state_set;

    $G_state_set->set('html_should_be_closed', false);
    $G_state_set->set('copyright_should_be_written', false);
    $G_state_set->set('error_page_type', 'json');

    $screen = new FavourScreen($G_INPUT);
    $screen->post($G_INPUT);

    $json = JSONResponse::create();
    $json->response([
        'count'   => $screen->getCount(),
        'f_word'  => $screen->fetchFavourWord(),
        'f_count' => $screen->fetchFavourCount()
    ]);
}
