<?php

global $G_INPUT;

if ( ! isset($t) || ! is_a($t, 'GRN_Smarty')) {
    require_once("grn/smarty.csp");
    $t = new GRN_Smarty;
}

$folder_id = GRN_CABINET_ROOT_FOLDER_ID;

if (array_key_exists('nid', $G_INPUT) && strlen($G_INPUT['nid']) > 0
    && $G_INPUT['nid'] > 0
) {
    $folder_id = $G_INPUT['nid'];
}

$t->assign('folder_id', $folder_id);

if ( ! ($folder =& $G_cabinet->getFolder($G_cabinet_login, $folder_id))) {
    cb_throw_error(E_GRN_CABINET_FOLDER_NOT_FOUND);
}

$t->assign('node_id', $folder->getOID());
$t->assign('node', [
    'nid'  => $folder->getOID(),
    'name' => $folder->get('name'),
]);

$t->assign('poid', @ $G_INPUT['poid']);

$t->assign('notify', ['force' => $folder->get('force_notify')]);


