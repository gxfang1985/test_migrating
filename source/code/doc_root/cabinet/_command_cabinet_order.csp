<?php
if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    global $G_INPUT;

    if ( ! array_key_exists('hid', $G_INPUT)) {
        cb_throw_error(E_GRN_CABINET_FOLDER_NOT_FOUND);
    }

    $cabinetOrderBy = cb_at($G_INPUT, 'cabinet_order_by');
    $order = cb_at($G_INPUT, 'order');
    $folderId = cb_at($G_INPUT, 'hid');

    //Add Folder Cabinet order
    global $G_cabinet_login;
    require_once('cabinet/folder.csp');
    $folderMgr = GRN_Cabinet_FolderManager::getInstance();
    $folderMgr->setFolderCabinetOrder($G_cabinet_login, $folderId,
        $cabinetOrderBy, $order);
}

