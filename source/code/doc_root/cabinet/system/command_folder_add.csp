<?php

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    global $G_INPUT;

    $target_name = 'cabinet/system/folder_add';

    require_once('../_command_folder_add.csp');

    if (@ $success) {
        cb_redirect('cabinet/system/folder_list', ['hid' => $G_INPUT['hid']]);
    } else {
        require_once('cabinet/controller.csp');
        $utility = new GRN_Cabinet_ControllerUtil();

        $page_path = [
            'cabinet/system/folder_list' => ['hid' => $G_INPUT['hid']],
        ];

        $utility->setSitePosition($t, $page_path);

        $t->display($target_name . '.tpl');
    }
}
