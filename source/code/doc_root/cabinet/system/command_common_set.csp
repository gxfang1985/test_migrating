<?php

if (strcasecmp(@ $_SERVER['REQUEST_METHOD'], 'POST') == 0) {
    global $G_INPUT;

    require_once('cabinet/config.csp');
    $config = GRN_Cabinet_SystemConfig::getInstance();

    $config->setTrashPeriod(intval($G_INPUT['trash_period']));

    //一括ダウンロード
    $max_zip_size = @$G_INPUT['bundle_download'];
    if (0 <= $max_zip_size) {
        $config->setBundleDownloadMaxSize($max_zip_size);
    }

    cb_redirect('system/application_list', ['app_id' => 'cabinet']);
}
