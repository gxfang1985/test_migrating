<?php

/**
 * Dezie/Office Link System Logic
 */
require_once('dezielink/resources.csp');
require_once('dezielink/system_logic_base.csp');


/**
 * Class For DezieLink System Logic
 */
class GRN_DezieLink_SystemLogic extends GRN_Connector_SystemLogicBase
{
    function __construct()
    {
        $this->_module_id = GRN_DZLK_MODULE_ID;
        $this->_available = GRN_DZLK_DEZIELINK_AVAILABLE;
        $this->_task_name = GRN_DZLK_SYNC_USER_TASK_NAME;
        $this->_task_file = GRN_DZLK_SYNC_USER_TASK_FILE;
        parent::__construct();
    }

    /**
     * @return GRN_DezieLink_SystemLogic
     */
    public static function getInstance()
    {
        static $_instance = null;
        if (is_null($_instance)) {
            $_instance = new GRN_DezieLink_SystemLogic();
        }

        return $_instance;
    }
}

