<?php

require_once('fw/database.csp');
require_once('address/bean/GrnAddressSharedbookLocal.csp');

class GrnAddressSharedbookLocalDAO
{
    /**
     * @param                           $inDataObj
     * @param GrnAddressSharedBookLocal $inAddressSharedbookLocalObj
     *
     * @return bool|int
     */
    public function deleteByParentId_LanguageCode(
        $inDataObj,
        $inAddressSharedbookLocalObj
    ) {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inAddressSharedbookLocalObj->getParentId();
        $inLanguageCode = $inAddressSharedbookLocalObj->getLanguageCode();

        //サブクエリを使ってるが、parent_idがN、language_idが1の関係で　N×1回評価されるだけなのでこのクエリでOK?
        $query = "DELETE FROM tab_grn_address_sharedbook_local";
        $query = cb_queryf($inDb, $query
                                  . " WHERE parent_id='@S' AND language_id = (SELECT _id FROM tab_cb_language_status WHERE col_language='@S');",
            $inParentId, $inLanguageCode);
        if ($inDb->query($query) === false) {
            $inDb->throwServerError($query);
        }

        $deleteCount = $inDb->affected_rows();

        return $deleteCount;
    }

    /**
     * @param                           $inDataObj
     * @param GrnAddressSharedBookLocal $inAddressSharedbookLocalObj
     *
     * @return bool|int
     */
    public function insert($inDataObj, $inAddressSharedbookLocalObj)
    {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inAddressSharedbookLocalObj->getParentId();
        $inLanguageCode = $inAddressSharedbookLocalObj->getLanguageCode();
        $inName = $inAddressSharedbookLocalObj->getName();

        $query
            = "INSERT INTO tab_grn_address_sharedbook_local( parent_id, language_id, col_name )";
        $query = cb_queryf($inDb, $query
                                  . " VALUES ( '@S', (SELECT _id FROM tab_cb_language_status WHERE col_language='@S'), '@S');",
            $inParentId, $inLanguageCode, $inName);
        if ($inDb->query($query) === false) {
            $inDb->throwServerError($query);
        }

        $insertCount = $inDb->affected_rows();

        return $insertCount;
    }

    /**
     * @param                           $inDataObj
     * @param GrnAddressSharedBookLocal $inAddressSharedbookLocalObj
     *
     * @return bool|int
     */
    public function update($inDataObj, $inAddressSharedbookLocalObj)
    {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inAddressSharedbookLocalObj->getParentId();
        $inLanguageCode = $inAddressSharedbookLocalObj->getLanguageCode();
        $inName = $inAddressSharedbookLocalObj->getName();

        $query = "UPDATE tab_grn_address_sharedbook_local";
        $query = cb_queryf($inDb, $query . " SET col_name = '@S'", $inName);
        $query = cb_queryf($inDb, $query . " WHERE parent_id = '@S'",
            $inParentId);
        $query = cb_queryf($inDb, $query
                                  . " AND language_id = (SELECT _id FROM tab_cb_language_status WHERE col_language='@S');",
            $inLanguageCode);

        if ($inDb->query($query) === false) {
            $inDb->throwServerError($query);
        }

        $updateCount = $inDb->affected_rows();

        return $updateCount;
    }

    /**
     * @param                           $inDataObj
     * @param GrnAddressSharedBookLocal $inAddressSharedbookLocalObj
     *
     * @return bool|GrnAddressSharedbookLocal
     */
    public function selectBySharedbookId_LanguageCode(
        $inDataObj,
        $inAddressSharedbookLocalObj
    ) {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inAddressSharedbookLocalObj->getParentId();
        $inLanguageCode = $inAddressSharedbookLocalObj->getLanguageCode();

        $query
            = "SELECT fl.parent_id, fl.language_id, fl.col_name, l.col_language";
        $query = $query
                 . " FROM tab_grn_address_sharedbook_local fl, tab_cb_language_status l";
        $query = $query . " WHERE fl.language_id = l._id";
        $query = cb_queryf($inDb, $query . " AND fl.parent_id = '@S'",
            $inParentId);
        $query = cb_queryf($inDb, $query . " AND l.col_language = '@S'",
            $inLanguageCode);

        $result = $inDb->query($query);

        if (($result === false) || ($inDb->num_rows($result) != 1)) {
            if ($result) {
                $inDb->free_result($result);
            }

            return false;
        }

        $rawdata = $inDb->fetch_assoc($result);
        $inDb->free_result($result);

        $grnAddressSharedbookLocal = new GrnAddressSharedbookLocal($rawdata);

        return $grnAddressSharedbookLocal;
    }

    /**
     * @param $inDataObj
     * @param $inSharedbookId
     *
     * @return GrnAddressSharedbookLocal[]
     */
    public function getAddressSharedbookLocalListBySharedbookId(
        $inDataObj,
        $inSharedbookId
    ) {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];

        $query
            = "SELECT fl.parent_id, fl.language_id, fl.col_name, l.col_language";
        $query = $query
                 . " FROM tab_grn_address_sharedbook_local fl, tab_cb_language_status l";
        $query = $query . " WHERE fl.language_id = l._id";
        $query = cb_queryf($inDb, $query . " AND fl.parent_id = '@S'",
            $inSharedbookId);

        $result = $inDb->query($query);

        if ($result === false) {
            //Throw Query Error
            $inDb->throwError(['query' => 'query failed: ' . $query]);
        }

        $grnAddressSharedbookLocalArray = [];
        while ($rawdata = $inDb->fetch_assoc($result)) {
            $grnAddressSharedbookLocal
                = new GrnAddressSharedbookLocal($rawdata);
            $grnAddressSharedbookLocalArray[$grnAddressSharedbookLocal->getLanguageCode()]
                = $grnAddressSharedbookLocal;
        }
        $inDb->free_result($result);
        $result = false;

        return $grnAddressSharedbookLocalArray;
    }

    /**
     * @param $inDataObj
     *
     * @return GrnAddressSharedbookLocal[]
     */
    public function getAddressSharedbookLocalList($inDataObj)
    {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];

        $query
            = "SELECT f.col_id, fl.parent_id, fl.language_id, fl.col_name, l.col_language";
        $query = $query . " FROM tab_grn_address_sharedbook f";
        $query = $query . " , tab_grn_address_sharedbook_local fl";
        $query = $query . " , tab_cb_language_status l";
        $query = $query . " WHERE fl.language_id = l._id";
        $query = $query . " AND fl.parent_id = f._id";
        $query = $query . " ORDER BY fl.parent_id";

        $result = $inDb->query($query);

        if ($result === false) {
            //Throw Query Error
            $inDb->throwError(['query' => 'query failed: ' . $query]);
        }

        $grnAddressSharedbookLocalArray = [];
        while ($rawdata = $inDb->fetch_assoc($result)) {
            $grnAddressSharedbookLocal
                = new GrnAddressSharedbookLocal($rawdata);
            $grnAddressSharedbookLocalArray[] = $grnAddressSharedbookLocal;
        }
        $inDb->free_result($result);
        $result = false;

        return $grnAddressSharedbookLocalArray;
    }
}
