<?php

require_once('fw/database.csp');
require_once('schedule/bean/GrnFacilityFacilityLocal.csp');

class GrnFacilityFacilityLocalDAO
{
    /**
     * @param                          $inDataObj
     * @param GrnFacilityFacilityLocal $inFacilityLocalObj
     *
     * @return bool|int
     */
    public function deleteByParentId_LanguageCode(
        $inDataObj,
        $inFacilityLocalObj
    ) {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inFacilityLocalObj->getParentId();
        $inLanguageCode = $inFacilityLocalObj->getLanguageCode();

        $query = "DELETE FROM tab_grn_facility_facility_local";
        $query = cb_queryf($inDb, $query
                                  . " WHERE parent_id='@S' AND language_id = (SELECT _id FROM tab_cb_language_status WHERE col_language='@S');",
            $inParentId, $inLanguageCode);
        if ($inDb->query($query) === false) {
            $inDb->throwServerError($query);
        }

        $deleteCount = $inDb->affected_rows();

        return $deleteCount;
    }

    /**
     * @param                          $inDataObj
     * @param GrnFacilityFacilityLocal $inFacilityLocalObj
     *
     * @return bool|int
     */
    public function insert($inDataObj, $inFacilityLocalObj)
    {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inFacilityLocalObj->getParentId();
        $inLanguageCode = $inFacilityLocalObj->getLanguageCode();
        $inName = $inFacilityLocalObj->getName();

        $query
            = "INSERT INTO tab_grn_facility_facility_local( parent_id, language_id, col_name )";
        $query = cb_queryf($inDb, $query
                                  . " VALUES ( '@S', (SELECT _id FROM tab_cb_language_status WHERE col_language='@S'), '@S');",
            $inParentId, $inLanguageCode, $inName);
        if ($inDb->query($query) === false) {
            $inDb->throwServerError($query);
        }

        $insertCount = $inDb->affected_rows();

        return $insertCount;
    }

    /**
     * @param                          $inDataObj
     * @param GrnFacilityFacilityLocal $inFacilityLocalObj
     *
     * @return bool|int
     */
    public function update($inDataObj, $inFacilityLocalObj)
    {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inFacilityLocalObj->getParentId();
        $inLanguageCode = $inFacilityLocalObj->getLanguageCode();
        $inName = $inFacilityLocalObj->getName();

        $query = "UPDATE tab_grn_facility_facility_local";
        $query = cb_queryf($inDb, $query . " SET col_name = '@S'", $inName);
        $query = cb_queryf($inDb, $query . " WHERE parent_id = '@S'",
            $inParentId);
        $query = cb_queryf($inDb, $query
                                  . " AND language_id = (SELECT _id FROM tab_cb_language_status WHERE col_language='@S');",
            $inLanguageCode);

        if ($inDb->query($query) === false) {
            $inDb->throwServerError($query);
        }

        $updateCount = $inDb->affected_rows();

        return $updateCount;
    }

    /**
     * @param                          $inDataObj
     * @param GrnFacilityFacilityLocal $inFacilityLocalObj
     *
     * @return bool|GrnFacilityFacilityLocal
     */
    public function selectByFacilityId_LanguageCode(
        $inDataObj,
        $inFacilityLocalObj
    ) {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inFacilityLocalObj->getParentId();
        $inLanguageCode = $inFacilityLocalObj->getLanguageCode();

        $query
            = "SELECT fl.parent_id, fl.language_id, fl.col_name, l.col_language";
        $query = $query
                 . " FROM tab_grn_facility_facility_local fl, tab_cb_language_status l";
        $query = $query . " WHERE fl.language_id = l._id";
        $query = cb_queryf($inDb, $query . " AND fl.parent_id = '@S'",
            $inParentId);
        $query = cb_queryf($inDb, $query . " AND l.col_language = '@S'",
            $inLanguageCode);

        $result = $inDb->query($query);

        if (($result === false) || ($inDb->num_rows($result) != 1)) {
            if ($result) {
                $inDb->free_result($result);
            }

            return false;
        }

        $rawdata = $inDb->fetch_assoc($result);
        $inDb->free_result($result);

        $grnFacilityLocal = new GrnFacilityFacilityLocal($rawdata);

        return $grnFacilityLocal;
    }

    /**
     * @param                          $inDataObj
     * @param GrnFacilityFacilityLocal $inFacilityId
     *
     * @return GrnFacilityFacilityLocal[]
     */
    public function getFacilityLocalListByFacilityId($inDataObj, $inFacilityId)
    {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];

        $query
            = "SELECT fl.parent_id, fl.language_id, fl.col_name, l.col_language";
        $query = $query
                 . " FROM tab_grn_facility_facility_local fl, tab_cb_language_status l";
        $query = $query . " WHERE fl.language_id = l._id";
        $query = cb_queryf($inDb, $query . " AND fl.parent_id = '@S'",
            $inFacilityId);

        $result = $inDb->query($query);

        if ($result === false) {
            //Throw Query Error
            $inDb->throwError(['query' => 'query failed: ' . $query]);
        }

        $grnFacilityLocalArray = [];
        while ($rawdata = $inDb->fetch_assoc($result)) {
            $grnFacilityLocal = new GrnFacilityFacilityLocal($rawdata);
            $grnFacilityLocalArray[$grnFacilityLocal->getLanguageCode()]
                = $grnFacilityLocal;
        }
        $inDb->free_result($result);
        $result = false;

        return $grnFacilityLocalArray;
    }

    /**
     * @param $inDataObj
     *
     * @return GrnFacilityFacilityLocal[]
     */
    public function getFacilityLocalList($inDataObj)
    {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];

        $query
            = "SELECT f.col_foreign_key, fl.parent_id, fl.language_id, fl.col_name, l.col_language";
        $query = $query . " FROM tab_grn_facility_facility f";
        $query = $query . " , tab_grn_facility_facility_local fl";
        $query = $query . " , tab_cb_language_status l";
        $query = $query . " WHERE fl.language_id = l._id";
        $query = $query . " AND fl.parent_id = f._id";
        $query = $query . " ORDER BY fl.parent_id, fl.language_id";

        $result = $inDb->query($query);

        if ($result === false) {
            //Throw Query Error
            $inDb->throwError(['query' => 'query failed: ' . $query]);
        }

        $grnFacilityLocalArray = [];
        while ($rawdata = $inDb->fetch_assoc($result)) {
            $grnFacilityLocal = new GrnFacilityFacilityLocal($rawdata);
            $grnFacilityLocalArray[] = $grnFacilityLocal;
        }
        $inDb->free_result($result);
        $result = false;

        return $grnFacilityLocalArray;
    }

    /**
     * @param $inDataObj
     * @param $inExportLanguageCodeArray
     *
     * @return GrnFacilityFacilityLocal[]
     */
    public function getFacilityLocalListByLanguageCodes(
        $inDataObj,
        $inExportLanguageCodeArray
    ) {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];

        $inEscapeExportLanguageCodeArray = [];
        foreach ($inExportLanguageCodeArray as $langCode) {
            $inEscapeExportLanguageCodeArray[] = $inDb->escape($langCode);
        }
        $inLanguageCodes = implode("','", $inEscapeExportLanguageCodeArray);

        $query
            = "SELECT f.col_foreign_key, fl.parent_id, fl.language_id, fl.col_name, l.col_language";
        $query = $query . " FROM tab_grn_facility_facility f";
        $query = $query . " , tab_grn_facility_facility_local fl";
        $query = $query . " , tab_cb_language_status l";
        $query = $query . " WHERE fl.language_id = l._id";
        $query = $query . " AND fl.parent_id = f._id";
        $query = $query . " AND l.col_language IN ('${inLanguageCodes}')";
        $query = $query . " ORDER BY fl.parent_id, fl.language_id";

        $result = $inDb->query($query);

        if ($result === false) {
            //Throw Query Error
            $inDb->throwError(['query' => 'query failed: ' . $query]);
        }

        $grnFacilityLocalArray = [];
        while ($rawdata = $inDb->fetch_assoc($result)) {
            $grnFacilityLocal = new GrnFacilityFacilityLocal($rawdata);
            $grnFacilityLocalArray[] = $grnFacilityLocal;
        }
        $inDb->free_result($result);
        $result = false;

        return $grnFacilityLocalArray;
    }
}
