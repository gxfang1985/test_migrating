<?php

namespace grn\schedule\api\model;

class FacilityReservationInfoItem
{
    CONST ITEM_TYPE_SINGLE_LINE = 'SINGLE_LINE_TEXT';
    CONST ITEM_TYPE_MULTI_LINE = 'MULTI_LINE_TEXT';
    CONST ITEM_TYPE_DROP_DOWN = 'DROP_DOWN';
    /**
     * @var string $type Type (SINGLE_LINE_TEXT/MULTI_LINE_TEXT/DROP_DOWN)
     */
    private $type;
    /**
     * @var string $value Item value
     */
    private $value;

    public function __construct($type = null, $value = null)
    {
        $this->type = $type;
        $this->value = $value;
    }

    public function getType()
    {
        return $this->type;
    }

    public function setType($type)
    {
        $this->type = $type;
    }

    public function getValue()
    {
        return $this->value;
    }

    public function setValue($value)
    {
        $this->value = $value;
    }

    public static function getMappingItemType($item_type)
    {
        $facility_reservation_type = null;
        switch ($item_type) {
            case 'string':
                $facility_reservation_type = self::ITEM_TYPE_SINGLE_LINE;
                break;
            case 'multiple_string':
                $facility_reservation_type = self::ITEM_TYPE_MULTI_LINE;
                break;
            case 'menu':
                $facility_reservation_type = self::ITEM_TYPE_DROP_DOWN;
                break;
        }

        return $facility_reservation_type;
    }

    public function toArray()
    {
        return get_object_vars($this);
    }
}
