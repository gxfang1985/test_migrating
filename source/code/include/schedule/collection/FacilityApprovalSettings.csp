<?php
declare(strict_types=1);

namespace grn\schedule\collection;

class FacilityApprovalSettings
{
    /**
     * @var bool[] Key is a facility id
     */
    private $settings;

    public function __construct(array $settings)
    {
        $this->settings = $settings;
    }

    /**
     * @param string[] $facility_ids
     *
     * @return bool
     */
    public function isEnabledAnyFacilities(array $facility_ids): bool
    {
        foreach ($facility_ids as $facility_id) {
            if ($this->isEnabled($facility_id)) {
                return true;
            }
        }

        return false;
    }

    /**
     * @param string $facility_id
     *
     * @return bool
     */
    public function isEnabled($facility_id): bool
    {
        return $this->settings[$facility_id];
    }
}
