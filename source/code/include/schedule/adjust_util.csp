<?php

class GRN_ScheduleAdjustUtil
{
    /**
     * Get options for select exception around time
     *
     * @param int $selected selected option's value
     *
     * @return array options
     */
    public static function getAroundTimeOptions($selected = 30)
    {
        if ( ! $selected) {
            $selected = 30;
        }

        $minute_unit = cb_msg('grn.schedule', 'minute_unit');
        $hour_unit = cb_msg('grn.schedule', 'hour_unit');
        $options = [
            ['value' => 10, 'label' => '10' . $minute_unit],
            ['value' => 20, 'label' => '20' . $minute_unit],
            ['value' => 30, 'label' => '30' . $minute_unit],
            ['value' => 40, 'label' => '40' . $minute_unit],
            ['value' => 50, 'label' => '50' . $minute_unit],
            ['value' => 60, 'label' => '1' . $hour_unit],
            ['value' => 120, 'label' => '2' . $hour_unit],
            ['value' => 180, 'label' => '3' . $hour_unit]
        ];

        foreach (array_keys($options) as $key) {
            if ($options[$key]['value'] == $selected) {
                $options[$key]['selected'] = true;
            }
        }

        return $options;
    }
}


