<?php

namespace grn\mail\tnef;


class Property
{
    // https://msdn.microsoft.com/en-us/library/office/cc842157.aspx
    const PidTagAttachLongFilename = 0x3707;

    // https://msdn.microsoft.com/en-us/library/office/cc815911.aspx
    const PidTagRtfCompressed = 0x1009;

    /**
     * PidTagAttachDataBinary and PidTagAttachDataObject have a same identifier.
     * They can be distinguish by the data type.
     * https://msdn.microsoft.com/en-us/library/office/cc842329.aspx
     * https://msdn.microsoft.com/en-us/library/office/cc815511.aspx
     */
    const PidTagAttachDataBinary = 0x3701;

    // https://msdn.microsoft.com/en-us/library/office/cc815439.aspx
    const PidTagAttachMethod = 0x3705;

    // https://msdn.microsoft.com/en-us/library/office/cc765770.aspx
    const PidTagAttachTag = 0x370A;

    /** @var mixed */
    private $data;

    /** @var int */
    private $propertyType;

    /** @var int */
    private $propertyId;

    /**
     * @param int $property_type
     * @param int $property_id
     */
    public function __construct($property_type, $property_id)
    {
        $this->propertyType = $property_type;
        $this->propertyId = $property_id;
    }

    /**
     * @return int
     */
    public function getPropertyId()
    {
        return $this->propertyId;
    }

    /**
     * @return mixed
     */
    public function getData()
    {
        return $this->data;
    }

    /**
     * @param mixed $data
     */
    public function setData($data)
    {
        $this->data = $data;
    }

    /**
     * @return int
     */
    public function getPropertyType()
    {
        return $this->propertyType;
    }
}
