<?php

class CbGroupLocal
{
    private $_col_parent_id;
    private $_col_language_id;
    private $_col_name;

    private $_col_parent_code;
    private $_col_language;

    public function __construct($inDataArray = null)
    {
        if (is_null($inDataArray)) {
            $this->setParentId('');
            $this->setLanguageId('');
            $this->setName('');

            $this->setParentCode('');
            $this->setLanguageCode('');
        } else {
            $this->setParentId($inDataArray['parent_id']);
            $this->setLanguageId($inDataArray['language_id']);
            $this->setName($inDataArray['col_name']);

            $foreignKey = (array_key_exists('col_foreign_key', $inDataArray))
                ? $inDataArray['col_foreign_key'] : '';
            $this->setParentCode($foreignKey);
            $this->setLanguageCode($inDataArray['col_language']);
        }
    }

    public function convertArray()
    {
        $result = [];

        $result['parent_id'] = $this->getParentId();
        $result['language_id'] = $this->getLanguageId();
        $result['col_name'] = $this->getName();

        $result['col_foreign_key'] = $this->getParentCode();
        $result['col_language'] = $this->getLanguageCode();

        return $result;
    }

    public function getParentId()
    {
        return $this->_col_parent_id;
    }

    public function setParentId($value)
    {
        $this->_col_parent_id = $value;
    }

    public function getLanguageId()
    {
        return $this->_col_language_id;
    }

    public function setLanguageId($value)
    {
        $this->_col_language_id = $value;
    }

    public function getName()
    {
        return $this->_col_name;
    }

    public function setName($value)
    {
        $this->_col_name = $value;
    }

    public function getParentCode()
    {
        return $this->_col_parent_code;
    }

    public function setParentCode($value)
    {
        $this->_col_parent_code = $value;
    }

    public function getLanguageCode()
    {
        return $this->_col_language;
    }

    public function setLanguageCode($value)
    {
        $this->_col_language = $value;
    }
}
