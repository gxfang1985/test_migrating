<?php

use grn\system\sandbox\SandboxConstants;

require_once('fw/database.csp');
require_once('fw/bean/CbGroupLocal.csp');

class CbGroupLocalDAO
{
    public function __construct($sandbox = SandboxConstants::NO_SANDBOX_MODE)
    {
        $this->postfix = ($sandbox === SandboxConstants::SANDBOX_MODE
            ? "_sandbox" : "");
    }

    /**
     * @param              $inDataObj
     * @param CbGroupLocal $inGroupLocalObj
     *
     * @return bool|int
     */
    public function deleteByParentId_LanguageCode($inDataObj, $inGroupLocalObj)
    {
        /* @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inGroupLocalObj->getParentId();
        $inLanguageCode = $inGroupLocalObj->getLanguageCode();

        $p = $this->postfix;

        $query = "DELETE FROM tab_cb_group_local{$p}";
        $query = $query . " WHERE parent_id='" . $inDb->escape($inParentId)
                 . "' AND language_id = (SELECT _id FROM tab_cb_language_status WHERE col_language='"
                 . $inDb->escape($inLanguageCode) . "');";
        if ($inDb->query($query) === false) {
            $inDb->throwServerError($query);
        }

        $deleteCount = $inDb->affected_rows();

        return $deleteCount;
    }

    /**
     * @param              $inDataObj
     * @param CbGroupLocal $inGroupLocalObj
     *
     * @return bool|int
     */
    public function insert($inDataObj, $inGroupLocalObj)
    {
        /* @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inGroupLocalObj->getParentId();
        $inLanguageCode = $inGroupLocalObj->getLanguageCode();
        $inName = $inGroupLocalObj->getName();

        $p = $this->postfix;

        $query
            = "INSERT INTO tab_cb_group_local{$p}( parent_id, language_id, col_name )";
        $query = $query . " VALUES ( '" . $inDb->escape($inParentId)
                 . "', (SELECT _id FROM tab_cb_language_status WHERE col_language='"
                 . $inDb->escape($inLanguageCode) . "'), '"
                 . $inDb->escape($inName) . "');";
        if ($inDb->query($query) === false) {
            $inDb->throwServerError($query);
        }

        $insertCount = $inDb->affected_rows();

        return $insertCount;
    }

    /**
     * @param              $inDataObj
     * @param CbGroupLocal $inGroupLocalObj
     *
     * @return bool|int
     */
    public function update($inDataObj, $inGroupLocalObj)
    {
        /* @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inGroupLocalObj->getParentId();
        $inLanguageCode = $inGroupLocalObj->getLanguageCode();
        $inName = $inGroupLocalObj->getName();

        $p = $this->postfix;

        $query = "UPDATE tab_cb_group_local{$p}";
        $query = $query . " SET col_name = '" . $inDb->escape($inName) . "'";
        $query = $query . " WHERE parent_id = '" . $inDb->escape($inParentId)
                 . "'";
        $query = $query
                 . " AND language_id = (SELECT _id FROM tab_cb_language_status WHERE col_language='"
                 . $inDb->escape($inLanguageCode) . "');";

        if ($inDb->query($query) === false) {
            $inDb->throwServerError($query);
        }

        $updateCount = $inDb->affected_rows();

        return $updateCount;
    }

    /**
     * @param              $inDataObj
     * @param CbGroupLocal $inGroupLocalObj
     *
     * @return bool|CbGroupLocal
     */
    public function selectByGroupId_LanguageCode($inDataObj, $inGroupLocalObj)
    {
        /* @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inGroupLocalObj->getParentId();
        $inLanguageCode = $inGroupLocalObj->getLanguageCode();

        $p = $this->postfix;

        $query
            = "SELECT cl.parent_id, cl.language_id, cl.col_name, l.col_language";
        $query = $query
                 . " FROM tab_cb_group_local{$p} cl, tab_cb_language_status l";
        $query = $query . " WHERE cl.language_id = l._id";
        $query = $query . " AND cl.parent_id = '" . $inDb->escape($inParentId)
                 . "'";
        $query = $query . " AND l.col_language = '"
                 . $inDb->escape($inLanguageCode) . "'";

        $result = $inDb->query($query);

        if (($result === false) || ($inDb->num_rows($result) != 1)) {
            if ($result) {
                $inDb->free_result($result);
            }

            return false;
        }

        $rawdata = $inDb->fetch_assoc($result);
        $inDb->free_result($result);

        $cbGroupLocal = new CbGroupLocal($rawdata);

        return $cbGroupLocal;
    }

    /**
     * @param              $inDataObj
     * @param CbGroupLocal $inGroupId
     *
     * @return CbGroupLocal[]
     */
    public function getGroupLocalListByGroupId($inDataObj, $inGroupId)
    {
        /* @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];

        $p = $this->postfix;

        $query
            = "SELECT c.col_foreign_key, cl.parent_id, cl.language_id, cl.col_name, l.col_language";
        $query = $query . " FROM tab_cb_group{$p} c";
        $query = $query . " , tab_cb_group_local{$p} cl";
        $query = $query . " , tab_cb_language_status l";
        $query = $query . " WHERE cl.language_id = l._id";
        $query = $query . " AND cl.parent_id = c._id";
        $query = $query . " AND cl.parent_id = '${inGroupId}'";

        $result = $inDb->query($query);

        if ($result === false) {
            //Throw Query Error
            $inDb->throwError(['query' => 'query failed: ' . $query]);
        }

        $cbGroupLocalArray = [];
        while ($rawdata = $inDb->fetch_assoc($result)) {
            $cbGroupLocal = new CbGroupLocal($rawdata);
            $cbGroupLocalArray[$cbGroupLocal->getLanguageCode()]
                = $cbGroupLocal;
        }
        $inDb->free_result($result);
        $result = false;

        return $cbGroupLocalArray;
    }

    /**
     * @param $inDataObj
     * @param $inGroupId
     * @param $inExportLanguageCodeArray
     *
     * @return CbGroupLocal[]
     */
    public function getGroupLocalListByGroupId_LanguageCodes(
        $inDataObj,
        $inGroupId,
        $inExportLanguageCodeArray
    ) {
        /* @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];

        $inEscapeExportLanguageCodeArray = [];
        foreach ($inExportLanguageCodeArray as $langCode) {
            $inEscapeExportLanguageCodeArray[] = $inDb->escape($langCode);
        }
        $inLanguageCodes = implode("','", $inEscapeExportLanguageCodeArray);

        $query
            = "SELECT c.col_foreign_key, cl.parent_id, cl.language_id, cl.col_name, l.col_language";
        $query = $query . " FROM tab_cb_group c";
        $query = $query . " , tab_cb_group_local cl";
        $query = $query . " , tab_cb_language_status l";
        $query = $query . " WHERE cl.language_id = l._id";
        $query = $query . " AND cl.parent_id = c._id";
        $query = $query . " AND cl.parent_id = '" . $inDb->escape($inGroupId)
                 . "'";
        $query = $query . " AND l.col_language IN ('${inLanguageCodes}')";
        $query = $query . " ORDER BY cl.parent_id";

        $result = $inDb->query($query);

        if ($result === false) {
            //Throw Query Error
            $inDb->throwError(['query' => 'query failed: ' . $query]);
        }

        $cbGroupLocalArray = [];
        while ($rawdata = $inDb->fetch_assoc($result)) {
            $cbGroupLocal = new CbGroupLocal($rawdata);
            $cbGroupLocalArray[] = $cbGroupLocal;
        }
        $inDb->free_result($result);
        $result = false;

        return $cbGroupLocalArray;
    }
}
