<?php

namespace grn\fts;

class FileType
{
    const ALL = 'ALL';
    const PPT = 'ppt';
    const DOC = 'doc';
    const XLS = 'xls';
    const PDF = 'pdf';
    const TEXT = 'txt';
    const OTHER = 'other';

    /** @var string[] */
    private static $PPT_EXTENSIONS = ['ppt', 'pptm', 'pptx', 'odp'];
    /** @var string[] */
    private static $XLS_EXTENSIONS = ['xls', 'xlsm', 'xlsx', 'ods'];
    /** @var string[] */
    private static $DOC_EXTENSIONS = ['doc', 'docm', 'docx', 'odt'];
    /** @var string[] */
    private static $PDF_EXTENSIONS = ['pdf'];
    /** @var string[] */
    private static $TXT_EXTENSIONS = ['txt'];

    /**
     * @return array
     */
    public static function getFileTypeEnum()
    {
        return [
            self::ALL,
            self::PPT,
            self::DOC,
            self::XLS,
            self::PDF,
            self::TEXT,
            self::OTHER
        ];
    }

    /**
     * @static
     *
     * @param string $fileType
     *
     * @return string[]
     */
    public static function getFileTypeExtensions($fileType)
    {
        switch ($fileType) {
            case self::PPT:
                return self::$PPT_EXTENSIONS;
            case self::DOC:
                return self::$DOC_EXTENSIONS;
            case self::XLS:
                return self::$XLS_EXTENSIONS;
            case self::PDF:
                return self::$PDF_EXTENSIONS;
            case self::TEXT:
                return self::$TXT_EXTENSIONS;
            default:
                break;
        }

        return [];
    }

    public static function getAllExtensions()
    {
        return array_merge(self::$PPT_EXTENSIONS, self::$DOC_EXTENSIONS,
            self::$XLS_EXTENSIONS, self::$PDF_EXTENSIONS,
            self::$TXT_EXTENSIONS);
    }
}
