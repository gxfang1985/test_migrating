<?php

namespace grn\fts;

class SearchTarget
{
    const CURRENT = 'CURRENT';
    const ALL = 'ALL';
    const MYSPACE = 'MY';
    const INNERSPACE = 'SPACE';

    /**
     * @return array
     */
    public static function getTargetEnum()
    {
        return [self::CURRENT, self::ALL];
    }

    /**
     * @return array
     */
    public static function getSearchRangeEnum()
    {
        return [self::ALL, self::MYSPACE, self::INNERSPACE];
    }
}
