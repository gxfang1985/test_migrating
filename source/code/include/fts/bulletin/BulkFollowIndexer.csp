<?php

namespace grn\fts\bulletin;

use grn\fts\BulkIndexerChildProcessInterface;
use grn\fts\ChildProcessArgValue;
use grn\fts\FtsProduct;
use grn\fts\FullIndexer as Indexer;

require_once('bulletin/table.csp');

class BulkFollowIndexer implements BulkIndexerChildProcessInterface
{
    /** @var \grn\fts\ChildProcessArgValue */
    private $value;

    /**
     * @param array $input
     */
    public function __construct(array $input)
    {
        $this->value = new ChildProcessArgValue();
        $this->value->parseInput($input);
    }

    /**
     * @return string[]
     */
    public function getConnectAppIds()
    {
        return ["bulletin"];
    }

    /**
     */
    public function execute()
    {
        $rows = [];
        $service = new IndexService($this->value->getSearchEngine());
        $db = cb_get_app_db('bulletin');
        $query
            = "SELECT f._id, " .
              "CASE WHEN CHAR_LENGTH(f.col_data) > "
              . Indexer::LONGTEXT_MAX_LENGTH .
              " THEN 1 ELSE 0 END AS truncated," .
              " LEFT(f.col_data, " . Indexer::LONGTEXT_MAX_LENGTH
              . ") AS col_data, " .
              "f.col_modifier, " .
              "f.col_mtime, " .
              "f.col_article, " .
              "a.col_category " .
              "FROM tab_grn_bulletin_followentity AS f, " .
              "tab_grn_bulletin_articleentity AS a " .
              "WHERE f._id >= {$db->escape($this->value->getStartId())} " .
              "AND {$this->value->getEndId()} >= f._id " .
              "AND f.col_article=a._id " .
              "AND f._id <> " . GRN_BULLETIN_NULL_OBJECT_ID .
              " FOR UPDATE";
        $result = $db->query($query);
        while ($row = $db->fetch_assoc($result)) {
            $rows[] = $row;
            if ($row['truncated'] === 1) {
                echo "follow truncated: tab_grn_bulletin_followentity {$row['_id']}.";
            }
        }
        $db->free_result($result);
        $service->bulkCreateFollowIndex($rows, $this->value->getForward());
        $rowsCount = count($rows);
        echo "{$rowsCount} follows indexed.";
        gc_collect_cycles();
    }
}
