<?php

namespace grn\fts\bulletin;

use grn\fts\BulkIndexerChildProcessInterface;
use grn\fts\ChildProcessArgValue;
use grn\fts\FtsProduct;
use grn\fts\FullIndexer as Indexer;

require_once('bulletin/table.csp');

class BulkArticleIndexer implements BulkIndexerChildProcessInterface
{
    /** @var \grn\fts\ChildProcessArgValue */
    private $value;

    public function __construct(array $input)
    {
        $this->value = new ChildProcessArgValue();
        $this->value->parseInput($input);
    }

    /**
     * @return string[]
     */
    public function getConnectAppIds()
    {
        return ["bulletin"];
    }

    public function execute()
    {
        $service = new IndexService($this->value->getSearchEngine());
        $db = cb_get_app_db('bulletin');
        $rows = [];
        $query
            = "SELECT _id, " .
              "col_subject, " .
              "CASE WHEN CHAR_LENGTH(col_data) > "
              . Indexer::LONGTEXT_MAX_LENGTH .
              " THEN 1 ELSE 0 END AS truncated," .
              " LEFT(col_data, " . Indexer::LONGTEXT_MAX_LENGTH
              . ") AS col_data, " .
              "col_modifier, " .
              "col_mtime, " .
              "col_category, " .
              "col_start_timestamp, " .
              "col_end_timestamp, " .
              "col_manually_enter_sender " .
              "FROM tab_grn_bulletin_articleentity " .
              "WHERE _id >= {$db->escape($this->value->getStartId())} " .
              "AND {$db->escape($this->value->getEndId())} >= _id " .
              "AND _id <> " . GRN_BULLETIN_NULL_OBJECT_ID .
              " FOR UPDATE";
        $result = $db->query($query);
        while ($row = $db->fetch_assoc($result)) {
            $rows[] = $row;
            if ($row['truncated'] === 1) {
                echo "article truncated: tab_grn_bulletin_articleentity {$row['_id']}.";
            }
        }
        $db->free_result($result);
        $service->bulkCreateArticleIndex($rows, $this->value->getForward());
        $rowsCount = count($rows);
        echo "{$rowsCount} articles indexed.";
        gc_collect_cycles();
    }
}
