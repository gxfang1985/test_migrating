<?php

namespace grn\fts;

use grn\fts\filter\SearchFilterInterface;

interface SearchQueryInterface
{
    const DATE_NOT_SPECIFIED = null;

    /**
     * @abstract
     * @return string
     */
    public function getKeyword();

    /**
     * @abstract
     *
     * @param int $size
     */
    public function setSize($size);

    /**
     * @abstract
     * @return int
     */
    public function getSize();

    /**
     * @abstract
     *
     * @param int $start
     */
    public function setStart($start);

    /**
     * @abstract
     * @return int
     */
    public function getStart();

    /**
     * @abstract
     * @return string
     */
    public function getSortOrder();

    /**
     * @abstract
     * @return int  return unix timestamp. return SearchQueryInterface::DATE_NOT_SPECIFIED if not specified.
     */
    public function getDateLower();

    /**
     * @abstract
     * @return int  return unix timestamp. return SearchQueryInterface::DATE_NOT_SPECIFIED if not specified.
     */
    public function getDateUpper();

    /**
     * @abstract
     * @return bool
     */
    public function isTitleOnly();

    /**
     * @abstract
     * @return SearchFilterInterface[]
     */
    public function getFilters();
}
