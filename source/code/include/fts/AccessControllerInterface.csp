<?php

namespace grn\fts;

interface AccessControllerInterface
{
    /**
     * Get if a searched document is accessible for a user.
     *
     * @abstract
     *
     * @param \grn\fts\SearchDocumentInterface $document
     * @param \CB_User                         $user
     *
     * @return bool
     */
    public function isAccessible(
        SearchDocumentInterface $document,
        \CB_User $user
    );
}
