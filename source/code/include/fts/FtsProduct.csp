<?php

namespace grn\fts;

class FtsProduct
{
    /** @var string */
    private $product;

    /**
     * @param string $product
     */
    private function __construct($product)
    {
        $this->product = $product;
    }

    /**
     * @return FtsProduct
     */
    public static function solr()
    {
        static $solr = null;

        if ($solr === null) {
            $solr = new FtsProduct('solr');
        }

        return $solr;
    }

    /**
     * @return FtsProduct
     */
    public static function elasticsearch()
    {
        static $es = null;

        if ($es === null) {
            $es = new FtsProduct('es');
        }

        return $es;
    }

    /**
     * @return bool
     */
    public function isSolr()
    {
        return $this->product === 'solr';
    }

    /**
     * @return bool
     */
    public function isElasticsearch()
    {
        return $this->product === 'es';
    }

    /**
     * @return string
     */
    public function getProduct()
    {
        return $this->product;
    }
}
