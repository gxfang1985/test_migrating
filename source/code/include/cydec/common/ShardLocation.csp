<?php

namespace grn\cydec\common;

class ShardLocation implements ShardLocationInterface
{
    /** @var string * */
    private $host;
    /** @var string * */
    private $port;

    /**
     * @param string $host
     * @param string $port
     */
    public function __construct($host, $port)
    {
        $this->setHost($host);
        $this->setPort($port);
    }

    /**
     * @return string
     */
    public function getHost()
    {
        return $this->host;
    }

    /**
     * @param string $host
     */
    private function setHost($host)
    {
        $this->host = $host;
    }

    /**
     * @return string
     */
    public function getPort()
    {
        return $this->port;
    }

    /**
     * @param string $port
     */
    private function setPort($port)
    {
        $this->port = $port;
    }
}
