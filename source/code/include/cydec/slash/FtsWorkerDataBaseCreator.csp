<?php

namespace grn\cydec\slash;

/**
 * Class FtsWorkerDBCreator
 * cb_slashデータベースの作成を責務とするクラス
 *
 * @package grn\cydec\slash
 */
class FtsWorkerDataBaseCreator
{

    /**
     * @param string $adminPassword
     */
    public function createDB($adminPassword)
    {
        $db = cb_get_app_db("job")->getCopy();
        $db->_dbname = "cb_slash";
        if ($db->dbExist("cbroot", $adminPassword)) {
            return;
        }

        $db->createdb('cbroot', $adminPassword);
    }

}
