            E_GRN_LINK_CATEGORY_INVALID_ID);    //Category ID

        //Get Parent Category
        $category_information_manager_base
            =& $this->_getCategoryInformationManagerBase();
        $parent_category
            =& $category_information_manager_base->getParent($category_id,
            $lock_mode);
        if ( ! $parent_category) {
            {
                $___ret = false;

                return $___ret;
            }
        }

        //Return Parent Category Information
        return $parent_category;
    }

    /**
     * Get Child Category
     *
     * @param int   $category_id         //Category ID
     * @param array $child_category_list //Child Category List
     */
