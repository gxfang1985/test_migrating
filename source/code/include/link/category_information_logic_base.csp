            =& $this->_getCategoryInformationManagerBase();

        return $category_information_manager_base->searchCount($search_category_list,
            $target_list, $condition_list, $term, $lock_mode);
    }

    /**
     * Get Parent Category
     *
     * @param  int $category_id //Category ID
     * @param  int $lock_mode   //Lock Mode
     *
     * @return object $parent_category           //Parent Category Information
     */
