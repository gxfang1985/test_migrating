    /**
     * @param $inDataObj
     * @param $inId
     *
     * @return bool|GrnPortalPortlet
     */
    public function selectDefaultById($inDataObj, $inId)
    {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inLock = (array_key_exists('lock', $inDataObj)) ? $inDataObj['lock']
            : null;

        $query
            = "SELECT p._id, p.col_available_myportal, p.col_creator, p.col_creator_foreign_key, p.col_creator_name";
        $query = $query
                 . ", p.col_ctime, p.col_editor, p.col_group, p.col_group_list_index, p.col_list_index, p.col_modifier";
        $query = $query
                 . ", p.col_modifier_foreign_key, p.col_modifier_name, p.col_mtime";
        $query = $query . ", p.col_name";
        $query = $query
                 . ", p.col_reserve_blob1, p.col_reserve_blob2, p.col_reserve_blob3, p.col_reserve_int1, p.col_reserve_int2";
        $query = $query
                 . ", p.col_reserve_int3, p.col_reserve_text1, p.col_reserve_text2, p.col_reserve_text3, p.col_set_template";
        $query = $query
                 . ", p.col_source, p.col_type, p.col_user, p.col_version, p.col_view_template";
        $query = $query . " FROM tab_grn_portal_portlet p";
        $query = $query . " WHERE p._id = '" . $inDb->escape($inId) . "'";
        $query = $inDb->select_format($query, 0, -1, $inLock);

        $result = $inDb->query($query);

        if (($result === false) || ($inDb->num_rows($result) != 1)) {
            if ($result) {
                $inDb->free_result($result);
            }

            return false;
        }

        $rawdata = $inDb->fetch_assoc($result);
        $inDb->free_result($result);

        $grnPortlet = new GrnPortalPortlet($rawdata);

        return $grnPortlet;
    }

