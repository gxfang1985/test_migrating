<?php
declare(strict_types=1);

namespace grn\api\validator;

abstract class CheckerBase
{
    /**
     * @param string|array $param_name
     * @param array        $input
     *
     * @return bool
     */
    abstract public function check($param_name, array $input): bool;

    /**
     * @param string|array $key
     * @param array        $input
     *
     * @return mixed|null
     */
    public function getValue($key, array $input)
    {
        if ( ! is_array($key)) {
            $value = $input[$key] ?? null;

            return $value;
        }
        if (count($key) === 0) {
            return null;
        }

        $current_value = $input;
        foreach ($key as $current_key) {
            if ( ! isset($current_value[$current_key])) {
                return null;
            }
            $current_value = $current_value[$current_key];
        }

        return $current_value;
    }
}
