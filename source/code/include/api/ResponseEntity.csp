<?php
declare(strict_types=1);

namespace grn\api;

use grn\api\http\HttpStatus;
use grn\api\http\response\MessageInterface;

class ResponseEntity
{
    /** @var MessageInterface */
    private $body;

    /** @var HttpStatus */
    private $httpStatus;

    /**
     * @param MessageInterface $message
     * @param HttpStatus       $http_status
     */
    public function __construct(
        MessageInterface $message,
        HttpStatus $http_status
    ) {
        $this->body = $message;
        $this->httpStatus = $http_status;
    }

    /**
     * @return MessageInterface
     */
    public function getBody(): MessageInterface
    {
        return $this->body;
    }

    /**
     * @return HttpStatus
     */
    public function getHttpStatus(): HttpStatus
    {
        return $this->httpStatus;
    }

    /**
     * @param Fields $fields
     *
     */
    public function convertToFields(Fields $fields)
    {
        $this->body->convertToFields($fields);
    }

    /**
     * @param HttpStatus $httpStatus
     */
    public function setHttpStatus(HttpStatus $httpStatus)
    {
        $this->httpStatus = $httpStatus;
    }
}
