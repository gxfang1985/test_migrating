<?php
declare(strict_types=1);

namespace grn\api\dev\fields;

use grn\api\http\HttpStatus;
use grn\api\ResponseEntity;
use grn\api\http\response\Record;
use grn\api\RestApi;

class SimpleResponseBody extends RestApi
{
    /**
     * @param array $params
     *
     * @return ResponseEntity
     *
     * Usage: api/dev/fields/simple_response_body?hoge=123&fuga=456&fields=hoge,fields
     * Expects: {
     *             "fields": "hoge,fields",
     *             "hoge": 123
     *          }
     */
    public function execute(array $params): ResponseEntity
    {
        $response_entity
            = new ResponseEntity(new Record($this->getInput()),
            new HttpStatus(HttpStatus::OK));

        return $response_entity;
    }
}
