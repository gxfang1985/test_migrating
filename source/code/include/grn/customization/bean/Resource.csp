<?php

namespace grn\grn\customization\bean;

class Resource
{
    private $id;
    private $colTarget;
    private $colURL;
    private $colFile;
    private $colType;

    const TYPE_JS = 'js';
    const TYPE_CSS = 'css';

    /**
     * Resource constructor.
     *
     * @param array|NULL $inDataArray
     */
    public function __construct(array $inDataArray = null)
    {
        if ( ! is_null($inDataArray)) {
            $this->setId(cb_at($inDataArray, '_id', ''));
            $this->setTarget(cb_at($inDataArray, 'col_target', ''));
            $this->setURL(cb_at($inDataArray, 'col_url', ''));
            $this->setFile(cb_at($inDataArray, 'col_file', null));
            $this->setType(cb_at($inDataArray, 'col_type', ''));
        }
    }

    /**
     * @return array
     */
    public function toArray()
    {
        $result = [];
        $result['_id'] = $this->getId();
        $result['col_target'] = $this->getTarget();
        $result['col_url'] = $this->getURL();
        $result['col_file'] = $this->getFile();
        $result['col_type'] = $this->getType();

        return $result;
    }

    /**
     * @return mixed
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * @param $value
     */
    public function setId($value)
    {
        $this->id = $value;
    }

    /**
     * @return mixed
     */
    public function getTarget()
    {
        return $this->colTarget;
    }

    /**
     * @param $value
     */
    public function setTarget($value)
    {
        $this->colTarget = $value;
    }

    /**
     * @return mixed
     */
    public function getURL()
    {
        return $this->colURL;
    }

    /**
     * @param $value
     */
    public function setURL($value)
    {
        $this->colURL = $value;
    }

    /**
     * @return mixed
     */
    public function getFile()
    {
        return $this->colFile;
    }

    /**
     * @param $value
     */
    public function setFile($value)
    {
        $this->colFile = $value;
    }

    /**
     * @return mixed
     */
    public function getType()
    {
        return $this->colType;
    }

    /**
     * @param $value
     */
    public function setType($value)
    {
        $this->colType = $value;
    }
}
