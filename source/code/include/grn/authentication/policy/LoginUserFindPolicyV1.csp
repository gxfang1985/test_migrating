<?php

namespace grn\grn\authentication\policy;

/**
 * Class LoginUserFindPolicyV1 for Rest API V1
 *
 * @package grn\grn\authentication\policy
 */
class LoginUserFindPolicyV1 implements LoginUserFindPolicyInterface
{
    private $userName;
    private $password;

    /**
     * @param string $input json literal
     *
     * @return LoginUserFindPolicyV1
     */
    public static function getInstance($input)
    {
        $json = json_decode($input, true);

        return new self(cb_at($json, "username"), cb_at($json, "password"));
    }

    /**
     * @param string $account
     * @param string $password
     */
    private function __construct($account, $password)
    {
        $this->userName = $account;
        $this->password = $password;
    }

    /**
     * @return \CB_User|false ログインを試行しているユーザー
     */
    public function findUser()
    {
        return cb_lwc_uum()->getUserByForeignKey($this->userName);
    }

    /**
     * ログイン試行時のパスワードを返します
     *
     * @return string|null
     */
    public function getPasswordToken()
    {
        return $this->password;
    }

    /**
     * @return string
     */
    public function getAccountToken()
    {
        return $this->userName;
    }
}
