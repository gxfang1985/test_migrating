<?php

namespace grn\grn\authentication\policy;

/**
 * Slashですでにログイン済みなので、ガルーンのログイン処理は成功させない
 * Slash側でログインを行わないとガルーンにログインすることができないからです.
 * Class LoginUserFindPolicyDefaultForest
 *
 * @package grn\grn\authentication\policy
 */
class LoginUserFindPolicyDefaultForest implements LoginUserFindPolicyInterface
{
    /**
     * @return LoginUserFindPolicyDefaultForest
     */
    public static function getInstance()
    {
        return new self();
    }

    private function __construct()
    {
    }

    /**
     * @return \CB_User|false ログインを試行しているユーザー
     */
    public function findUser()
    {
        return false;
    }

    /**
     * パスワードのチェックをガルーンでは行わないので、パスワードは必ずnull.
     *
     * @return string|null
     */
    public function getPasswordToken()
    {
        return null;
    }

    /**
     * ログインアカウントのチェックをガルーンでは行わないので、パスワードは必ずnull.
     *
     * @return string
     */
    public function getAccountToken()
    {
        return null;
    }
}
