<?php

namespace grn\grn\item;

/**
 *
 */
class StringSingleDetail
{

    /**
     * @param array $parts_of_view
     * @param array $list_of_identifier
     */
    public static function setInitialValue(
        array & $parts_of_view,
        array $list_of_identifier
    ) {
        assert(isset($parts_of_view["settings"]));
        assert(isset($parts_of_view["settings"]["initial_type"]));

        if ($parts_of_view['settings']['initial_type'] != 1) {
            return;
        }

        assert(isset($parts_of_view['settings']['initial_user_value']));

        $key = $parts_of_view['settings']['initial_user_value'];
        if (isset($list_of_identifier[$key]) === false) {
            $parts_of_view['settings']['initial_type'] = 0;

            return;
        }
        $parts_of_view['settings']['initial_user_value']
            = $list_of_identifier[$key];
    }
}
