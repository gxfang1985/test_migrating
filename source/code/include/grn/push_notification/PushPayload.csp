<?php
declare(strict_types=1);

namespace grn\grn\push_notification;

use grn\grn\push_notification\bean\APNSContent;
use grn\grn\push_notification\bean\FCMContent;
use grn\grn\push_notification\bean\Receiver;

class PushPayload
{
    /**
     * @var string
     */
    public $appName;
    /**
     * @var int
     */
    public $version;
    /**
     * @var APNSContent
     */
    public $apnsContent;
    /**
     * @var FCMContent
     */
    public $fcmContent;
    /**
     * @var Receiver[]
     */
    public $receivers;

    /**
     * PushPayload constructor.
     *
     * @param string      $app_name
     * @param int         $version
     * @param APNSContent $apns_content
     * @param FCMContent  $fcm_content
     * @param Receiver[]  $receivers
     */
    public function __construct(
        string $app_name,
        int $version,
        APNSContent $apns_content,
        FCMContent $fcm_content,
        array $receivers
    ) {
        $this->appName = $app_name;
        $this->version = $version;
        $this->apnsContent = $apns_content;
        $this->fcmContent = $fcm_content;
        $this->receivers = $receivers;
    }
}
