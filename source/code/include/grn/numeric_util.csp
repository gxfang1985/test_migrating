<?php
/**
 * Throw an error if <var>$s</var> is not numeric.
 *
 * @param string/int    $s           The variable to be checked.
 * @param string $error_code Optional error code to be thrown.
 */
function cb_numeric_check($s, $error_code = E_COMMON_MISSING_MANDATORY)
{
    if ( ! is_numeric($s)) {
        cb_throw_error($error_code);
    }
}
