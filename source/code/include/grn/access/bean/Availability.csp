<?php

namespace grn\grn\access\bean;


class Availability
{
    private $id;
    private $creationTime;
    private $target;
    private $targetType;
    private $appsAvailability;

    CONST DYNAMIC_ROLE = 'DynamicRole';
    CONST STATIC_ROLE = 'StaticRole';
    CONST GROUP = 'Group';
    CONST USER = 'User';

    /**
     * @param int $value
     */
    public function setId($value)
    {
        $this->id = $value;
    }

    /**
     * @return int
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * @param int|string $target_id
     */
    public function setTarget($target_id)
    {
        $this->target = $target_id;
    }

    /**
     * @return int|string
     */
    public function getTarget()
    {
        return $this->target;
    }

    /**
     * @param string $type
     */
    public function setTargetType($type)
    {
        $this->targetType = $type;
    }

    /**
     * @return string
     */
    public function getTargetType()
    {
        return $this->targetType;
    }

    /**
     * @param int $value
     */
    public function setCreationTime($value)
    {
        $this->creationTime = $value;
    }

    /**
     * @return int
     */
    public function getCreationTime()
    {
        return $this->creationTime;
    }

    /**
     * @param array $apps_availability
     */
    public function setAppsAvailability(array $apps_availability)
    {
        $this->appsAvailability = $apps_availability;
    }

    /**
     * @return array
     */
    public function getAppsAvailability()
    {
        return is_array($this->appsAvailability) ? $this->appsAvailability : [];
    }

}
