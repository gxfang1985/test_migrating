<?php

namespace grn\grn\access\bean;


class InternalIpAddress
{
    private $id = 0;
    private $ipAddress = '';
    private $cidr = '';
    private $memo = '';

    /**
     * InternalIpAddress constructor.
     *
     * @param array|NULL $inDataArray
     */
    public function __construct(array $inDataArray = null)
    {
        if ( ! is_null($inDataArray)) {
            $this->setId(cb_at($inDataArray, '_id', 0));
            $this->setIpAddress(cb_at($inDataArray, 'col_ip_address', ''));
            $this->setCidr(cb_trim(cb_at($inDataArray, 'col_cidr', '')));
            $this->setMemo(cb_at($inDataArray, 'col_memo', ''));
        }
    }

    /**
     * @return array
     */
    public function toArray()
    {
        $result = [];
        $result['id'] = $this->getId();
        $result['ip_address'] = $this->getIpAddress();
        $result['cidr'] = $this->getCidr();
        $result['memo'] = $this->getMemo();

        return $result;
    }

    /**
     * @return int
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * @param int $value
     */
    public function setId($value)
    {
        $this->id = $value;
    }

    /**
     * @return string
     */
    public function getIpAddress()
    {
        return $this->ipAddress;
    }

    /**
     * @param string $value
     */
    public function setIpAddress($value)
    {
        $this->ipAddress = $value;
    }

    /**
     * @param int $value
     */
    public function setCidr($value)
    {
        $this->cidr = $value;
    }

    /**
     * @return int|string
     */
    public function getCidr()
    {
        if ($this->cidr == 0) {
            return "";
        }

        return $this->cidr;
    }

    /**
     * @param string $value
     */
    public function setMemo($value)
    {
        $this->memo = $value;
    }

    /**
     * @return string
     */
    public function getMemo()
    {
        return $this->memo;
    }
}
