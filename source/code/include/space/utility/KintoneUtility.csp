<?php

namespace grn\space\utility;

use grn\space\common\data\bean\Application;
use grn\space\common\exception\ErrorCode;
use grn\space\common\exception\GrnKintoneException;

/**
 * Class KintoneUtility
 *
 */
class KintoneUtility
{
    /**
     * @param Application $application
     *
     * @return Application
     */
    public static function constructApplicationViewURL(Application $application)
    {
        require_once("kintone/Logic.csp");
        $application->setViewURL(
            \GRN_Kintone_Logic::getApplicationViewURL($application->getExternalApplicationId())
        );
        $application->setOriginalViewURL(
            \GRN_Kintone_Logic::getApplicationOriginalViewURL($application->getExternalApplicationId())
        );
        $application->setMaintenanceViewURL(
            \GRN_Kintone_Logic::getApplicationMaintenanceURL($application->getExternalApplicationId())
        );

        return $application;
    }
}
