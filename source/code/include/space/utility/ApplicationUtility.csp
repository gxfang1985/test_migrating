<?php

namespace grn\space\utility;

use grn\space\common\exception\GrnInvalidArgumentException;
use grn\space\common\data\bean\Application;

/**
 * Class ApplicationUtility
 *
 */
class ApplicationUtility
{
    /**
     * Construct URL properties of $application
     *
     * @param Application $application
     *
     * @return Application
     * @throws GrnInvalidArgumentException
     */
    static public function constructApplicationViewURL(Application $application)
    {
        switch ($application->getApplicationType()) {
            case Application::APPLICATION_TYPE_EXTERNAL_KINTONE:
                return KintoneUtility::constructApplicationViewURL($application);

            case Application::APPLICATION_TYPE_INTERNAL:
            default:
                throw new GrnInvalidArgumentException();
        }
    }
}
