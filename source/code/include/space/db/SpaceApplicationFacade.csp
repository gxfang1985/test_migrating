<?php

namespace grn\space\db;

use grn\space\data\bean\SpaceApplication;
use grn\space\data\condition\SpaceApplicationSearchCondition;
use grn\space\db\dao\SpaceApplicationDAO;

/**
 * Class SpaceApplicationFacade
 */
class SpaceApplicationFacade
{
    /**
     * @param SpaceApplication $application
     *
     * @return SpaceApplication
     * @throws \grn\space\common\exception\GrnDatabaseException
     */
    public function insert(SpaceApplication $application)
    {
        $dao = new SpaceApplicationDAO();
        $result = $dao->insert($application);

        return $result;
    }

    /**
     * @param $spaceID
     * @param $applicationID
     *
     * @return bool
     * @throws \grn\space\common\exception\GrnDataNotFoundException
     * @throws \grn\space\common\exception\GrnDatabaseException
     */
    public function delete($spaceID, $applicationID)
    {
        $dao = new SpaceApplicationDAO();
        $result = $dao->delete($spaceID, $applicationID);

        return $result;
    }

    /**
     * @param SpaceApplicationSearchCondition $condition
     *
     * @return \grn\space\data\collection\SpaceApplicationCollection
     * @throws \grn\space\common\exception\GrnDatabaseException
     */
    public function search(SpaceApplicationSearchCondition $condition)
    {
        $dao = new SpaceApplicationDAO();
        $result = $dao->search($condition);

        return $result;
    }

    /**
     * @param string $spaceID
     * @param string $applicationID
     * @param string $language
     *
     * @return \grn\space\data\bean\SpaceApplication
     */
    public function select($spaceID, $applicationID, $language)
    {
        $dao = new SpaceApplicationDAO();
        $result = $dao->select($spaceID, $applicationID, $language);

        return $result;
    }

    /**
     * Delete SpaceApplication(s) by Application ID
     *
     * @param string $applicationId
     *
     * @return boolean Always true
     */
    public function deleteByApplicationId($applicationId)
    {
        $dao = new SpaceApplicationDAO();

        return $dao->deleteByApplicationId($applicationId);
    }
}
