<?php

namespace grn\space\common\db\dao;

/**
 * Database Back Layer
 * This layer mediates the database front layer and the DB.
 *
 * Data Access Control Abstract Class
 */
abstract class DataAccessControlAbstract
{
    /**
     * Database connection を取得する.
     * obtain the Database connection.
     *
     * @return    \CB_DatabaseConnection
     */
    protected function getDatabaseConnection()
    {
        require_once('grn/application.csp');
        require_once('space/GrnSpaceApplication.csp');

        $applicationLocator = \GRN_ApplicationLocator::instance();
        $spaceDBConnection
            = $applicationLocator->getConnection(\GrnSpaceApplication::GRN_SPACE_APPLICATION_ID);

        return $spaceDBConnection;
    }
}
