<?php

namespace grn\space\common\data\collection;

use grn\space\common\data\bean\BeanAbstract;
use grn\space\common\data\collection\InspectionCollectionAbstract;
use grn\space\common\data\bean\Comment;

/**
 * CommentCollectionクラス
 * コメントオブジェクトの集合を表現するクラス
 */
class CommentCollection extends InspectionCollectionAbstract
{
    /**
     * コンストラクタ
     */
    public function __construct()
    {
        parent::__construct();
    }

    /**
     * 保持するBeanオブジェクト配列に、Commentオブジェクトを追加する
     *
     * @param     BeanAbstract $bean Object that implements Comment
     */
    public function appendBean(BeanAbstract $bean)
    {
        assert('$bean instanceof grn\\space\\common\\data\\bean\\Comment');
        parent::appendBean($bean);
    }
}

