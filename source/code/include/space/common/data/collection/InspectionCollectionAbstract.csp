<?php

namespace grn\space\common\data\collection;

use grn\space\common\data\bean\BeanAbstract;
use grn\space\common\data\collection\BeanCollectionAbstract;
use grn\space\common\data\bean\InspectionAbstract;

/**
 * InspectionCollectionAbstractクラス
 * InspectionAbstractを継承するオブジェクトの集合を表現する抽象クラス
 */
abstract class InspectionCollectionAbstract extends BeanCollectionAbstract
{
    /**
     * コンストラクタ
     *
     */
    public function __construct()
    {
        parent::__construct();
    }

    /**
     * 保持するBeanオブジェクト配列に、InspectionAbstractオブジェクトを追加する
     *
     * @param     BeanAbstract $bean Object that implements InspectionAbstract
     */
    public function appendBean(BeanAbstract $bean)
    {
        assert('is_subclass_of($bean, "grn\space\common\data\bean\InspectionAbstract")
                || $bean instanceof grn\space\common\data\bean\InspectionAbstract');
        parent::appendBean($bean);
    }
}
