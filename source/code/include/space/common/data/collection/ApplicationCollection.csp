<?php

namespace grn\space\common\data\collection;

require_once('space/common/data/collection/InspectionCollectionAbstract.csp');
require_once('space/common/data/bean/Application.csp');

use grn\space\common\data\bean\BeanAbstract;
use grn\space\common\data\collection\InspectionCollectionAbstract;
use grn\space\common\data\bean\Application;

/**
 * ApplicationCollectionクラス
 * アプリケーションオブジェクトの集合を表現するクラス
 **/
class ApplicationCollection extends InspectionCollectionAbstract
{
    /**
     * コンストラクタ
     */
    public function __construct()
    {
        parent::__construct();
    }

    /**
     * 保持するBeanオブジェクト配列に、Applicationオブジェクトを追加する
     *
     * @param     BeanAbstract $bean Object that implements Application
     */
    public function appendBean(BeanAbstract $bean)
    {
        assert('is_subclass_of($bean, "grn\\space\\common\\data\\bean\\Application")
                || $bean instanceof grn\\space\\common\\data\\bean\\Application');
        parent::appendBean($bean);
    }
}

