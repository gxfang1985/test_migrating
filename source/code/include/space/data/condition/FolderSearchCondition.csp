<?php

namespace grn\space\data\condition;

use grn\space\common\data\condition\ComponentInspectionSearchConditionAbstract;

/**
 * Class FolderSearchCondition
 */
class FolderSearchCondition extends ComponentInspectionSearchConditionAbstract
{
    private $_folderId;
    private $_spaceId;

    /**
     * @param null $inDataArray
     */
    public function __construct($inDataArray = null)
    {
        if (is_null($inDataArray)) {
            $this->setFolderId('');
            $this->setSpaceId('');
        } else {
            $this->setFolderId(cb_at($inDataArray, 'folder_id', ''));
            $this->setSpaceId(cb_at($inDataArray, 'space_id', ''));

        }

    }

    /**
     * @return mixed
     */
    public function getFolderId()
    {
        return $this->_folderId;
    }

    /**
     * @param $value
     */
    public function setFolderId($value)
    {
        $this->_folderId = $value;
    }

    /**
     * @param $value
     */
    public function setSpaceId($value)
    {
        $this->_spaceId = $value;
    }

    /**
     * @return mixed
     */
    public function getSpaceId()
    {
        return $this->_spaceId;
    }

}

