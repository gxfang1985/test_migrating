<?php

namespace grn\space\data\collection;

use grn\space\common\data\collection\ComponentInspectionCollectionAbstract;
use grn\space\data\bean\Thread;
use grn\space\common\data\bean\BeanAbstract;

/**
 * ThreadCollectionクラス
 **/
class ThreadCollection extends ComponentInspectionCollectionAbstract
{
    /**
     * コンストラクタ
     */
    public function __construct()
    {
        parent::__construct();
    }

    /**
     * 保持するBeanオブジェクト配列に、Threadオブジェクトを追加する
     *
     * @param     BeanAbstract $bean Object that implements Thread
     */
    public function appendBean(BeanAbstract $bean)
    {
        assert('$bean instanceof grn\space\data\bean\Thread');
        parent::appendBean($bean);
    }
}

