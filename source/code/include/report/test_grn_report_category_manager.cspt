<?php

require_once('developer/azunit.csp');
require_once('report/category_manager.csp');

class test_grn_report_category_manager extends CB_TestCase
{
    /** database **/
    var $_database = null;

    /** table_name **/
    var $_table_name = null;

    /** Test Target List **/
    var $_category_list = null;

    /** Unique key **/
    var $_unique_key = null;

    /** Basic Value List **/
    var $_category_value_list = [];

    /**
     * Constructor
     *
     * @access private
     *
     * @param string $test_method //Test Method Name
     */
    function test_grn_report_category_manager($test_method)
    {
        //Initialize Parent Class
        parent::CB_TestCase($test_method);

        //Initalize Randam Key
        mt_srand(time());

        //Initialize Unique Key
        $this->_unique_key = $test_method . time();

        //Get Database Connection
        global $G_container_base;
        $this->_database =& $G_container_base->getInstance('dbconn');

        //Set table name
        $this->_table_name = 'tab_grn_report_category';

        //Set Basic Value List
        $this->_category_value_list = [
            'col_name'           => 'name_',
            'col_foreign_key'    => 'foreign_key_',
            'col_memo'           => 'memo_',
            //            'col_parent'                => '',
            'col_security_model' => '', // 0:GRANT / 1:REVOKE
            //            'col_list_index'            => '',
            //            'col_creator'               => '',
            //            'col_creator_name'          => '',
            //            'col_creator_foreign_key'   => '',
            //            'col_ctime'                 => '',
            //            'col_modifier'              => '',
            //            'col_modifier_name'         => '',
            //            'col_modifier_foreign_key'  => '',
            //            'col_mtime'                 => '',
        ];

        return;
    }

    /**
     * Initialize Test
     *
     * @access private
     */
    function _initialize()
    {
        //Get Unique Key
        $unique_key = $this->_unique_key;

        //Create Test Category
        $this->_createCategory($unique_key);

        return;
    }

    /**
     * finalize Test
     *
     * @access private
     */
    function _finalize()
    {
        //Delete Test Category
        $this->_deleteCategory();

        return;
    }

    /**
     * Create Category
     *
     * @access private
     *
     * @param string $unique_key //Unique key
     */
    function _createCategory($unique_key)
    {
        $parent_id = null;
        for ($i = 0; $i < 5; $i++) {
            //Create Query
            $category_value_list = [];
            foreach ($this->_category_value_list as $key => $value) {
                if ($key == 'col_security_model') {
                    $category_value_list[$key] = cb_queryf($this->_database,
                        '"@S"', $i % 2);
                } elseif ($key == 'col_parent') {
                    $category_value_list[$key] = $parent_id;
                } elseif (strlen($value) > 0) {
                    $category_value_list[$key] = cb_queryf($this->_database,
                        '"@S@S"', $value, $i);
                } else {
                    $category_value_list[$key] = cb_queryf($this->_database,
                        '"@S"', $i);
                }
            }
            $column_string = implode(',', array_keys($category_value_list));
//            $value_string = implode(',', $category_value_list);
            $value_string = "";
            foreach ($category_value_list as $value) {
                if (is_null($value) || strlen($value) == 0) {
                    $value = "null";
                }
                $value_string .= $value . ',';
            }
            $value_string = substr($value_string, 0, strlen($value_string) - 1);

            $query = sprintf('INSERT %s(%s) VALUES (%s)', $this->_table_name,
                $column_string, $value_string);

            //Execute Query
            $result = $this->_database->query($query);
            if ($result === false) {
                //Throw Query Error
                $this->_database->throwError([
                    'query' => 'query failed: ' . $query
                ]);
            }

            //Add Cache
            $category_id = $this->_database->get_insert_id();
            $parent_id = $category_id;
            foreach (array_keys($category_value_list) as $key) {
                $this->_category_list[$category_id][$key] = mb_ereg_replace('"',
                    '', $category_value_list[$key]);
            }
        }

        return;
    }

    /**
     * Delete Category
     *
     * @access private
     *
     * @param string $unique_key //Unique key
     */
    function _deleteCategory()
    {
        if (count($this->_category_list) === 0) {
            return;
        }

        //Create Query
        $where_string = cb_queryf($this->_database, '_id IN (@S)',
            implode(',', array_keys($this->_category_list)));
        $query = sprintf('DELETE FROM %s WHERE %s', $this->_table_name,
            $where_string);

        //Execute Query
        $result = $this->_database->query($query);
        if ($result === false) {
            //Throw Query Error
            $this->_database->throwError([
                'query' => 'query failed: ' . $query
            ]);
        }

        //Delete Cache
        $this->_category_list = [];

        return;
    }

    /**
     * Get Category
     *
     * @access private
     *
     * @param  int   $category_id //Category ID
     * @param  array $column_list //Column Name List
     *
     * @return array $category                  //Validate Result
     */
    function &_getCategory($category_id, $column_list)
    {
        //Get Database
        $database =& $this->_database;

        //Create Column List
        $column_list = implode(',', $column_list);

        //Create Where Column
        $where = cb_queryf($database, 'WHERE _id = @S', $category_id);

        //Create Order By Column
        $order_by = 'ORDER BY col_list_index, _id';

        //Create Query
        $query = sprintf('SELECT %s FROM %s %s %s', $column_list,
            $this->_table_name, $where, $order_by);
        $query = $database->select_format($query, 0, -1,
            CB_DATABASE_DEFAULT_LOCK);

        //Execute Query
        $result = $database->query($query);
        if ($result === false) {
            //Throw Query Error
            $database->throwError(['query' => 'query failed: ' . $query]);
        }
        $category = $database->fetch_assoc($result);
        $database->free_result($result);

        return $category;
    }

    /**
     * Validate Category
     *
     * @access  private
     *
     * @param   int  $category_id    //Category ID
     * @param   int  $validate_props //Validate Properties
     * @param   BOOL $deleted        //Deleted Flag
     *
     * @return  BOOL                            //Validate Result
     */
    function _validateCategory($category_id, $validate_props, $deleted = false)
    {
        //Get Link Category Table
        $category = $this->_getCategory($category_id,
            array_keys($validate_props));
        if ($deleted && ! $category) {
            return true;
        }

        //Validate Properties
        foreach ($validate_props as $prop_name => $prop_value) {
            //Check Assertion
            if (strval($category[$prop_name]) !== strval($prop_value)) {
                var_dump($category);
                var_dump($category[$prop_name]);
                var_dump($prop_value);
                die();

                //Finalize Test
                $this->_finalize();
                assert('strval($category[$prop_name]) === strval($prop_value)');
            }
        }

        return true;
    }

    /**
     * Create Category
     *
     * @access  private
     * @return BOOL                  //Validate Result
     */
    function test_create()
    {
        //Initialize Test
        $this->_initialize();

        //Get Category Manager Base Instance
        $manager = GRN_Report_Category_Manager::getInstance();

        //Test Create Category
        for ($i = 0; $i < 5; $i++) {
            $i = $i + 5;
            $property_list = [];
            foreach ($this->_category_value_list as $key => $value) {
                if ($key == 'col_security_model') {
                    $property_list[$key] = $i % 2;
                } elseif (strlen($value) > 0) {
                    $property_list[$key] = $value . $i;
                } else {
                    $property_list[$key] = $i;
                }
            }

            //Create Category
            $category_id = $manager->create($property_list);

            //Update Cache
            $this->_category_list[$category_id] = $property_list;

            //Validate Category
            $this->_validateCategory($category_id, $property_list);
        }

        //Finalize Test
        $this->_finalize();

        return true;
    }

    /**
     * Update Category
     *
     * @access  private
     * @return BOOL                  //Validate Result
     */
    function test_update()
    {
        //Initialize Test
        $this->_initialize();

        //Get Cateory Manager Base Instance
        $manager = GRN_Report_Category_Manager::getInstance();

        //Test Update Category
        $i = 5;
        $category_list =& $this->_category_list;
        foreach (array_keys($category_list) as $category_id) {
            $property_list = [];
            foreach ($this->_category_value_list as $key => $value) {
                if (strlen($value) > 0) {
                    $property_list[$key] = $value . $i;
                } else {
                    $property_list[$key] = $i;
                }
            }

            //Update Category
            $category_id = $manager->update($category_id, $property_list);

            //Update Cache
            $this->_category_list[$category_id] = $property_list;

            //Validate Category
            $this->_validateCategory($category_id, $property_list);

            $i++;
        }

        //Finalize Test
        $this->_finalize();

        return true;
    }
}


cb_test_run();

?>
