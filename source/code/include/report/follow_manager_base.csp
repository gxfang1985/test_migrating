<?php
/**
 * Report Application Follow Manager Base Class
 *
 * @author  Shou Aoki 2009/09
 * @version 1.0
 * @package grn.report
 */

/** Report Application **/
require_once('report/resources.csp');
require_once('grn/application.csp');

/**
 * Follow Manager Base Class
 *
 * @package grn.report
 */
class GRN_Report_Follow_Manager_Base
{
    /** Table Name **/
    var $_table_name = null;

    /** Follow List */
    var $_list = [];

    /**
     * Constructor
     *
     * @return none
     */
    function __construct()
    {
        $this->_table_name = 'tab_grn_report_follow';
    }

    private static $_instance = null;

    /**
     * Get Instance
     *
     * @return GRN_Report_Follow_Manager_Base
     */
    public static function getInstance()
    {
        if ( ! isset(self::$_instance)) {
            $c = __CLASS__;
            self::$_instance = new $c;
        }

        return self::$_instance;
    }

    /**
     * Get Follow
     *
     * @param  int   $id          //Follow ID
     * @param  array $column_list //Column List
     * @param  int   $refresh     //Refresh Cache
     * @param  int   $lock_mode   //Lock Mode
     *
     * @return array  $follow                      //Follow Inreportation Array
     */
    function &get(
        $follow_id,
        $report_id = null,
        $column_list = [],
        $refresh = false,
        $lock_mode = CB_DATABASE_DEFAULT_LOCK
    ) {
        //Get Follow List
        $follow_list =& $this->getList($report_id, $column_list, [], $refresh,
            $lock_mode);

        //Get Follow
        if ( ! array_key_exists($follow_id, $follow_list)) {
            $ret = false;

            return $ret;
        }

        //Return Follow
        return $follow_list[$follow_id];
    }

    /**
     * Get Follow List
     *
     * @param  int   $report_id   //Report ID
     * @param  array $column_list //Column List
     * @param  array $option
     * @param  bool  $refresh     //Refresh Cache
     * @param  int   $lock_mode   //Lock Mode
     *
     * @return array  $follow_list              //Follow Inreportation List
     */
    function &getList(
        $report_id = null,
        $column_list = [],
        $option = [],
        $refresh = false,
        $lock_mode = CB_DATABASE_DEFAULT_LOCK
    ) {
        $follow_list = [];

        //Check Arguments
        $report_id = is_null($report_id) ? 0 : $report_id;

        //Get Report List From Cache
        $cached = false;
        if ( ! $refresh) {
            if (array_key_exists($report_id, $this->_list)) {
                if (is_array($this->_list[$report_id])) {
                    $follow_list =& $this->_list[$report_id];
                    $cached = true;
                }
            }
        } else {
            $this->_list[$report_id] = [];
        }

        //Get Follow List From Database
        if ( ! $cached || $refresh) {
            //Get Database
            $database = GRN_Report_Table_Manager::getDataBase();

            //Create Column List
            if (count($column_list) === 0) {
                $column_list = implode(',',
                    GRN_Report_Table_Manager::getColumnList(GRN_REPORT_TABLE_FOLLOW));
            } else {
                $column_list = implode(',', $column_list);
            }

            //Create Condition
            $condition_list = [];
            if ($report_id != 0) {
                $condition_list[] = cb_queryf($database, 'col_report = "@S"',
                    $report_id);
            }
            $condition = implode(' AND ', $condition_list);
            if ($condition) {
                $condition = 'WHERE ' . $condition;
            }

            //Create Order By Column
            $order_by = 'ORDER BY col_follow_id DESC, _id';

            //Create Query
            $query = sprintf('SELECT %s FROM %s %s %s', $column_list,
                $this->_table_name, $condition, $order_by);
            if (array_key_exists('list', $option)) {
                $list =& $option['list'];
                $query = $database->select_format($query, $list['offset'],
                    $list['limit'], $lock_mode);
            } else {
                $query = $database->select_format($query, 0, -1, $lock_mode);
            }

            //Execute Query
            $result = $database->query($query);
            if ($result === false) {
                //Throw Query Error
                $database->throwError(['query' => 'query failed: ' . $query]);
            }

            //Update Follow List
            $count = $database->num_rows($result);
            for ($i = 0; $i < $count; $i++) {
                $row = $database->fetch_assoc($result);
                $this->_list[$report_id][$row['_id']] = $row;
            }
            $database->free_result($result);

            if ($count > 0) {
                $follow_list =& $this->_list[$report_id];
            }
        }

        //Return Follow List
        return $follow_list;
    }

    /**
     * Get Follow Direct
     *
     * @param  int   $follow_id   //Follow ID
     * @param  array $column_list //Column List
     * @param  int   $lock_mode   //Lock Mode
     *
     * @return array  $follow                      //Follow Inreportation Array
     */
    function getDirect(
        $follow_id,
        $column_list = [],
        $lock_mode = CB_DATABASE_DEFAULT_LOCK
    ) {
        $follow = [];

        //Get Database
        $database =& GRN_Report_Table_Manager::getDataBase();

        //Create Column List
        if (count($column_list) === 0) {
            $column_list = implode(',',
                GRN_Report_Table_Manager::getColumnList(GRN_REPORT_TABLE_FOLLOW));
        } else {
            $column_list = implode(',', $column_list);
        }
        //Create Condition
        $condition_list = [];
        $condition_list[] = cb_queryf($database, "_id = '@S'", $follow_id);
        $condition = implode(' AND ', $condition_list);
        if ($condition) {
            $condition = 'WHERE ' . $condition;
        }

        //Create Order By Column
        $order_by = 'ORDER BY col_follow_id, _id';

        //Create Query
        $query = sprintf('SELECT %s FROM %s %s %s', $column_list,
            $this->_table_name, $condition, $order_by);
        $query = $database->select_format($query, 0, 1, $lock_mode);

        //Execute Query
        $result = $database->query($query);
        if ($result === false) {
            //Throw Query Error
            $database->throwError(['query' => 'query failed: ' . $query]);
        }

        //Get Follow
        $follow = $database->fetch_assoc($result);
        $database->free_result($result);

        //Return Follow
        return $follow;
    }

    /**
     * Get Follow Count
     *
     * @param  int  $report_id //Form ID
     * @param array $option
     * @param  bool $refresh   //Refresh Cache
     * @param  int  $lock_mode //Lock Mode
     *
     * @return int    $item_count                //Follow Count
     */
    function getCount(
        $report_id = null,
        $option = [],
        $refresh = false,
        $lock_mode = CB_DATABASE_DEFAULT_LOCK
    ) {
        //Get Database
        $database = GRN_Report_Table_Manager::getDataBase();

        //Create Condition
        $condition_list = [];
        if ( ! is_null($report_id)) {
            $condition_list[] = cb_queryf($database, 'col_report = "@S"',
                $report_id);
        }
        $condition = implode(' AND ', $condition_list);
        if ($condition) {
            $condition = 'WHERE ' . $condition;
        }

        //Create Query
        $query = sprintf('SELECT COUNT(*) FROM %s %s', $this->_table_name,
            $condition);
        if (array_key_exists('list', $option)) {
            $list =& $option['list'];
            $query = $database->select_format($query, $list['offset'],
                $list['limit'], $lock_mode);
        } else {
            $query = $database->select_format($query, 0, -1, $lock_mode);
        }

        //Execute Query
        $result = $database->query($query);
        if ($result === false) {
            //Throw Query Error
            $database->throwError(['query' => 'query failed: ' . $query]);
        }
        $row = $database->fetch_assoc($result);
        $database->free_result($result);

        //Return Follow Count
        return $row['COUNT(*)'];
    }

    /**
     *  あるレポートのフォロー内の最大のフォローIDを取得する
     */
    function getMaxFollowId($report_id)
    {
        $database =& GRN_Report_Table_Manager::getDataBase();

        $tablename
            = GRN_Report_Table_Manager::getTableName(GRN_REPORT_TABLE_FOLLOW);
        $query = cb_queryf($database,
            "select max(col_follow_id) from @S where col_report = @S",
            $tablename, $report_id);

        $result = $database->query($query);
        if ($result === false) {
            //Throw Query Error
            $database->throwError(['query' => 'query failed: ' . $query]);
        }
        $row = $database->fetch_assoc($result);
        $database->free_result($result);

        return $row['max(col_follow_id)'];
    }

    /**
     * Get Follow's Offset
     *
     * @param  int $report_id //Report ID
     * @param  int $follow_id //Follow ID
     *
     * @return int    $follow_count                //Follow Count
     */
    function getFollowOffset($report_id, $follow_id)
    {
        $database =& GRN_Report_Table_Manager::getDataBase();
        $tablename
            = GRN_Report_Table_Manager::getTableName(GRN_REPORT_TABLE_FOLLOW);
        $query = cb_queryf($database,
            "SELECT count(*) FROM @S WHERE col_report = '@S' AND col_follow_id > '@S'",
            $tablename, $report_id, $follow_id);

        $result = $database->query($query);
        if ($result === false) {
            //Throw Query Error
            $database->throwError(['query' => 'query failed: ' . $query]);
        }
        $row = $database->fetch_assoc($result);
        $database->free_result($result);

        return $row['count(*)'];
    }
}

