<?php

require_once('fw/database.csp');
require_once('report/bean/GrnReportCategoryLocal.csp');

class GrnReportCategoryLocalDAO
{
    /**
     * @param                        $inDataObj
     * @param GrnReportCategoryLocal $inReportCategoryLocalObj
     *
     * @return bool|int
     */
    public function deleteByParentId_LanguageCode(
        $inDataObj,
        $inReportCategoryLocalObj
    ) {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inReportCategoryLocalObj->getParentId();
        $inLanguageCode = $inReportCategoryLocalObj->getLanguageCode();

        $query = "DELETE FROM tab_grn_report_category_local";
        $query = cb_queryf($inDb, $query
                                  . " WHERE parent_id='@S' AND language_id = (SELECT _id FROM tab_cb_language_status WHERE col_language='@S');",
            $inParentId, $inLanguageCode);
        if ($inDb->query($query) === false) {
            $inDb->throwServerError($query);
        }

        $deleteCount = $inDb->affected_rows();

        return $deleteCount;
    }

    /**
     * @param                        $inDataObj
     * @param GrnReportCategoryLocal $inReportCategoryLocalObj
     *
     * @return bool|int
     */
    public function insert($inDataObj, $inReportCategoryLocalObj)
    {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inReportCategoryLocalObj->getParentId();
        $inLanguageCode = $inReportCategoryLocalObj->getLanguageCode();
        $inName = $inReportCategoryLocalObj->getName();

        $query
            = "INSERT INTO tab_grn_report_category_local( parent_id, language_id, col_name )";
        $query = cb_queryf($inDb, $query
                                  . " VALUES ( '@S', (SELECT _id FROM tab_cb_language_status WHERE col_language='@S'), '@S');",
            $inParentId, $inLanguageCode, $inName);
        if ($inDb->query($query) === false) {
            $inDb->throwServerError($query);
        }

        $insertCount = $inDb->affected_rows();

        return $insertCount;
    }

    /**
     * @param                        $inDataObj
     * @param GrnReportCategoryLocal $inReportCategoryLocalObj
     *
     * @return bool|int
     */
    public function update($inDataObj, $inReportCategoryLocalObj)
    {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inReportCategoryLocalObj->getParentId();
        $inLanguageCode = $inReportCategoryLocalObj->getLanguageCode();
        $inName = $inReportCategoryLocalObj->getName();

        $query = "UPDATE tab_grn_report_category_local";
        $query = cb_queryf($inDb, $query . " SET col_name = '@S'", $inName);
        $query = cb_queryf($inDb, $query . " WHERE parent_id = '@S'",
            $inParentId);
        $query = cb_queryf($inDb, $query
                                  . " AND language_id = (SELECT _id FROM tab_cb_language_status WHERE col_language='@S');",
            $inLanguageCode);

        if ($inDb->query($query) === false) {
            $inDb->throwServerError($query);
        }

        $updateCount = $inDb->affected_rows();

        return $updateCount;
    }

    /**
     * @param                        $inDataObj
     * @param GrnReportCategoryLocal $inReportCategoryLocalObj
     *
     * @return bool|GrnReportCategoryLocal
     */
    public function selectByCategoryId_LanguageCode(
        $inDataObj,
        $inReportCategoryLocalObj
    ) {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inReportCategoryLocalObj->getParentId();
        $inLanguageCode = $inReportCategoryLocalObj->getLanguageCode();

        $query
            = "SELECT cl.parent_id, cl.language_id, cl.col_name, l.col_language";
        $query = $query
                 . " FROM tab_grn_report_category_local cl, tab_cb_language_status l";
        $query = $query . " WHERE cl.language_id = l._id";
        $query = cb_queryf($inDb, $query . " AND cl.parent_id = '@S'",
            $inParentId);
        $query = cb_queryf($inDb, $query . " AND l.col_language = '@S'",
            $inLanguageCode);

        $result = $inDb->query($query);

        if (($result === false) || ($inDb->num_rows($result) != 1)) {
            if ($result) {
                $inDb->free_result($result);
            }

            return false;
        }

        $rawdata = $inDb->fetch_assoc($result);
        $inDb->free_result($result);

        $grnReportCategoryLocal = new GrnReportCategoryLocal($rawdata);

        return $grnReportCategoryLocal;
    }

    /**
     * @param $inDataObj
     * @param $inCategoryId
     *
     * @return GrnReportCategoryLocal[]
     */
    public function getReportCategoryLocalListByCategoryId(
        $inDataObj,
        $inCategoryId
    ) {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];

        $query
            = "SELECT cl.parent_id, cl.language_id, cl.col_name, l.col_language";
        $query = $query
                 . " FROM tab_grn_report_category_local cl, tab_cb_language_status l";
        $query = $query . " WHERE cl.language_id = l._id";
        $query = cb_queryf($inDb, $query . " AND cl.parent_id = '@S'",
            $inCategoryId);

        $result = $inDb->query($query);

        if ($result === false) {
            //Throw Query Error
            $inDb->throwError(['query' => 'query failed: ' . $query]);
        }

        $grnReportCategoryLocalArray = [];
        while ($rawdata = $inDb->fetch_assoc($result)) {
            $grnReportCategoryLocal = new GrnReportCategoryLocal($rawdata);
            $grnReportCategoryLocalArray[$grnReportCategoryLocal->getLanguageCode()]
                = $grnReportCategoryLocal;
        }
        $inDb->free_result($result);
        $result = false;

        return $grnReportCategoryLocalArray;
    }

    /**
     * @param $inDataObj
     *
     * @return GrnReportCategoryLocal[]
     */
    public function getReportCategoryLocalList($inDataObj)
    {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];

        $query
            = "SELECT c.col_foreign_key, cl.parent_id, cl.language_id, cl.col_name, l.col_language";
        $query = $query . " FROM tab_grn_report_category c";
        $query = $query . " , tab_grn_report_category_local cl";
        $query = $query . " , tab_cb_language_status l";
        $query = $query . " WHERE cl.language_id = l._id";
        $query = $query . " AND cl.parent_id = c._id";
        $query = $query . " ORDER BY cl.parent_id";

        $result = $inDb->query($query);

        if ($result === false) {
            //Throw Query Error
            $inDb->throwError(['query' => 'query failed: ' . $query]);
        }

        $grnReportCategoryLocalArray = [];
        while ($rawdata = $inDb->fetch_assoc($result)) {
            $grnReportCategoryLocal = new GrnReportCategoryLocal($rawdata);
            $grnReportCategoryLocalArray[] = $grnReportCategoryLocal;
        }
        $inDb->free_result($result);
        $result = false;

        return $grnReportCategoryLocalArray;
    }

    /**
     * @param $inDataObj
     * @param $inExportLanguageCodeArray
     *
     * @return GrnReportCategoryLocal[]
     */
    public function getReportCategoryLocalListByLanguageCodes(
        $inDataObj,
        $inExportLanguageCodeArray
    ) {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];

        $inEscapeExportLanguageCodeArray = [];
        foreach ($inExportLanguageCodeArray as $langCode) {
            $inEscapeExportLanguageCodeArray[] = $inDb->escape($langCode);
        }
        $inLanguageCodes = implode("','", $inEscapeExportLanguageCodeArray);

        $query
            = "SELECT c.col_foreign_key, cl.parent_id, cl.language_id, cl.col_name, l.col_language";
        $query = $query . " FROM tab_grn_report_category c";
        $query = $query . " , tab_grn_report_category_local cl";
        $query = $query . " , tab_cb_language_status l";
        $query = $query . " WHERE cl.language_id = l._id";
        $query = $query . " AND cl.parent_id = c._id";
        $query = $query . " AND l.col_language IN ('${inLanguageCodes}')";
        $query = $query . " ORDER BY cl.parent_id";

        $result = $inDb->query($query);

        if ($result === false) {
            //Throw Query Error
            $inDb->throwError(['query' => 'query failed: ' . $query]);
        }

        $grnReportCategoryLocalArray = [];
        while ($rawdata = $inDb->fetch_assoc($result)) {
            $grnReportCategoryLocal = new GrnReportCategoryLocal($rawdata);
            $grnReportCategoryLocalArray[] = $grnReportCategoryLocal;
        }
        $inDb->free_result($result);
        $result = false;

        return $grnReportCategoryLocalArray;
    }
}
