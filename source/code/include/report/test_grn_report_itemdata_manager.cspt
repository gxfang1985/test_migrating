    /**
     * Change Order Item Data
     *
     * @access  private
     * @return BOOL                              //Validate Result
     */
    function test_changeOrder()
    {
        //Initialize Test
        $this->_initialize();

        //Get Item Data Manager Instance
        $manager = GRN_Report_ItemData_Manager::getInstance();

        //Test Change Order Item Data
        $item_data_list =& $this->_item_data_list;
        foreach (array_keys($item_data_list) as $report_id) {
            $item_data_id_list
                = array_reverse(array_keys($item_data_list[$report_id]));

            //Change Order Item
            $manager->changeOrder($item_data_id_list);

            //Create Validate Properties
            $list_index = 0;
            foreach ($item_data_id_list as $item_data_id) {
                $validate_props_list[$item_data_id]['col_list_index']
                    = $list_index;
                $list_index++;
            }

            //Validate Item
            foreach (array_keys($validate_props_list) as $key) {
                $this->_validateItemData($key, $report_id,
                    $validate_props_list[$key]);
            }
        }

        //Finalize Test
        $this->_finalize();

        return true;
    }
