    /**
     * Remove Item Data
     *
     * @access  private
     * @return BOOL                              //Validate Result
     */
    function test_remove()
    {
        //Initialize Test
        $this->_initialize();

        //Get Item Data Manager Instance
        $manager = GRN_Report_ItemData_Manager::getInstance();

        //Test Remove Item Data
        $item_data_list =& $this->_item_data_list;
        foreach (array_keys($item_data_list) as $report_id) {
            foreach (array_keys($item_data_list[$report_id]) as $item_data_id) {
                //Remove Item Data
                $manager->remove($item_data_id);

                //Remove Cache
                unset($this->_item_data_list[$report_id][$item_data_id]);

                //Validate Item Data
                $validate_props = ['*' => ''];
                $this->_validateItemData($item_data_id, $report_id,
                    $validate_props, true);
            }
        }

        //Finalize Test
        $this->_finalize();

        return true;
    }

