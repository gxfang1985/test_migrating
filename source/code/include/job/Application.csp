<?php

namespace grn\job;

require_once('grn/application.csp');

class Application extends \GRN_ApplicationBase
{
    const APPLICATION_ID = 'job';

    public function __construct()
    {
        parent::__construct(self::APPLICATION_ID);
    }

    /**
     * cleanup
     * # remove _failed_queue created at 30 days ago
     */
    public function cleanup()
    {
        $cleaner = new Cleaner();
        $cleaner->cleanupFailedQueue();
        $cleaner->cleanupTemporaryFiles();
    }
}
