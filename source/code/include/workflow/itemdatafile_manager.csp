/** Workflow Application **/
require_once('workflow/resources.csp');
require_once('workflow/itemdatafile_manager_base.csp');

/**
 * Item Data File Manager Class
 *
 * @package grn.workflow
 */
class GRN_Workflow_ItemDataFile_Manager
    extends GRN_Workflow_ItemDataFile_Manager_Base
{
    /**
     * Constructor
     *
     * @return none
     */
    function __construct()
    {
        //Get Parent Instance
        $parent = parent::getInstance();

        //Sync Parent Table and Item Data File List Cache
        $this->_table_name =& $parent->_table_name;
        $this->_list =& $parent->_list;
    }

    /**
     * Get Instance
     *
     * @return GRN_Workflow_ItemDataFile_Manager $instance                  //Instance of GRN_Workflow_ItemDataFile_Manager
     */
    public static function getInstance()
    {
        static $_instance = null;
        if (is_null($_instance)) {
            $_instance = new GRN_Workflow_ItemDataFile_Manager();
        }

        return $_instance;
    }

    /**
     * Create Item Data File
     *
     * @param  array $property_list //Property List(Name=>Value)
     *
     * @return int   $item_data_file_id          //Item Data File ID
     */
    function create($property_list)
    {
        //Get Database
        $database = $this->_getDatabase();

        //Create Column List
        $column_list = $this->_getColumnList();

        //Create Query
        $insert_list = [];
        foreach ($column_list as $column) {
            if ($column === '_id') {
                continue;
            }

            if (array_key_exists($column, $property_list)) {
                $insert_list[$column] = cb_queryf($database, '"@S"',
                    $property_list[$column]);
            }
        }
        $column_string = implode(', ', array_keys($insert_list));
        $value_string = implode(', ', $insert_list);
        $query = sprintf('INSERT %s(%s) VALUES (%s)',
            $this->_table_name, $column_string, $value_string);

        //Execute Query
        $result = $database->query($query);
        if ($result === false) {
            //Throw Query Error
            $database->throwError(['query' => 'query failed: ' . $query]);
        }

        //Return Item Data File ID
        $item_data_file_id = $database->get_insert_id();

        return $item_data_file_id;
    }

    /**
     * Update Item Data File
     *
     * @param  array $item_data_file_id //Item Data File ID
     * @param  array $property_list     //Property List(Name=>Value)
     *
     * @return array $item_data_file_id          //Item Data File ID
     */
    function update($item_data_file_id, $property_list)
    {
        //Get Database
        $database =& $this->_getDatabase();

        //Create Column List
        $column_list = $this->_getColumnList();

        //Create Query
        $update_list = [];
        foreach ($column_list as $column) {
            if ($column === '_id') {
                continue;
            }

            if (array_key_exists($column, $property_list)) {
                $update_list[$column] = cb_queryf($database, '@S = "@S"',
                    $column, $property_list[$column]);
            }
        }
        $update_string = implode(', ', $update_list);
        $where_string = cb_queryf($database, "_id = '@S'", $item_data_file_id);
        $query = sprintf('UPDATE %s SET %s WHERE %s',
            $this->_table_name, $update_string, $where_string);

        //Execute Query
        $result = $database->query($query);
        if ($result === false) {
            //Throw Query Error
            $database->throwError(['query' => 'query failed: ' . $query]);
        }

        //Return Item Data File ID
        return $item_data_file_id;
    }

    /**
     * Remove Item Data File
     *
     * @param int  $item_data_file_id //Item Data File ID
     * @param BOOL $result            //Result
     */
    function remove($item_data_file_id)
    {
        //Get Database
        $database =& $this->_getDatabase();

        //Create Column List
        $column_list = implode(',', $this->_getColumnList());

        //Create Query
        $where_string = cb_queryf($database, "_id = '@S'", $item_data_file_id);
        $query = sprintf('DELETE FROM %s WHERE %s', $this->_table_name,
            $where_string);

        //Execute Query
        $result = $database->query($query);
        if ($result === false) {
            //Throw Query Error
            $database->throwError(['query' => 'query failed: ' . $query]);
        }

        //Delete From Item Data File List
        foreach (array_keys($this->_list) as $key) {
            if (in_array($item_data_file_id, $this->_list[$key])) {
                unset($this->_list[$key][$item_data_file_id]);
            }
        }

        return true;
    }

    /**
     * Remove Multiple Item Data File
     *
     * @param array $item_data_file_id_list //Item Data File List
     * @param BOOL  $result                 //Result
     */
    function removeMulti($item_data_file_id_list)
    {
        //Get Database
        $database =& $this->_getDatabase();

        //Create Column List
        $column_list = implode(',', $this->_getColumnList());

        //Create Query
        foreach ($item_data_file_id_list as $key => $value) {
            $item_data_file_id_list[$key] = cb_queryf($database, "'@S'",
                $value);
        }
        $item_data_file_id_string = implode(',', $item_data_file_id_list);
//        $where_string = cb_queryf($database, '_id IN(@S)', $item_data_file_id_string);
        $where_string = '_id IN(' . $item_data_file_id_string . ')';
        $query = sprintf('DELETE FROM %s WHERE %s', $this->_table_name,
            $where_string);

        //Execute Query
        $result = $database->query($query);
        if ($result === false) {
            //Throw Query Error
            $database->throwError(['query' => 'query failed: ' . $query]);
        }

        //Delete From Item Data File List
        $item_data_file_id = current($item_data_file_id_list);
        foreach (array_keys($this->_list) as $key) {
            if (in_array($item_data_file_id, $this->_list[$key])) {
                foreach ($item_data_file_id_list as $item_data_file_id) {
                    unset($this->_list[$key][$item_data_file_id]);
                }
            }
        }

        return true;
    }

    /**
     * Remove All Item Data File
     *
     * @param int  $item_data_id //Item Data ID
     * @param BOOL $result       //Result
     */
    function removeAll($item_data_id = null)
    {
        //Get Database
        $database = $this->_getDatabase();

        //Create Column List
        $column_list = implode(',', $this->_getColumnList());

        //Create Query
        $where_string = "";
        if ( ! is_null($item_data_id)) {
            $where_string = cb_queryf($database, "WHERE col_item_data = '@S'",
                $item_data_id);
        }
        $query = sprintf('DELETE FROM %s %s', $this->_table_name,
            $where_string);

        //Execute Query
        $result = $database->query($query);
        if ($result === false) {
            //Throw Query Error
            $database->throwError(['query' => 'query failed: ' . $query]);
        }

        //Delete From Item Data File List
        unset($this->_list[$item_data_id]);

        return true;
    }
}


