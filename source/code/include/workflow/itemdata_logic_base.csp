        //Return Item Data
        return $item_data;
    }

    /**
     * Get Item Data List
     *
     * @param  int   $petition_id //Petition ID
     * @param  array $column_list //Column List
     * @param  bool  $refresh     //Refresh Cache
     * @param  int   $lock_mode   //Lock Mode
     *
     * @return array  $item_data_list            //Item Data Information List
     */
    function &getList(
        $petition_id = null,
