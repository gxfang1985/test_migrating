    }

    function &getSubjectList($petition_ids)
    {
        //Get Item Data List
        $item_data_manager_base = $this->_getItemDataManagerBase();
        $item_data_list
            =& $item_data_manager_base->getSubjectList($petition_ids);

        //Return Item Data List
        return $item_data_list;
    }
}


