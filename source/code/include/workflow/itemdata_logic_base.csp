    /**
     * Get Petition's Subject Name
     *
     * @param  int  $petition_id //Petition ID
     * @param  bool $refresh     //Refresh Cache
     * @param  int  $lock_mode   //Lock Mode
     *
     * @return int    $item_data                 //Item Data
     */
