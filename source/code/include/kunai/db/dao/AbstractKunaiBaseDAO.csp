<?php

namespace grn\kunai\db\dao;

use grn\kunai\Application;

abstract class AbstractKunaiBaseDAO
{
    /**
     * Obtain the Database connection.
     *
     * @access    protected
     * @return    \CB_DatabaseConnection
     */
    protected function getDatabaseConnection()
    {
        require_once('grn/application.csp');
        $application_locator = \GRN_ApplicationLocator::instance();
        $kunai_db_connection
            = $application_locator->getConnection(Application::APPLICATION_ID);

        return $kunai_db_connection;
    }
}
