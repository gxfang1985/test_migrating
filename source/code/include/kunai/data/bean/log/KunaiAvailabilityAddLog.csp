<?php

namespace grn\kunai\data\bean\log;

use grn\space\common\data\LogInterface;

class KunaiAvailabilityAddLog implements LogInterface
{
    const ACTION_ADD = 'add';
    const OBJECT_AVAILABILITY_ADD = 'availability_user_add';

    /**
     * @var string
     */
    private $_action;

    /**
     * @var string
     */
    private $_object;

    /**
     * @var array
     */
    private $_target_type;

    /**
     * @var array
     */
    private $_target_id;

    /**
     * @var array
     */
    private $_availability;

    public function __construct()
    {
        $this->setAction(self::ACTION_ADD);
        $this->setObject(self::OBJECT_AVAILABILITY_ADD);
        $this->_target_type = [];
        $this->_target_id = [];
        $this->_availability = [];
    }

    /**
     * @param string $action
     */
    public function setAction($action)
    {
        $this->_action = $action;
    }

    /**
     * @return string
     */
    public function getAction()
    {
        return $this->_action;
    }

    /**
     * @param string $object
     */
    public function setObject($object)
    {
        $this->_object = $object;
    }

    /**
     * @return string
     */
    public function getObject()
    {
        return $this->_object;
    }

    /**
     * @param string $key
     * @param string $target_type
     */
    public function setTargetType($key, $target_type)
    {
        $this->_target_type[$key] = $target_type;
    }

    /**
     * @param  string $key
     *
     * @return string
     */
    public function getTargetType($key)
    {
        return $this->_target_type[$key];
    }

    /**
     * @param string $key
     * @param string $target_id
     */
    public function setTargetId($key, $target_id)
    {
        $this->_target_id[$key] = $target_id;
    }

    /**
     * @param  string $key
     *
     * @return string
     */
    public function getTargetId($key)
    {
        return $this->_target_id[$key];
    }

    /**
     * @param string $key
     * @param object $availability
     */
    public function setAvailability($key, $availability)
    {
        $this->_availability[$key] = $availability;
    }

    /**
     * @param  string $key
     *
     * @return object
     */
    public function getAvailability($key)
    {
        return $this->_availability[$key];
    }

    public function getParameters()
    {
        $retval = [];
        foreach ($this->_availability as $key => $availability) {
            $retval['availability_' . $key] = $this->getTargetType($key) . ':'
                                              . $this->getTargetId($key);
            $app_status = $availability->getAppStatus();
            foreach ($app_status as $app => $status) {
                $status = $status ? 1 : 0;
                $retval['availability_' . $key] .= ', ' . $app . ':' . $status;
            }
        }

        return $retval;
    }
}
