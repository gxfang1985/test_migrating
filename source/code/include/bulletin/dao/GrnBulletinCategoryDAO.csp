    /**
     * @param $inDataObj
     * @param $inParentId
     *
     * @return int
     */
    public function getCountBulletinCategoryByParentId($inDataObj, $inParentId)
    {
        $inDb = $inDataObj['db'];
        /* @var CB_DatabaseConnection $inDb */
        $inLock = (array_key_exists('lock', $inDataObj)) ? $inDataObj['lock']
            : null;

        $query = "SELECT COUNT(*) AS count";
        $query = $query . " FROM tab_grn_bulletin_categoryentity c";
        $query = $query . " WHERE c.col_parent = '" . $inDb->escape($inParentId)
                 . "'";
        $query = $inDb->select_format($query, 0, -1, $inLock);

        $result = $inDb->query($query);

        if (($result === false) || ($inDb->num_rows($result) != 1)) {
            //Throw Query Error
            $inDb->throwError(['query' => 'query failed: ' . $query]);
        }

        $row = $inDb->fetch_assoc($result);
        $resultCount = $row['count'];

        $inDb->free_result($result);

        return $resultCount;
    }

    /**
     * @param $inDataObj
     * @param $inCategoryId
     *
     * @return array|bool|null
     */
    public function getBulletinCategoryOfCategoryId($inDataObj, $inCategoryId)
    {
        $inDb = $inDataObj['db'];
        /* @var CB_DatabaseConnection $inDb */
        $inLock = (array_key_exists('lock', $inDataObj)) ? $inDataObj['lock']
            : null;

        $query
            = "SELECT c._id as id, c.col_parent as parent, c.col_name as name, cl.language_id as language, cl.col_name as alias";
        $query = $query . " FROM tab_grn_bulletin_categoryentity c";
        $query = $query
                 . " LEFT JOIN tab_grn_bulletin_categoryentity_local cl ON c._id = cl.parent_id";
        $query = $query . " WHERE c._id = '" . $inDb->escape($inCategoryId)
                 . "'";
        $query = $inDb->select_format($query, 0, -1, $inLock);

        $result = $inDb->query($query);

        if (($result === false) || ($inDb->num_rows($result) < 1)) {
            return null;
        }

        $result_parent = false;
        while ($row = $inDb->fetch_assoc($result)) {
            if (false === $result_parent) {
                $result_parent = [
                    'id'     => $row['id'],
                    'name'   => $row['name'],
                    'parent' => $row['parent']
                ];
            }
            $result_parent['language'][$row['language']]
                = ['language' => $row['language'], 'name' => $row['alias']];
        }

        $inDb->free_result($result);

        return $result_parent['parent'] ? $result_parent : false;
    }

    /**
     * @param int[]  $parentIds
     * @param string $userId
     *
     * @return int[]
     */
    public function getSubCategoryIdsWithEvaluateAccess($parentIds, $userId)
    {
        $app_locator = GRN_ApplicationLocator::instance();
        $db = $app_locator->getConnection('bulletin');
        /* @var CB_DatabaseConnection $db */

        $format = "SELECT category._id " .
                  "FROM tab_grn_bulletin_categoryentity AS category " .
                  "LEFT JOIN ( " .
                  "SELECT category._id, aclUser.col_authority_read " .
                  "FROM tab_grn_bulletin_categoryentity AS category " .
                  "LEFT JOIN tab_grn_bulletin_categoryentity_acl_cb_user AS aclUser ON category._id = aclUser.col_object "
                  .
                  "WHERE aclUser.col_target = '@S' " .

                  "UNION " .

                  "SELECT category._id, aclGroup.col_authority_read " .
                  "FROM tab_grn_bulletin_categoryentity AS category " .
                  "LEFT JOIN tab_grn_bulletin_categoryentity_acl_cb_group AS aclGroup ON category._id = aclGroup.col_object "
                  .
                  "LEFT JOIN tab_cb_usergrouprelation AS ugr ON aclGroup.col_target = ugr.col_group "
                  .
                  "WHERE ugr.col_user = '@S' " .

                  "UNION " .

                  "SELECT category._id, aclRole.col_authority_read " .
                  "FROM tab_grn_bulletin_categoryentity AS category " .
                  "LEFT JOIN tab_grn_bulletin_categoryentity_acl_cb_role AS aclRole ON category._id = aclRole.col_object "
                  .
                  "LEFT JOIN tab_cb_userrolerelation AS urr ON aclRole.col_target = urr.col_role "
                  .
                  "WHERE urr.col_user = '@S' " .

                  "UNION " .

                  "SELECT category._id, aclDynamicRole.col_authority_read " .
                  "FROM tab_grn_bulletin_categoryentity AS category " .
                  "LEFT JOIN tab_grn_bulletin_categoryentity_acl_dynamic_role AS aclDynamicRole ON category._id = aclDynamicRole.col_object "
                  .
                  "WHERE aclDynamicRole.col_target IN ( 'LoginUser', 'Everyone' ) "
                  .
                  ") AS myAcl ON category._id = myAcl._id " .
                  "WHERE category.col_parent IN ( @A ) " .
                  "AND ( " .
                  "( category.col_security_model = '0' AND myAcl.col_authority_read = '1' ) "
                  .
                  "OR " .
                  "( category.col_security_model = '1' AND ( myAcl.col_authority_read = '0' OR myAcl.col_authority_read IS NULL ) ) "
                  .
                  ")";

        $query = cb_queryf($db, $format, $userId, $userId, $userId,
            $parentIds);
        $result = $db->query($query);
        $ids = [];
        while ($row = $db->fetch_assoc($result)) {
            $ids[] = $row['_id'];
        }

        return $ids;
    }
