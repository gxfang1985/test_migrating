<?php

require_once('fw/database.csp');
require_once('bulletin/bean/GrnBulletinCategoryLocal.csp');

class GrnBulletinCategoryLocalDAO
{
    /**
     * @param                          $inDataObj
     * @param GrnBulletinCategoryLocal $inBulletinCategoryLocalObj
     *
     * @return bool|int
     */
    public function deleteByParentId_LanguageCode(
        $inDataObj,
        $inBulletinCategoryLocalObj
    ) {
        /* @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inBulletinCategoryLocalObj->getParentId();
        $inLanguageCode = $inBulletinCategoryLocalObj->getLanguageCode();

        //サブクエリを使ってるが、parent_idがN、language_idが1の関係で　N×1回評価されるだけなのでこのクエリでOK?
        $query = "DELETE FROM tab_grn_bulletin_categoryentity_local";
        $query = cb_queryf($inDb, $query
                                  . " WHERE parent_id='@S' AND language_id = (SELECT _id FROM tab_cb_language_status WHERE col_language='@S');",
            $inParentId, $inLanguageCode);
        if ($inDb->query($query) === false) {
            $inDb->throwServerError($query);
        }

        $deleteCount = $inDb->affected_rows();

        return $deleteCount;
    }

    /**
     * @param                          $inDataObj
     * @param GrnBulletinCategoryLocal $inBulletinCategoryLocalObj
     *
     * @return bool|int
     */
    public function insert($inDataObj, $inBulletinCategoryLocalObj)
    {
        /* @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inBulletinCategoryLocalObj->getParentId();
        $inLanguageCode = $inBulletinCategoryLocalObj->getLanguageCode();
        $inName = $inBulletinCategoryLocalObj->getName();

        $query
            = "INSERT INTO tab_grn_bulletin_categoryentity_local( parent_id, language_id, col_name )";
        $query = cb_queryf($inDb, $query
                                  . " VALUES ( '@S', (SELECT _id FROM tab_cb_language_status WHERE col_language='@S'), '@S');",
            $inParentId, $inLanguageCode, $inName);
        if ($inDb->query($query) === false) {
            $inDb->throwServerError($query);
        }

        $insertCount = $inDb->affected_rows();

        return $insertCount;
    }

    /**
     * @param                          $inDataObj
     * @param GrnBulletinCategoryLocal $inBulletinCategoryLocalObj
     *
     * @return bool|int
     */
    public function update($inDataObj, $inBulletinCategoryLocalObj)
    {
        /* @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inBulletinCategoryLocalObj->getParentId();
        $inLanguageCode = $inBulletinCategoryLocalObj->getLanguageCode();
        $inName = $inBulletinCategoryLocalObj->getName();

        $query = "UPDATE tab_grn_bulletin_categoryentity_local";
        $query = cb_queryf($inDb, $query . " SET col_name = '@S'", $inName);
        $query = cb_queryf($inDb, $query . " WHERE parent_id = '@S'",
            $inParentId);
        $query = cb_queryf($inDb, $query
                                  . " AND language_id = (SELECT _id FROM tab_cb_language_status WHERE col_language='@S');",
            $inLanguageCode);

        if ($inDb->query($query) === false) {
            $inDb->throwServerError($query);
        }

        $updateCount = $inDb->affected_rows();

        return $updateCount;
    }

    /**
     * @param                          $inDataObj
     * @param GrnBulletinCategoryLocal $inBulletinCategoryLocalObj
     *
     * @return bool|GrnBulletinCategoryLocal
     */
    public function selectByCategoryId_LanguageCode(
        $inDataObj,
        $inBulletinCategoryLocalObj
    ) {
        /* @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inParentId = $inBulletinCategoryLocalObj->getParentId();
        $inLanguageCode = $inBulletinCategoryLocalObj->getLanguageCode();

        $query
            = "SELECT cl.parent_id, cl.language_id, cl.col_name, l.col_language";
        $query = $query
                 . " FROM tab_grn_bulletin_categoryentity_local cl, tab_cb_language_status l";
        $query = $query . " WHERE cl.language_id = l._id";
        $query = cb_queryf($inDb, $query . " AND cl.parent_id = '@S'",
            $inParentId);
        $query = cb_queryf($inDb, $query . " AND l.col_language = '@S'",
            $inLanguageCode);

        $result = $inDb->query($query);

        if (($result === false) || ($inDb->num_rows($result) != 1)) {
            if ($result) {
                $inDb->free_result($result);
            }

            return false;
        }

        $rawdata = $inDb->fetch_assoc($result);
        $inDb->free_result($result);

        $grnBulletinCategoryLocal = new GrnBulletinCategoryLocal($rawdata);

        return $grnBulletinCategoryLocal;
    }

    /**
     * @param array $inDataObj
     * @param int   $inCategoryId
     *
     * @return GrnBulletinCategoryLocal[]
     */
    public function getBulletinCategoryLocalListByCategoryId(
        $inDataObj,
        $inCategoryId
    ) {
        /* @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];

        $query
            = "SELECT cl.parent_id, cl.language_id, cl.col_name, l.col_language";
        $query = $query
                 . " FROM tab_grn_bulletin_categoryentity_local cl, tab_cb_language_status l";
        $query = $query . " WHERE cl.language_id = l._id";
        $query = cb_queryf($inDb, $query . " AND cl.parent_id = '@S'",
            $inCategoryId);

        $result = $inDb->query($query);

        if ($result === false) {
            //Throw Query Error
            $inDb->throwError(['query' => 'query failed: ' . $query]);
        }

        $grnBulletinCategoryLocalArray = [];
        while ($rawdata = $inDb->fetch_assoc($result)) {
            $grnBulletinCategoryLocal = new GrnBulletinCategoryLocal($rawdata);
            $grnBulletinCategoryLocalArray[$grnBulletinCategoryLocal->getLanguageCode()]
                = $grnBulletinCategoryLocal;
        }
        $inDb->free_result($result);

        return $grnBulletinCategoryLocalArray;
    }

    /**
     * @param array $inDataObj
     *
     * @return GrnBulletinCategoryLocal[]
     */
    public function getBulletinCategoryLocalList($inDataObj)
    {
        /* @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];

        $query
            = "SELECT c.col_foreign_key, cl.parent_id, cl.language_id, cl.col_name, l.col_language";
        $query = $query . " FROM tab_grn_bulletin_categoryentity c";
        $query = $query . " , tab_grn_bulletin_categoryentity_local cl";
        $query = $query . " , tab_cb_language_status l";
        $query = $query . " WHERE cl.language_id = l._id";
        $query = $query . " AND cl.parent_id = c._id";
        $query = $query . " ORDER BY cl.parent_id";

        $result = $inDb->query($query);

        if ($result === false) {
            //Throw Query Error
            $inDb->throwError(['query' => 'query failed: ' . $query]);
        }

        $grnBulletinCategoryLocalArray = [];
        while ($rawdata = $inDb->fetch_assoc($result)) {
            $grnBulletinCategoryLocal = new GrnBulletinCategoryLocal($rawdata);
            $grnBulletinCategoryLocalArray[] = $grnBulletinCategoryLocal;
        }
        $inDb->free_result($result);

        return $grnBulletinCategoryLocalArray;
    }

    /**
     * @param array $inDataObj
     * @param array $inExportLanguageCodeArray
     *
     * @return GrnBulletinCategoryLocal[]
     */
    public function getBulletinCategoryLocalListByLanguageCodes(
        $inDataObj,
        $inExportLanguageCodeArray
    ) {
        /* @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];

        $inEscapeExportLanguageCodeArray = [];
        foreach ($inExportLanguageCodeArray as $langCode) {
            $inEscapeExportLanguageCodeArray[] = $inDb->escape($langCode);
        }
        $inLanguageCodes = implode("','", $inEscapeExportLanguageCodeArray);

        $query
            = "SELECT c.col_foreign_key, cl.parent_id, cl.language_id, cl.col_name, l.col_language";
        $query = $query . " FROM tab_grn_bulletin_categoryentity c";
        $query = $query . " , tab_grn_bulletin_categoryentity_local cl";
        $query = $query . " , tab_cb_language_status l";
        $query = $query . " WHERE cl.language_id = l._id";
        $query = $query . " AND cl.parent_id = c._id";
        $query = $query . " AND l.col_language IN ('${inLanguageCodes}')";
        $query = $query . " ORDER BY cl.parent_id";

        $result = $inDb->query($query);

        if ($result === false) {
            //Throw Query Error
            $inDb->throwError(['query' => 'query failed: ' . $query]);
        }

        $grnBulletinCategoryLocalArray = [];
        while ($rawdata = $inDb->fetch_assoc($result)) {
            $grnBulletinCategoryLocal = new GrnBulletinCategoryLocal($rawdata);
            $grnBulletinCategoryLocalArray[] = $grnBulletinCategoryLocal;
        }
        $inDb->free_result($result);

        return $grnBulletinCategoryLocalArray;
    }
}
