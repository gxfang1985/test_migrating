<?php

require_once('fw/database.csp');
require_once('system/bean/GrnDefaultApplicationMenu.csp');

class GrnDefaultApplicationMenuDAO
{
    /**
     * @param $inDataObj
     * @param $inId
     *
     * @return bool|GrnDefaultApplicationMenu
     */
    public function selectDefaultById($inDataObj, $inId)
    {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inLock = (array_key_exists('lock', $inDataObj)) ? $inDataObj['lock']
            : null;

        $query
            = "SELECT a._id, a.col_app_id, a.col_icon_file, a.col_icon_location";
        $query = $query . ", a.col_list_index, a.col_location";
        $query = $query . ", a.col_name";
        $query = $query . ", a.col_name_format";
        $query = $query . " FROM tab_grn_defaultapplicationmenu a";
        $query = $query . " WHERE a._id = '" . $inDb->escape($inId) . "'";
        $query = $inDb->select_format($query, 0, -1, $inLock);

        $result = $inDb->query($query);

        if (($result === false) || ($inDb->num_rows($result) != 1)) {
            if ($result) {
                $inDb->free_result($result);
            }

            return false;
        }

        $rawdata = $inDb->fetch_assoc($result);
        $inDb->free_result($result);

        $grnDefaultApplicationMenu = new GrnDefaultApplicationMenu($rawdata);

        return $grnDefaultApplicationMenu;
    }

    /**
     * @param $inDataObj
     * @param $inId
     *
     * @return bool|GrnDefaultApplicationMenu
     */
    public function selectLocalById($inDataObj, $inId)
    {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inLock = (array_key_exists('lock', $inDataObj))
            ? $inDataObj['lock'] : null;
        $inLanguage = (array_key_exists('language', $inDataObj))
            ? $inDataObj['language'] : null;

        $query
            = "SELECT a._id, a.col_app_id, a.col_icon_file, a.col_icon_location";
        $query = $query . ", a.col_list_index, a.col_location";
        $query = $query . ", IFNULL(al.col_name, a.col_name) AS col_name";
        $query = $query . ", a.col_name_format";
        $query = $query
                 . " FROM tab_grn_defaultapplicationmenu a LEFT JOIN (tab_grn_defaultapplicationmenu_local al INNER JOIN tab_cb_language_status l ON al.language_id = l._id AND l.col_language = '"
                 . $inDb->escape($inLanguage) . "') ON a._id = al.parent_id";
        $query = $query . " WHERE a._id = '" . $inDb->escape($inId) . "'";
        $query = $inDb->select_format($query, 0, -1, $inLock);

        $result = $inDb->query($query);

        if (($result === false) || ($inDb->num_rows($result) != 1)) {
            if ($result) {
                $inDb->free_result($result);
            }

            return false;
        }

        $rawdata = $inDb->fetch_assoc($result);
        $inDb->free_result($result);

        $grnDefaultApplicationMenu = new GrnDefaultApplicationMenu($rawdata);

        return $grnDefaultApplicationMenu;
    }

    /**
     * @param $inDataObj
     *
     * @return GrnDefaultApplicationMenu[]
     */
    public function getDefaultApplicationMenuList($inDataObj)
    {
        /** @var CB_DatabaseConnection $inDb */
        $inDb = $inDataObj['db'];
        $inLock = (array_key_exists('lock', $inDataObj))
            ? $inDataObj['lock'] : null;
        $inOffset = (array_key_exists('offset', $inDataObj))
            ? $inDataObj['offset'] : null;
        $inLimit = (array_key_exists('limit', $inDataObj))
            ? $inDataObj['limit'] : null;
        $inLanguage = (array_key_exists('language', $inDataObj))
            ? $inDataObj['language'] : null;

        $query
            = "SELECT a._id, a.col_app_id, a.col_icon_file, a.col_icon_location";
        $query = $query . ", a.col_list_index, a.col_location";
        $query = $query . ", IFNULL(al.col_name, a.col_name) AS col_name";
        $query = $query . ", a.col_name_format";
        $query = $query
                 . " FROM tab_grn_defaultapplicationmenu a LEFT JOIN (tab_grn_defaultapplicationmenu_local al INNER JOIN tab_cb_language_status l ON al.language_id = l._id AND l.col_language = '"
                 . $inDb->escape($inLanguage) . "') ON a._id = al.parent_id";
        $query = $query . " ORDER BY a.col_list_index, a._id";

        if ( ! is_null($inOffset)) {
            $query = $inDb->select_format($query, $inOffset, $inLimit, $inLock);
        }

        $result = $inDb->query($query);

        if ($result === false) {
            //Throw Query Error
            $inDb->throwError(['query' => 'query failed: ' . $query]);
        }

        $grnDefaultApplicationMenuArray = [];
        while ($rawdata = $inDb->fetch_assoc($result)) {
            $grnDefaultApplicationMenu
                = new GrnDefaultApplicationMenu($rawdata);
            $grnDefaultApplicationMenuArray[] = $grnDefaultApplicationMenu;
        }
        $inDb->free_result($result);
        $result = false;

        return $grnDefaultApplicationMenuArray;
    }
}
