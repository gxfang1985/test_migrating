<?php
/**
 * Get password from console and validate it.
 *
 * The main role of this script is validate the password which is used for
 * database user.
 */

$stdin = fopen('php://stdin', 'r');
$password = trim(fgets($stdin));
fclose($stdin);
if (preg_match("/^[a-zA-Z0-9_]{6,10}$/", $password)) {
    echo $password;
}
