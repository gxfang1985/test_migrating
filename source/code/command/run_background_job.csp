<?php

use grn\grn\background\BackgroundJobEvent;
use grn\grn\background\BackgroundJobName as JobName;

use grn\grn\background\BackgroundJobDAO;
use grn\notification\background\job\Notifier;
use grn\mail\background\job\MailAutomation;

$event = new BackgroundJobEvent(new BackgroundJobDAO(cb_get_app_db("job")));
$event->addJobListener(JobName::SEND_NOTIFICATION, new Notifier());
$event->addJobListener(JobName::MAIL_AUTOMATIC_EVENT, new MailAutomation());
$event->run();
