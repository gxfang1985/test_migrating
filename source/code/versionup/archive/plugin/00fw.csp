<?php

global $G_config_common;
$version = $G_config_common->get('Global', 'version');
if (strlen($version) === 0 || is_null($version)) {
    exit(10);
}

$version_file = cb_basedir() . "/common.ini";
$updater = new CB_ModuleUpdater($G_appid, $G_cgi_dir, $G_web_dir,
    $version_file, 'fw');
$id = $updater->getModuleId();

$version = $G_update_config->get('version', $id);
$updater->doInstall($version);


